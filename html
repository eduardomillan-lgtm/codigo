    document.getElementById('modal-rentabilidad').classList.add('active');
    document.body.classList.add('modal-open');
    
    setTimeout(() => {
        cargarRentabilidadAgentes();
    }, 100);
}

// ============================================
// 🔧 FUNCIONES DE APOYO PARA LOS NUEVOS MODELOS
// ============================================

function calcularModeloEconomico() {
    const gciObjetivo = parseFloat(document.getElementById('me-gci-objetivo').value);
    const convCapt = parseFloat(document.getElementById('me-conv-capt-excl').value) / 100;
    const convVenta = parseFloat(document.getElementById('me-conv-excl-venta').value) / 100;
    const gciMedio = parseFloat(document.getElementById('me-gci-medio').value);
    const citasSemana = parseFloat(document.getElementById('me-citas-semana').value);
    const semanasAno = parseFloat(document.getElementById('me-semanas-ano').value);

    // Cálculos
    const ventasNecesarias = Math.ceil(gciObjetivo / gciMedio);
    const exclusivasNecesarias = Math.ceil(ventasNecesarias / convVenta);
    const citasNecesarias = Math.ceil(exclusivasNecesarias / convCapt);
    const citasAnuales = citasSemana * semanasAno;
    const semanasParaCitas = citasNecesarias / citasSemana;

    const html = `
        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 20px;">
            <div style="padding: 20px; background: rgba(0,255,136,0.1); border-radius: 10px; text-align: center;">
                <div style="font-size: 2.5em; font-weight: 900; color: var(--color-accent-good);">${ventasNecesarias}</div>
                <div style="margin-top: 10px; color: var(--color-text-secondary);">Ventas Necesarias</div>
            </div>
            <div style="padding: 20px; background: rgba(255,215,0,0.1); border-radius: 10px; text-align: center;">
                <div style="font-size: 2.5em; font-weight: 900; color: var(--color-accent-warn);">${exclusivasNecesarias}</div>
                <div style="margin-top: 10px; color: var(--color-text-secondary);">Exclusivas Necesarias</div>
            </div>
            <div style="padding: 20px; background: rgba(102,126,234,0.1); border-radius: 10px; text-align: center;">
                <div style="font-size: 2.5em; font-weight: 900; color: var(--color-accent-ia);">${citasNecesarias}</div>
                <div style="margin-top: 10px; color: var(--color-text-secondary);">Citas Captación Necesarias</div>
            </div>
            <div style="padding: 20px; background: rgba(255,68,68,0.1); border-radius: 10px; text-align: center;">
                <div style="font-size: 2.5em; font-weight: 900; color: var(--color-accent-bad);">${citasAnuales.toFixed(0)}</div>
                <div style="margin-top: 10px; color: var(--color-text-secondary);">Citas Anuales al Ritmo Actual</div>
            </div>
        </div>
        <div style="margin-top: 30px; padding: 20px; background: var(--color-surface); border-radius: 10px;">
            <h4 style="color: var(--color-secondary); margin-bottom: 15px;">📊 Análisis</h4>
            <p><strong>Necesitas:</strong> ${semanasParaCitas.toFixed(1)} semanas de citas a tu ritmo actual de ${citasSemana} citas/semana</p>
            <p><strong>Conversión Total:</strong> ${(convCapt * convVenta * 100).toFixed(1)}% (de cita a venta)</p>
            <p><strong>Cada venta genera:</strong> ${gciMedio.toLocaleString('es-ES')}€ de GCI</p>
            ${citasAnuales >= citasNecesarias ? 
                '<p style="color: var(--color-accent-good); font-weight: 700;">✅ Tu ritmo de citas es SUFICIENTE para alcanzar el objetivo</p>' :
                '<p style="color: var(--color-accent-bad); font-weight: 700;">⚠️ Necesitas aumentar tu ritmo de citas en ' + ((citasNecesarias - citasAnuales) / semanasAno).toFixed(1) + ' citas/semana</p>'
            }
        </div>
    `;
    
    document.getElementById('resultados-modelo-economico').style.display = 'block';
    document.getElementById('me-resultados-content').innerHTML = html;
}

let datosPresupuestoGlobal = null; // Variable para guardar los datos al hacer clic

function cargarModeloPresupuestario() {
    const ctx = document.getElementById('chart-presupuestario');
    
    // Mostrar "Cargando..." visualmente (opcional, ayuda a saber que está pensando)
    if (chartInstances['presupuestario']) {
        chartInstances['presupuestario'].clear(); 
    }

    // LLAMADA AL SERVIDOR (Google Script)
    google.script.run
      .withSuccessHandler(function(datos) {
          console.log("DATOS RECIBIDOS DEL SERVIDOR:", datos); // <--- Mira la consola (F12) para ver esto
          datosPresupuestoGlobal = datos; 
          
          // Calcular Beneficio Neto (GCI - GastosVentas - GastosOperativos)
          const beneficio = datos.gciMensual.map((gci, i) => {
              return gci - datos.gastosVentas[i] - datos.gastosOperativos[i];
          });

          if (chartInstances['presupuestario']) chartInstances['presupuestario'].destroy();

          chartInstances['presupuestario'] = new Chart(ctx, {
              type: 'bar',
              data: {
                  labels: datos.meses,
                  datasets: [
                      {
                          label: 'GCI Real (Ingresos)',
                          data: datos.gciMensual,
                          backgroundColor: 'rgba(0, 255, 136, 0.3)',
                          borderColor: 'rgba(0, 255, 136, 1)',
                          borderWidth: 1,
                          stack: 'Ingresos',
                          order: 1
                      },
                      {
                          label: 'Comisiones (Gastos Ventas)', 
                          data: datos.gastosVentas,
                          backgroundColor: 'rgba(255, 215, 0, 0.8)', // AMARILLO
                          stack: 'Gastos'
                      },
                      {
                          label: 'Gastos Operativos', 
                          data: datos.gastosOperativos,
                          backgroundColor: 'rgba(255, 68, 68, 0.8)', // ROJO
                          stack: 'Gastos'
                      },
                      {
                          label: 'Beneficio Neto',
                          data: beneficio,
                          type: 'line',
                          borderColor: 'rgba(102, 126, 234, 1)', // AZUL
                          borderWidth: 3,
                          pointBackgroundColor: '#fff',
                          pointRadius: 4,
                          order: 0 
                      }
                  ]
              },
              options: {
                  responsive: true,
                  maintainAspectRatio: false,
                  interaction: {
                      mode: 'index',
                      intersect: false,
                  },
                  plugins: {
                      legend: { position: 'top' },
                      tooltip: {
                          callbacks: {
                              footer: () => ' 👇 Haz click para ver detalles'
                          }
                      }
                  },
                  onClick: (evt, elements) => {
                      // Lógica del click para ver detalles
                      const chart = chartInstances['presupuestario'];
                      const points = chart.getElementsAtEventForMode(evt, 'nearest', { intersect: true }, true);

                      if (points.length) {
                          const firstPoint = points[0];
                          const mesIndex = firstPoint.index;
                          const datasetIndex = firstPoint.datasetIndex;
                          
                          // datasetIndex 1 = Comisiones, datasetIndex 2 = Operativos
                          if (datasetIndex === 1) {
                              mostrarDetalleGastos('VENTAS', mesIndex);
                          } else if (datasetIndex === 2) {
                              mostrarDetalleGastos('OPERATIVOS', mesIndex);
                          }
                      }
                  },
                  scales: {
                      y: { beginAtZero: true, stacked: true }, // Apilado
                      x: { stacked: true } 
                  }
              }
          });
      })
      .withFailureHandler(function(error) {
          console.error("Error:", error);
          alert("Error al cargar datos: " + error.message);
      })
      .obtenerDatosPresupuestarios(new Date().getFullYear());
}

function mostrarDetalleGastos(tipo, mesIndex) {
    if (!datosPresupuestoGlobal) return;
    
    const meses = ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'];
    const nombreMes = meses[mesIndex];
    
    let listaItems = [];
    let titulo = "";
    
    if (tipo === 'VENTAS') {
        titulo = ` 💰  Comisiones Pagadas - ${nombreMes}`;
        listaItems = datosPresupuestoGlobal.detallesVentas[mesIndex];
    } else {
        titulo = ` 💸  Gastos Operativos - ${nombreMes}`;
        listaItems = datosPresupuestoGlobal.detallesOperativos[mesIndex];
    }

    document.getElementById('detalle-titulo').innerText = titulo;
    const tbody = document.getElementById('detalle-tabla-body');
    tbody.innerHTML = '';
    
    let total = 0;

    if (listaItems.length === 0) {
        tbody.innerHTML = '<tr><td colspan="4" style="text-align:center;">No hay registros.</td></tr>';
    } else {
        listaItems.forEach(item => {
            total += item.importe;
            tbody.innerHTML += `
                <tr>
                    <td>${item.fecha}</td>
                    <td><strong>${item.concepto}</strong></td>
                    <td>${item.desc}</td>
                    <td style="text-align:right;">${item.importe.toLocaleString('es-ES', {minimumFractionDigits: 2})} €</td>
                </tr>
            `;
        });
    }
    
    document.getElementById('detalle-total').innerText = total.toLocaleString('es-ES', {style:'currency', currency:'EUR'});
    
    // Mostrar el modal pequeño sobre el grande
    document.getElementById('modal-detalle-gasto-mes').classList.add('active');
}

function guardarOrganigrama() {
    const organigrama = {
        teamLeader: document.getElementById('org-team-leader').value,
        liderVentas: document.getElementById('org-lider-ventas').value,
        liderCaptacion: document.getElementById('org-lider-captacion').value,
        agentes: [
            document.getElementById('org-agente-1').value,
            document.getElementById('org-agente-2').value,
            document.getElementById('org-agente-3').value,
            document.getElementById('org-agente-4').value
        ]
    };
    
    console.log('💾 Guardando organigrama:', organigrama);
    
    google.script.run
        .withSuccessHandler(function(respuesta) {
            alert('✅ Organigrama guardado correctamente');
            cerrarModal();
        })
        .withFailureHandler(function(error) {
            alert('❌ Error al guardar: ' + error.message);
        })
        .guardarOrganigrama(organigrama);
}

// --- FACTURACIÓN PASADA ---
function calcularFacturacionPasada() {
    const fuentes = ['ei', 'ref', 'bd', 'pros', 'port'];
    fuentes.forEach(f => {
        const v = parseFloat(document.getElementById(`fp-${f}-hon-v`).value)||0;
        const c = parseFloat(document.getElementById(`fp-${f}-hon-c`).value)||0;
        document.getElementById(`fp-${f}-total`).innerText = (v+c).toLocaleString('es-ES') + "€";
    });
}

// --- FUNCIÓN DE CARGA DE DATOS (RENTABILIDAD) ---
function cargarRentabilidadAgentes() {
    const container = document.getElementById('rentabilidad-content');
    // Leer estado del interruptor
    const toggle = document.getElementById('rentabilidad-toggle');
    const esProyeccion = toggle ? toggle.checked : false;
    
    container.innerHTML = '<div class="loader"></div><div>Calculando rentabilidad...</div>';

    google.script.run
        .withSuccessHandler(function(res) {
            if (!res || !res.success || !res.datos || res.datos.length === 0) {
                container.innerHTML = '<div style="padding:20px; text-align:center;">No hay datos financieros disponibles.</div>';
                return;
            }

            // 1. CALCULAR TOTALES GENERALES
            const totalFijo = res.datos.reduce((s, d) => s + (d[2] || 0), 0);
            const totalComision = res.datos.reduce((s, d) => s + (d[3] || 0), 0);
            const totalGCI = res.datos.reduce((s, d) => s + (d[6] || 0), 0);
            const totalBeneficio = res.datos.reduce((s, d) => s + (d[9] || 0), 0);
            const roiGlobal = totalGCI > 0 ? ((totalBeneficio / totalGCI) * 100) : 0;
            
            // 2. PREPARAR DATOS PARA GRÁFICOS
            const labels = res.datos.map(d => d[1]); // Nombres
            const dataGCI = res.datos.map(d => d[6]); // GCI
            const dataCoste = res.datos.map(d => d[2] + d[3]); // Fijo + Variable
            const dataValorHora = res.datos.map(d => d[8]); // Valor Hora
            
            // 3. GENERAR HTML CON RESUMEN EJECUTIVO
            let html = `
                <div style="text-align:right; font-size:0.9em; color:var(--color-accent-good); margin-bottom:15px; font-weight:700;">
                    📊 VISTA: ${res.modo || 'A LA FECHA'}
                </div>
                
                <!-- RESUMEN EJECUTIVO -->
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 15px; margin-bottom: 25px;">
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center;">
                        <div style="font-size: 0.85em; color: #aaa;">💰 GCI Total</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: var(--color-accent-good);">
                            ${totalGCI.toLocaleString('es-ES', {maximumFractionDigits:0})}€
                        </div>
                    </div>
                    
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center;">
                        <div style="font-size: 0.85em; color: #aaa;">💸 Comisiones</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: #ff6b6b;">
                            ${totalComision.toLocaleString('es-ES', {maximumFractionDigits:0})}€
                        </div>
                        <div style="font-size: 0.75em; color: #aaa; margin-top: 3px;">
                            ${totalGCI > 0 ? ((totalComision / totalGCI) * 100).toFixed(1) : 0}% del GCI
                        </div>
                    </div>
                    
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center;">
                        <div style="font-size: 0.85em; color: #aaa;">🏢 Sueldos Fijos</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: #ffd700;">
                            ${totalFijo.toLocaleString('es-ES', {maximumFractionDigits:0})}€
                        </div>
                    </div>
                    
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center; border: 2px solid ${totalBeneficio >= 0 ? '#00ff88' : '#ff6b6b'};">
                        <div style="font-size: 0.85em; color: ${totalBeneficio >= 0 ? '#00ff88' : '#ff6b6b'};">✅ Beneficio Neto</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: ${totalBeneficio >= 0 ? '#00ff88' : '#ff6b6b'};">
                            ${totalBeneficio.toLocaleString('es-ES', {maximumFractionDigits:0})}€
                        </div>
                        <div style="font-size: 0.75em; color: ${totalBeneficio >= 0 ? '#00ff88' : '#ff6b6b'}; margin-top: 3px; font-weight: 700;">
                            ROI: ${roiGlobal.toFixed(1)}%
                        </div>
                    </div>
                </div>
                
                <!-- TABLA DETALLADA -->
                <div class="tabla-container">
                    <table class="tabla" style="font-size: 0.9em;">
                        <thead>
                            <tr style="background: rgba(255,255,255,0.05);">
                                <th style="text-align:left;">AGENTE</th>
                                <th>FIJO</th>
                                <th>COMISIÓN</th>
                                <th>% COMIS.</th>
                                <th style="color:var(--color-accent-bad)">COSTE TOTAL</th>
                                <th style="color:var(--color-accent-good)">GCI</th>
                                <th>BENEFICIO</th>
                                <th>ROI %</th>
                                <th>COSTE/H</th>
                                <th>VALOR/H</th>
                            </tr>
                        </thead>
                        <tbody>
            `;

            res.datos.forEach(fila => {
                const costeTotal = fila[2] + fila[3];
                const pctComision = fila[6] > 0 ? ((fila[3] / fila[6]) * 100) : 0;
                const claseBeneficio = fila[9] >= 0 ? 'ratio-excelente' : 'ratio-bajo';
                const colorROI = fila[7] >= 50 ? '#00ff88' : fila[7] >= 30 ? '#ffd700' : '#ff6b6b';
                
                html += `
                    <tr>
                        <td style="text-align:left; font-weight:bold;">${fila[1]}</td>
                        <td>${(fila[2]||0).toLocaleString('es-ES', {maximumFractionDigits:0})}€</td>
                        <td style="color:#ff6b6b; font-weight:700;">${(fila[3]||0).toLocaleString('es-ES', {maximumFractionDigits:0})}€</td>
                        <td style="text-align:center; color:#ff6b6b;">${pctComision.toFixed(1)}%</td>
                        <td style="color:#ff6b6b;">${costeTotal.toLocaleString('es-ES', {maximumFractionDigits:0})}€</td>
                        <td style="color:#00ff88; font-weight:bold;">${(fila[6]||0).toLocaleString('es-ES', {maximumFractionDigits:0})}€</td>
                        <td class="${claseBeneficio}" style="font-weight:900; font-size:1.05em;">${(fila[9]||0).toLocaleString('es-ES', {maximumFractionDigits:0})}€</td>
                        <td style="color:${colorROI}; font-weight:700; text-align:center;">${(fila[7]||0).toFixed(0)}%</td>
                        <td style="text-align:center;">${(fila[5]||0).toFixed(1)}€</td>
                        <td style="font-weight:bold; text-align:center;">${(fila[8]||0).toFixed(1)}€</td>
                    </tr>
                `;
            });

            html += `
                        </tbody>
                        <tfoot>
                            <tr style="background: var(--color-surface); font-weight: bold; font-size: 1.05em; border-top: 2px solid rgba(255,255,255,0.2);">
                                <td style="text-align:left;">TOTAL</td>
                                <td>${totalFijo.toLocaleString('es-ES', {maximumFractionDigits:0})}€</td>
                                <td style="color:#ff6b6b; font-weight:900;">${totalComision.toLocaleString('es-ES', {maximumFractionDigits:0})}€</td>
                                <td style="text-align:center; color:#ff6b6b;">${totalGCI > 0 ? ((totalComision / totalGCI) * 100).toFixed(1) : 0}%</td>
                                <td style="color:#ff6b6b;">${(totalFijo + totalComision).toLocaleString('es-ES', {maximumFractionDigits:0})}€</td>
                                <td style="color:#00ff88; font-weight:900;">${totalGCI.toLocaleString('es-ES', {maximumFractionDigits:0})}€</td>
                                <td style="color:${totalBeneficio >= 0 ? '#00ff88' : '#ff6b6b'}; font-weight:900;">${totalBeneficio.toLocaleString('es-ES', {maximumFractionDigits:0})}€</td>
                                <td style="color:${roiGlobal >= 50 ? '#00ff88' : roiGlobal >= 30 ? '#ffd700' : '#ff6b6b'}; font-weight:900; text-align:center;">${roiGlobal.toFixed(1)}%</td>
                                <td colspan="2"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                
                <!-- NOTAS EXPLICATIVAS -->
                <div style="background: rgba(255,255,255,0.05); padding: 15px; border-radius: 10px; margin-top: 20px; font-size: 0.85em; line-height: 1.8;">
                    <strong>📊 Fórmulas:</strong><br>
                    • <strong>Comisión</strong> = GCI × % Comisión (dato real de cada transacción)<br>
                    • <strong>Coste Total</strong> = Sueldo Fijo + Comisiones<br>
                    • <strong>Beneficio Neto</strong> = GCI - Coste Total<br>
                    • <strong>ROI</strong> = (Beneficio Neto / GCI) × 100<br><br>
                    <strong>🎯 Interpretación ROI:</strong><br>
                    <span style="color:#00ff88;">≥50%</span>: Excelente | 
                    <span style="color:#ffd700;">30-50%</span>: Aceptable | 
                    <span style="color:#ff6b6b;"><30%</span>: Revisar
                </div>
            `;
            
            container.innerHTML = html;

            // 3. LLAMADA A LA FUNCIÓN DE DIBUJO (CORREGIDA)
            setTimeout(() => {
                renderizarGraficosRentabilidad(labels, dataGCI, dataCoste, dataValorHora);
            }, 100);
        })
        .withFailureHandler(function(err){
            console.error("Error Rentabilidad:", err);
            container.innerHTML = `<div style="color:red">Error: ${err.message}</div>`;
        })
        .calcularRentabilidadAgentes(new Date().getFullYear(), esProyeccion);
}

// --- FUNCIÓN DE DIBUJO DE GRÁFICOS (PEGA ESTO TAMBIÉN) ---
function renderizarGraficosRentabilidad(labels, dataGCI, dataCoste, dataValorHora) {
    // GRÁFICO 1: GCI vs COSTE
    const ctx1 = document.getElementById('chart-rentabilidad-barras');
    if (ctx1) {
        if (chartInstances.rent1) chartInstances.rent1.destroy();
        
        chartInstances.rent1 = new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'GCI Generado',
                        data: dataGCI,
                        backgroundColor: 'rgba(0, 255, 136, 0.6)', // Verde KW
                        borderColor: '#00ff88',
                        borderWidth: 1
                    },
                    {
                        label: 'Coste Total',
                        data: dataCoste,
                        backgroundColor: 'rgba(255, 68, 68, 0.6)', // Rojo Alerta
                        borderColor: '#ff4444',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { position: 'top' } },
                scales: { y: { beginAtZero: true } },
                onClick: () => ampliarGrafico('rent1', '💰 Detalle GCI vs Coste')
            }
        });
    }

    // GRÁFICO 2: VALOR POR HORA
    const ctx2 = document.getElementById('chart-rentabilidad-valor');
    if (ctx2) {
        if (chartInstances.rent2) chartInstances.rent2.destroy();

        chartInstances.rent2 = new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Valor Generado / Hora (€)',
                    data: dataValorHora,
                    backgroundColor: 'rgba(102, 126, 234, 0.6)', // Azul IA
                    borderColor: '#667eea',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                indexAxis: 'y', // Gráfico horizontal
                plugins: { legend: { display: false } },
                scales: { x: { beginAtZero: true } },
                onClick: () => ampliarGrafico('rent2', '⚡ Ranking de Eficiencia (€/hora)')
            }
        });
    }
}
function mostrarModalRegistrarGasto() {
    
    document.getElementById('modal-registrar-gasto').classList.add('active');
    document.body.classList.add('modal-open');
    document.getElementById('form-gasto').reset();
    document.getElementById('gasto-fecha').valueAsDate = new Date();
}
function guardarGasto(event) {
    event.preventDefault();
    const datos = {
        fecha: document.getElementById('gasto-fecha').value,
        partida: document.getElementById('gasto-partida').value,
        descripcion: document.getElementById('gasto-descripcion').value,
        importe: document.getElementById('gasto-importe').value
    };

    google.script.run
        .withSuccessHandler(function(res) {
            alert(' ✅ ' + res.message);
            mostrarModalRegistrarGasto(); // Limpiar y seguir registrando
        })
        .withFailureHandler(function(err) {
            mostrarError(err);
        })
        .guardarGastoOperativo(datos);
}
// --- ESTA ES LA FUNCIÓN QUE FALTA ---
function mostrarNotificacion(mensaje, esError = false) {
    const x = document.getElementById("app-notification");
    if (!x) return;
    
    x.textContent = mensaje;
    x.className = "show " + (esError ? "error" : "success");
    
    // Ocultar después de 3 segundos
    setTimeout(function(){ 
        x.className = x.className.replace("show", ""); 
        // Limpiar clases de color
        setTimeout(() => { x.className = ""; }, 300);
    }, 3000);
}
// --- FUNCIÓN PARA EXPORTAR A CSV ---
function exportarTransaccionesCSV() {
    const transacciones = window.transaccionesGlobales || [];
    
    // Verificar si hay datos
    if (transacciones.length === 0) {
        mostrarNotificacion("No hay datos para exportar", true);
        return;
    }

    // 1. Aplicar el filtro actual (si hay uno seleccionado)
    let datosExportar = transacciones;
    // Aseguramos que la variable filtroMesTransacciones exista, si no, asumimos 'todos'
    const filtroActual = (typeof filtroMesTransacciones !== 'undefined') ? filtroMesTransacciones : 'todos';

    if (filtroActual !== 'todos') {
        datosExportar = transacciones.filter(t => new Date(t.fecha).getMonth() == filtroActual);
    }

    if (datosExportar.length === 0) {
        mostrarNotificacion("La selección actual está vacía", true);
        return;
    }

    // 2. Crear cabeceras CSV
    let csvContent = "Fecha,Agente,Tipo,Lado,Descripcion,GCI,Comision\n";

    // 3. Recorrer datos y formatear
    datosExportar.forEach(t => {
        const fechaObj = new Date(t.fecha);
        const fechaStr = !isNaN(fechaObj) ? fechaObj.toLocaleDateString('es-ES') : t.fecha;
        
        // Limpiar descripción de comas para no romper las columnas del CSV
        const descLimpia = (t.descripcion || "").replace(/,/g, " "); 
        const tipoLimpio = (t.tipo || "").replace(/,/g, " ");

        const fila = [
            fechaStr,
            t.agente,
            tipoLimpio,
            t.lado,
            descLimpia,
            (t.gci || 0).toFixed(2),      // Exportamos número limpio
            (t.comision || 0).toFixed(2)
        ].join(",");
        
        csvContent += fila + "\n";
    });

    // 4. Generar descarga con codificación correcta para tildes (BOM)
    const blob = new Blob(["\uFEFF" + csvContent], { type: 'text/csv;charset=utf-8;' });
    const link = document.createElement("a");
    const url = URL.createObjectURL(blob);
    
    // Nombre del archivo dinámico según el mes
    const nombresMeses = ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'];
    const sufijo = (filtroActual !== 'todos' && nombresMeses[filtroActual]) ? `_${nombresMeses[filtroActual]}` : '_anual';
    
    link.setAttribute("href", url);
    link.setAttribute("download", `transacciones_kw${sufijo}.csv`);
    
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
    
    mostrarNotificacion(" ✅  CSV descargado correctamente");
}
// --- LOGICA ORGANIGRAMA 7 NIVELES ---

function mostrarModalModeloOrganizativo() {
    abrirModalEncima('modal-modelo-organizativo');
    
    // Cargamos datos del servidor
    google.script.run.withSuccessHandler(jsonTexto => {
        if (jsonTexto) {
            try {
                const datos = JSON.parse(jsonTexto);
                // Recorremos todos los inputs del modal y si hay dato guardado, lo ponemos
                const inputs = document.querySelectorAll('.org-role-input');
                inputs.forEach(input => {
                    if (datos[input.id]) {
                        input.value = datos[input.id];
                    }
                });
            } catch (e) {
                console.error("Error al parsear organigrama", e);
            }
        }
    }).obtenerOrganigramaJSON();
}

function guardarOrganigramaCompleto() {
    const inputs = document.querySelectorAll('.org-role-input');
    const datos = {};
    
    // Guardamos cada casilla con su ID como clave
    inputs.forEach(input => {
        if(input.value.trim() !== "") {
            datos[input.id] = input.value;
        }
    });

    const jsonTexto = JSON.stringify(datos);
    mostrarNotificacion("💾 Guardando Organigrama...");

    google.script.run
        .withSuccessHandler(() => {
            mostrarNotificacion("✅ Modelo Organizativo Guardado");
            // Opcional: cerrarModalSuperior('modal-modelo-organizativo');
        })
        .withFailureHandler(err => mostrarNotificacion("❌ Error: " + err.message, true))
        .guardarOrganigramaJSON(jsonTexto);
}
// ==========================================
// 🧠 NUEVAS HERRAMIENTAS DE CONSULTORÍA
// ==========================================

// --- GESTIÓN DE DATOS HISTÓRICOS COMPLETOS ---
let datosHistoricosCache = null;

function mostrarModalFacturacionPasada() {
    abrirModalEncima('modal-facturacion-pasada');
    
    // Pedir datos al servidor
    google.script.run.withSuccessHandler(json => {
        if(json) {
            const data = JSON.parse(json);
            datosHistoricosCache = data;
            
            // Rellenar Totales Ampliados
            const t = data.totales || {};
            document.getElementById('hist-citas').value = t.citas || 0;
            document.getElementById('hist-exclusivas').value = t.exclusivas || 0;
            document.getElementById('hist-abierto').value = t.abierto || 0;
            document.getElementById('hist-citas-comp').value = t.citasComp || 0;
            document.getElementById('hist-visitas').value = t.visitas || 0;
            document.getElementById('hist-exclusivas-comp').value = t.exclusivasComp || 0;
            document.getElementById('hist-ventas').value = t.ventas || 0;
            document.getElementById('hist-gci').value = t.gci || 0;
            
            // Rellenar Fuentes
            ['ei','ref','bd','pros','port'].forEach(f => {
                document.getElementById(`fp-${f}-capt`).value = data.fuentes?.[f]?.capt || 0;
                document.getElementById(`fp-${f}-gci`).value = data.fuentes?.[f]?.gci || 0;
            });
            calcularPorcentajesFuentes();
        }
    }).obtenerDatosHistoricosJSON();
}

function guardarDatosHistoricos() {
    const datos = {
        totales: {
            citas: parseFloat(document.getElementById('hist-citas').value)||0,
            exclusivas: parseFloat(document.getElementById('hist-exclusivas').value)||0,
            abierto: parseFloat(document.getElementById('hist-abierto').value)||0,
            citasComp: parseFloat(document.getElementById('hist-citas-comp').value)||0,
            visitas: parseFloat(document.getElementById('hist-visitas').value)||0,
            exclusivasComp: parseFloat(document.getElementById('hist-exclusivas-comp').value)||0,
            ventas: parseFloat(document.getElementById('hist-ventas').value)||0,
            gci: parseFloat(document.getElementById('hist-gci').value)||0
        },
        fuentes: {}
    };
    
    ['ei','ref','bd','pros','port'].forEach(f => {
        datos.fuentes[f] = {
            capt: parseFloat(document.getElementById(`fp-${f}-capt`).value)||0,
            gci: parseFloat(document.getElementById(`fp-${f}-gci`).value)||0
        };
    });

    google.script.run.withSuccessHandler(() => {
        mostrarNotificacion("✅ Histórico Guardado");
        datosHistoricosCache = datos; 
        // Si estamos en la pestaña gráficos, recargar para ver cambios
        if(vistaActualGerente === 'graficos') renderizarGraficosGenerales();
    }).guardarDatosHistoricosJSON(JSON.stringify(datos));
}

function calcularPorcentajesFuentes() {
    let totalGCI = 0, totalCapt = 0;
    ['ei','ref','bd','pros','port'].forEach(f => {
        totalGCI += parseFloat(document.getElementById(`fp-${f}-gci`).value)||0;
        totalCapt += parseFloat(document.getElementById(`fp-${f}-capt`).value)||0;
    });
    
    ['ei','ref','bd','pros','port'].forEach(f => {
        const gci = parseFloat(document.getElementById(`fp-${f}-gci`).value)||0;
        const pct = totalGCI > 0 ? (gci / totalGCI * 100).toFixed(1) : 0;
        document.getElementById(`fp-${f}-pct`).innerText = pct + '%';
    });
    
    document.getElementById('fp-total-gci').innerText = totalGCI.toLocaleString() + '€';
    document.getElementById('fp-total-capt').innerText = totalCapt;
}

function crearGraficoYoYCompleto(act, meta) {
    const ctx = document.getElementById('chart-yoy-completo');
    if(!ctx) return;
    if(chartInstances.yoy) chartInstances.yoy.destroy();

    // Etiquetas de las 8 métricas
    const labels = ['Citas Capt', 'Excl Venta', 'Abierto', 'Citas Comp', 'Excl Comp', 'Visitas', 'Ventas', 'GCI (€)'];
    
    // Datos Reales 2025
    const dataAct = [
        act.citasCapt, act.exclVenta, act.captAbierto, 
        act.citasComp, act.exclComp, act.visitas, act.ventas, act.gci
    ];
    
    // Datos Esperados 2024 (Ponderados)
    const dataMeta = [
        meta.citasCapt, meta.exclVenta, meta.captAbierto,
        meta.citasComp, meta.exclComp, meta.visitas, meta.ventas, meta.gci
    ];

    chartInstances.yoy = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [
                {
                    label: 'Real 2025',
                    data: dataAct,
                    backgroundColor: (c) => c.dataIndex === 7 ? 'rgba(102, 126, 234, 0.8)' : 'rgba(0, 255, 136, 0.8)', // GCI azul, resto verde
                    yAxisID: 'y'
                },
                {
                    label: 'Meta YTD (2024)',
                    data: dataMeta,
                    backgroundColor: 'rgba(255, 255, 255, 0.2)', // Gris transparente
                    borderColor: '#aaa',
                    borderWidth: 1,
                    yAxisID: 'y'
                }
            ]
        },
        options: {
            responsive: true, maintainAspectRatio: false,
            scales: {
                y: { // Eje Izquierdo: UNIDADES
                    type: 'linear', position: 'left', 
                    beginAtZero: true,
                    title: { display: true, text: 'Volumen (Citas, Exclusivas...)' }
                },
                y1: { // Eje Derecho: DINERO (Solo para GCI)
                    type: 'linear', position: 'right',
                    beginAtZero: true,
                    grid: { drawOnChartArea: false }, // Ocultar rejilla para limpiar
                    ticks: { callback: (v) => v/1000 + 'k€' } // Formato miles
                }
            },
            plugins: {
                tooltip: {
                    callbacks: {
                        label: (c) => {
                            let val = c.raw;
                            if(c.dataIndex === 7) return c.dataset.label + ': ' + val.toLocaleString() + '€'; // Formato euro para GCI
                            return c.dataset.label + ': ' + Math.round(val);
                        }
                    }
                }
            }
        }
    });

    // Truco: Asignar GCI al eje derecho manualmente
    // Chart.js necesita configuración específica por dataset para ejes múltiples mixed,
    // pero como usamos 'bar' para todo, lo forzamos visualmente con la escala.
    // (Para simplificar, si los valores de GCI son muy altos, aplastarán a los otros.
    //  Mejor separar GCI visualmente o usar logarítmica. He optado por separar GCI al final).
    
    // *MEJORA:* Vamos a sacar GCI a su propio eje en el dataset config:
    chartInstances.yoy.data.datasets[0].yAxisID = 'y'; // Default
    chartInstances.yoy.data.datasets[1].yAxisID = 'y';
    
    // Asignamos el último dato (GCI) al eje y1 en tiempo de ejecución? 
    // No, Chart.js no deja mezclar ejes en el mismo array de datos fácilmente.
    // SOLUCIÓN ELEGANTE: Normalizar o separar. 
    // Como GCI es dinero y el resto unidades, visualmente el GCI se verá enorme y el resto plano.
    // Vamos a ocultar la barra de GCI en el eje Y normal y crear un dataset SOLO para GCI en Y1.
    
    chartInstances.yoy.data.datasets = [
        {
            label: 'Actividad (Unidades)',
            data: [act.citasCapt, act.exclVenta, act.captAbierto, act.citasComp, act.exclComp, act.visitas, act.ventas, null], // GCI null
            backgroundColor: 'rgba(0, 255, 136, 0.7)',
            yAxisID: 'y'
        },
        {
            label: 'Actividad 2024',
            data: [meta.citasCapt, meta.exclVenta, meta.captAbierto, meta.citasComp, meta.exclComp, meta.visitas, meta.ventas, null],
            backgroundColor: 'rgba(255, 255, 255, 0.1)',
            borderColor: '#aaa', borderWidth: 1,
            yAxisID: 'y'
        },
        {
            label: 'GCI 2025 (€)',
            data: [null, null, null, null, null, null, null, act.gci], // Solo GCI
            backgroundColor: 'rgba(102, 126, 234, 0.8)',
            yAxisID: 'y1'
        },
        {
            label: 'GCI 2024 (€)',
            data: [null, null, null, null, null, null, null, meta.gci],
            backgroundColor: 'rgba(102, 126, 234, 0.2)',
            borderColor: '#667eea', borderWidth: 1,
            yAxisID: 'y1'
        }
    ];
    chartInstances.yoy.update();
}

// 2. MATRIZ SKILL VS WILL (CORREGIDA VISUALIZACIÓN)
function crearGraficoSkillWill() {
    const ctx = document.getElementById('chart-skill-will');
    if(!ctx) return;
    if(chartInstances.skillWill) chartInstances.skillWill.destroy();

    // Calcular medias para los cuadrantes
    let totalAct = 0, totalConv = 0, count = 0;
    const dataPoints = datosFiltrados.map(d => {
        const act = parseFloat(d.ratios.actividadTotal) || 0;
        // Conversión Cita->Exclusiva es la métrica de habilidad más pura
        const conv = parseFloat(d.ratios.conversionCaptacion) || 0; 
        totalAct += act;
        totalConv += conv;
        count++;
        return { x: act, y: conv, agent: d.agente };
    });

    const avgAct = count > 0 ? totalAct / count : 10;
    const avgConv = count > 0 ? totalConv / count : 10;

    chartInstances.skillWill = new Chart(ctx, {
        type: 'scatter',
        data: {
            datasets: [{
                label: 'Agentes',
                data: dataPoints,
                backgroundColor: (c) => {
                    const v = c.raw;
                    if(!v) return '#ccc';
                    if(v.x >= avgAct && v.y >= avgConv) return '#00ff88'; // Estrella
                    if(v.x >= avgAct && v.y < avgConv) return '#ffd700';  // Trabajador
                    if(v.x < avgAct && v.y >= avgConv) return '#667eea';  // Talento
                    return '#ff4444'; // Alerta
                },
                pointRadius: 15,
                pointHoverRadius: 20,
                pointBorderColor: '#fff',
                pointBorderWidth: 2
            }]
        },
        options: {
            responsive: true, maintainAspectRatio: false,
            plugins: {
                legend: { display: false },
                tooltip: {
                    callbacks: {
                        label: (ctx) => `${ctx.raw.agent}: Actividad ${ctx.raw.x} / Conversión ${ctx.raw.y}%`
                    }
                },
                annotation: { // Líneas de cuadrante
                    annotations: {
                        lineV: { type: 'line', xMin: avgAct, xMax: avgAct, borderColor: 'rgba(255,255,255,0.3)', borderWidth: 2, borderDash: [5,5] },
                        lineH: { type: 'line', yMin: avgConv, yMax: avgConv, borderColor: 'rgba(255,255,255,0.3)', borderWidth: 2, borderDash: [5,5] }
                    }
                }
            },
            scales: {
                x: { title: { display: true, text: 'VOLUNTAD (Actividad Total)', color:'#aaa' }, grid: { color: '#222' }, min: 0 },
                y: { title: { display: true, text: 'HABILIDAD (Conversión %)', color:'#aaa' }, grid: { color: '#222' }, min: 0 }
            },
            onClick: () => ampliarGrafico('skillWill', 'Matriz Habilidad vs Voluntad')
        }
    });
}
// ==========================================
// 🛠️ REPARACIÓN: LÓGICA HISTÓRICO (SWITCH)
// ==========================================

// 1. Variable Global de Estado (¡Importante!)
var modoHist = 'ANUAL'; // Usamos var para asegurar que sea global

// 2. Función del Interruptor (Switch)
function setModoHistorico(modo) {
    console.log("Cambio de modo histórico a:", modo); // Para depurar
    modoHist = modo;
    
    // Botones
    const btnA = document.getElementById('btn-hist-anual');
    const btnM = document.getElementById('btn-hist-mensual');
    
    // Paneles
    const panA = document.getElementById('hist-panel-anual');
    const panM = document.getElementById('hist-panel-mensual');
    
    if (!btnA || !btnM || !panA || !panM) {
        console.error("Error: No se encuentran los elementos del modal histórico.");
        return;
    }

    if (modo === 'ANUAL') {
        // Activar Anual
        btnA.style.background = 'var(--color-primary)'; 
        btnA.style.opacity = '1';
        btnM.style.background = 'transparent'; 
        btnM.style.opacity = '0.5';
        
        panA.style.display = 'block';
        panM.style.display = 'none';
    } else {
        // Activar Mensual
        btnM.style.background = 'var(--color-primary)'; 
        btnM.style.opacity = '1';
        btnA.style.background = 'transparent'; 
        btnA.style.opacity = '0.5';
        
        panM.style.display = 'block';
        panA.style.display = 'none';
        
        // Generar la tabla si está vacía
        const tbody = document.getElementById('hist-tabla-body');
        if(tbody && tbody.children.length === 0) {
            generarTablaMensualVacia();
        }
    }
}

// 3. Generador de Tabla Mensual (Por si faltaba)
function generarTablaMensualVacia() {
    const meses = ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'];
    const tbody = document.getElementById('hist-tabla-body');
    if (!tbody) return;
    
    let html = '';
    meses.forEach((m, i) => {
        html += `<tr>
            <td style="font-weight:bold; background:var(--color-surface);">${m}</td>
            <td><input type="number" class="form-input hm-gci" data-m="${i}" placeholder="0" style="width:80px"></td>
            <td><input type="number" class="form-input hm-ventas" data-m="${i}" placeholder="0" style="width:50px"></td>
            <td><input type="number" class="form-input hm-citasCapt" data-m="${i}" placeholder="0" style="width:50px"></td>
            <td><input type="number" class="form-input hm-exclVenta" data-m="${i}" placeholder="0" style="width:50px"></td>
            <td><input type="number" class="form-input hm-captAbierto" data-m="${i}" placeholder="0" style="width:50px"></td>
            <td><input type="number" class="form-input hm-citasComp" data-m="${i}" placeholder="0" style="width:50px"></td>
            <td><input type="number" class="form-input hm-exclComp" data-m="${i}" placeholder="0" style="width:50px"></td>
            <td><input type="number" class="form-input hm-visitas" data-m="${i}" placeholder="0" style="width:50px"></td>
        </tr>`;
    });
    tbody.innerHTML = html;
}

// 4. Función de Apertura (Asegurando que carga agentes)
function mostrarModalCargaHistorico() {
    abrirModalEncima('modal-carga-historico');
    poblarSelectAgentes('hist-agente-select');
    // Por defecto anual
    setModoHistorico('ANUAL');
    // Intentar cargar datos si ya hay agente seleccionado por defecto
    setTimeout(cargarDatosHistoricosExistentes, 500);
}

function cargarDatosHistoricosExistentes() {
    const id = document.getElementById('hist-agente-select').value;
    const anio = document.getElementById('hist-anio').value;
    if(!id) return;

    // Limpiar inputs anuales
    ['gci','ventas','citasCapt','exclVenta','captAbierto','citasComp','exclComp','visitas'].forEach(k => {
        document.getElementById('ha-'+k).value = '';
    });
    
    google.script.run.withSuccessHandler(res => {
        if(res.modo !== 'VACIO') {
            setModoHistorico(res.modo);
            if(res.modo === 'ANUAL') {
                const v = res.valores;
                document.getElementById('ha-gci').value = v.gci;
                document.getElementById('ha-ventas').value = v.ventas;
                document.getElementById('ha-citasCapt').value = v.citasCapt;
                document.getElementById('ha-exclVenta').value = v.exclVenta;
                document.getElementById('ha-captAbierto').value = v.captAbierto;
                document.getElementById('ha-citasComp').value = v.citasComp;
                document.getElementById('ha-exclComp').value = v.exclComp;
                document.getElementById('ha-visitas').value = v.visitas;
            } else {
                // Rellenar tabla mensual
                const filas = document.getElementById('hist-tabla-body').rows;
                res.valores.forEach((val, i) => {
                    if(filas[i]) {
                        filas[i].querySelector('.hm-gci').value = val.gci;
                        filas[i].querySelector('.hm-ventas').value = val.ventas;
                        filas[i].querySelector('.hm-citasCapt').value = val.citasCapt;
                        filas[i].querySelector('.hm-exclVenta').value = val.exclVenta;
                        filas[i].querySelector('.hm-captAbierto').value = val.captAbierto;
                        filas[i].querySelector('.hm-citasComp').value = val.citasComp;
                        filas[i].querySelector('.hm-exclComp').value = val.exclComp;
                        filas[i].querySelector('.hm-visitas').value = val.visitas;
                    }
                });
            }
            mostrarNotificacion("Datos históricos cargados");
        }
    }).obtenerHistoricoAgente(id, anio);
}

function guardarHistoricoAgenteHTML() {
    const id = document.getElementById('hist-agente-select').value;
    const nombre = document.getElementById('hist-agente-select').selectedOptions[0].text;
    const anio = document.getElementById('hist-anio').value;

    const datos = { idAgente: id, nombre: nombre, anio: anio, modo: modoHist, valores: {} };

    if(modoHist === 'ANUAL') {
        datos.valores = {
            gci: document.getElementById('ha-gci').value,
            ventas: document.getElementById('ha-ventas').value,
            citasCapt: document.getElementById('ha-citasCapt').value,
            exclVenta: document.getElementById('ha-exclVenta').value,
            captAbierto: document.getElementById('ha-captAbierto').value,
            citasComp: document.getElementById('ha-citasComp').value,
            exclComp: document.getElementById('ha-exclComp').value,
            visitas: document.getElementById('ha-visitas').value
        };
    } else {
        const lista = [];
        const filas = document.getElementById('hist-tabla-body').rows;
        for(let i=0; i<12; i++) {
            lista.push({
                gci: filas[i].querySelector('.hm-gci').value,
                ventas: filas[i].querySelector('.hm-ventas').value,
                citasCapt: filas[i].querySelector('.hm-citasCapt').value,
                exclVenta: filas[i].querySelector('.hm-exclVenta').value,
                captAbierto: filas[i].querySelector('.hm-captAbierto').value,
                citasComp: filas[i].querySelector('.hm-citasComp').value,
                exclComp: filas[i].querySelector('.hm-exclComp').value,
                visitas: filas[i].querySelector('.hm-visitas').value
            });
        }
        datos.valores = lista;
    }

    mostrarNotificacion("💾 Guardando...");
    google.script.run.withSuccessHandler(() => {
        mostrarNotificacion("✅ Histórico actualizado");
        cerrarModalSuperior('modal-carga-historico');
    }).guardarHistoricoAgente(datos);
}
// ============================================
// RENDERIZAR EMBUDOS
// ============================================
function renderizarEmbudos(datos) {
    const html = `
        <div class="section">
            <div class="section-title">🎯 Análisis de Embudos de Conversión</div>
            
            <div id="analisis-embudos" style="background: var(--color-surface); padding: 20px; border-radius: 15px; margin-bottom: 20px; border-left: 4px solid #667eea;">
                <div style="font-size: 1.2em; font-weight: 700; margin-bottom: 10px;">🔍 Cargando análisis...</div>
            </div>
            
            <div class="charts-grid" style="grid-template-columns: repeat(auto-fit, minmax(450px, 1fr)); gap: 25px;">
                
                <!-- EMBUDO CAPTACIÓN -->
                <div class="chart-container" style="height: 500px;">
                    <div class="chart-title">📞 Embudo de Captación</div>
                    <canvas id="chart-embudo-captacion"></canvas>
                    <div id="leyenda-captacion" style="margin-top: 15px; font-size: 0.9em; line-height: 1.6;"></div>
                </div>
                
                <!-- EMBUDO VISUAL COMPLETO -->
                <div class="chart-container" style="height: 500px;">
                    <div class="chart-title">🎯 Embudo Visual Completo</div>
                    <canvas id="chart-embudo-visual"></canvas>
                    <div id="leyenda-visual" style="margin-top: 15px; font-size: 0.9em; line-height: 1.6; text-align: center; color: #aaa;"></div>
                </div>
                
                <!-- EMBUDO COMPRADORES -->
                <div class="chart-container" style="height: 500px;">
                    <div class="chart-title">🏡 Embudo de Compradores</div>
                    <canvas id="chart-embudo-compradores"></canvas>
                    <div id="leyenda-compradores" style="margin-top: 15px; font-size: 0.9em; line-height: 1.6;"></div>
                </div>
                
                <!-- EMBUDO CIERRE -->
                <div class="chart-container" style="height: 500px;">
                    <div class="chart-title">💰 Embudo de Cierre</div>
                    <canvas id="chart-embudo-cierre"></canvas>
                    <div id="leyenda-cierre" style="margin-top: 15px; font-size: 0.9em; line-height: 1.6;"></div>
                </div>
            </div>
        </div>
    `;
    
    document.getElementById('vistaContenido').innerHTML = html;
    
    const filtros = calcularFiltrosPeriodo(periodoActual, 'gerente');
    
    google.script.run
        .withSuccessHandler(function(resultado) {
            if (!resultado.success) {
                document.getElementById('vistaContenido').innerHTML = `<div class="section"><div style="text-align:center; padding:50px; color:#ff6b6b;">❌ Error: ${resultado.error}</div></div>`;
                return;
            }
            
            const e = resultado.embudos;
            
            // 📊 ANÁLISIS GLOBAL
            let analisisHTML = '<div style="font-size: 1.2em; font-weight: 700; margin-bottom: 10px;">🔍 Diagnóstico de Embudos</div>';
            
            // Identificar cuellos de botella
            const conversiones = [
                { nombre: 'Llamadas → Citas Captación', valor: parseFloat(e.captacion.conversion_llamadas_citas), tipo: 'captacion' },
                { nombre: 'Citas → Exclusivas Venta', valor: parseFloat(e.captacion.conversion_citas_exclusivas), tipo: 'captacion' },
                { nombre: 'Exclusivas → Captaciones', valor: parseFloat(e.captacion.conversion_exclusivas_captaciones), tipo: 'captacion' },
                { nombre: 'Leads → Citas Compradores', valor: parseFloat(e.compradores.conversion_leads_citas), tipo: 'compradores' },
                { nombre: 'Citas → Exclusivas Comprador', valor: parseFloat(e.compradores.conversion_citas_exclusivas), tipo: 'compradores' },
                { nombre: 'Exclusivas → Visitas', valor: parseFloat(e.compradores.conversion_exclusivas_visitas), tipo: 'compradores' },
                { nombre: 'Exclusivas → Ventas', valor: parseFloat(e.cierre.conversion_exclusivas_ventas), tipo: 'cierre' }
            ];
            
            const minConversion = conversiones.reduce((min, c) => c.valor < min.valor ? c : min);
            const maxConversion = conversiones.reduce((max, c) => c.valor > max.valor ? c : max);
            
            analisisHTML += `
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; margin-top: 15px;">
                    <div style="background: rgba(255, 68, 68, 0.1); padding: 15px; border-radius: 10px; border-left: 4px solid #ff4444;">
                        <div style="font-size: 0.9em; color: #ff6b6b; margin-bottom: 5px;">🚨 CUELLO DE BOTELLA</div>
                        <div style="font-weight: 700;">${minConversion.nombre}</div>
                        <div style="font-size: 1.5em; color: #ff4444;">${minConversion.valor}%</div>
                        <div style="font-size: 0.85em; margin-top: 5px;">Esta es tu conversión más baja. Enfoca aquí tus esfuerzos.</div>
                    </div>
                    
                    <div style="background: rgba(0, 255, 136, 0.1); padding: 15px; border-radius: 10px; border-left: 4px solid #00ff88;">
                        <div style="font-size: 0.9em; color: #00c060; margin-bottom: 5px;">✅ FORTALEZA</div>
                        <div style="font-weight: 700;">${maxConversion.nombre}</div>
                        <div style="font-size: 1.5em; color: #00ff88;">${maxConversion.valor}%</div>
                        <div style="font-size: 0.85em; margin-top: 5px;">Tu mejor conversión. Replica este éxito.</div>
                    </div>
                    
                    <div style="background: rgba(255, 215, 0, 0.1); padding: 15px; border-radius: 10px; border-left: 4px solid #ffd700;">
                        <div style="font-size: 0.9em; color: #ffd700; margin-bottom: 5px;">💰 EFICIENCIA</div>
                        <div style="font-weight: 700;">GCI por Exclusiva</div>
                        <div style="font-size: 1.5em; color: #ffd700;">${e.cierre.totalExclusivas > 0 ? (e.cierre.totalGCI / e.cierre.totalExclusivas).toFixed(0) : 0}€</div>
                        <div style="font-size: 0.85em; margin-top: 5px;">Ticket medio: ${e.cierre.ticketPromedio}€</div>
                    </div>
                </div>
            `;
            
            document.getElementById('analisis-embudos').innerHTML = analisisHTML;
            
            // 1. EMBUDO CAPTACIÓN
            new Chart(document.getElementById('chart-embudo-captacion'), {
                type: 'bar',
                data: {
                    labels: ['Llamadas', 'Citas Capt.', 'Exclusivas V.', 'Capt. Abierto'],
                    datasets: [{
                        label: 'Volumen',
                        data: [
                            e.captacion.etapa1_llamadas, 
                            e.captacion.etapa2_citasCaptacion, 
                            e.captacion.etapa3_exclusivasVenta, 
                            e.captacion.etapa4_captacionesAbierto
                        ],
                        backgroundColor: ['#667eea', '#ff6b6b', '#ffd700', '#00ff88'],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        title: {
                            display: true,
                            text: `${e.captacion.conversion_llamadas_citas}% → ${e.captacion.conversion_citas_exclusivas}% → ${e.captacion.conversion_exclusivas_captaciones}%`,
                            color: '#fff',
                            font: { size: 14 }
                        }
                    },
                    scales: {
                        x: { 
                            ticks: { color: '#fff' }, 
                            grid: { color: 'rgba(255,255,255,0.1)' } 
                        },
                        y: { 
                            ticks: { color: '#fff', font: { size: 12, weight: 'bold' } }, 
                            grid: { display: false } 
                        }
                    }
                }
            });
            
            document.getElementById('leyenda-captacion').innerHTML = `
                <strong>📊 Interpretación:</strong><br>
                • <span style="color: ${e.captacion.conversion_llamadas_citas < 30 ? '#ff4444' : '#00ff88'}">Llamadas → Citas: ${e.captacion.conversion_llamadas_citas}%</span> ${e.captacion.conversion_llamadas_citas < 30 ? '⚠️ Bajo' : '✅ Bueno'}<br>
                • <span style="color: ${e.captacion.conversion_citas_exclusivas < 50 ? '#ff4444' : '#00ff88'}">Citas → Exclusivas: ${e.captacion.conversion_citas_exclusivas}%</span> ${e.captacion.conversion_citas_exclusivas < 50 ? '⚠️ Bajo' : '✅ Bueno'}<br>
                • Benchmark: 30% llamadas→citas, 60% citas→exclusivas
            `;
            
            // 2. EMBUDO VISUAL COMPLETO
            const totalExclusivas = e.captacion.etapa3_exclusivasVenta + e.compradores.etapa3_exclusivasComprador;
            
            new Chart(document.getElementById('chart-embudo-visual'), {
                type: 'bar',
                data: {
                    labels: ['1. Llamadas', '2. Citas', '3. Exclusivas', '4. Cierres'],
                    datasets: [{
                        label: 'Embudo Global',
                        data: [
                            e.captacion.etapa1_llamadas,
                            e.captacion.etapa2_citasCaptacion,
                            totalExclusivas,
                            e.cierre.transacciones
                        ],
                        backgroundColor: [
                            'rgba(102, 126, 234, 0.8)',
                            'rgba(255, 107, 107, 0.8)',
                            'rgba(255, 215, 0, 0.8)',
                            'rgba(0, 255, 136, 0.8)'
                        ],
                        borderWidth: 3,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        title: {
                            display: true,
                            text: 'Visión Global del Proceso Completo',
                            color: '#fff',
                            font: { size: 16, weight: 'bold' }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const val = context.parsed.x;
                                    const labels = ['Llamadas', 'Citas', 'Exclusivas', 'Cierres'];
                                    return `${labels[context.dataIndex]}: ${val}`;
                                }
                            }
                        }
                    },
                    scales: {
                        x: { 
                            ticks: { color: '#fff', font: { size: 12 } }, 
                            grid: { color: 'rgba(255,255,255,0.1)' }
                        },
                        y: { 
                            ticks: { color: '#fff', font: { size: 14, weight: 'bold' } }, 
                            grid: { display: false }
                        }
                    }
                }
            });
            
            document.getElementById('leyenda-visual').innerHTML = `
                📌 De ${e.captacion.etapa1_llamadas} llamadas iniciales a ${e.cierre.transacciones} transacciones cerradas<br>
                🎯 Tasa de cierre global: ${e.captacion.etapa1_llamadas > 0 ? ((e.cierre.transacciones / e.captacion.etapa1_llamadas) * 100).toFixed(2) : 0}%
            `;
            
            // 3. EMBUDO COMPRADORES
            new Chart(document.getElementById('chart-embudo-compradores'), {
                type: 'bar',
                data: {
                    labels: ['Leads', 'Citas Comp.', 'Exclusivas C.', 'Casas Enseñ.'],
                    datasets: [{
                        label: 'Volumen',
                        data: [
                            e.compradores.etapa1_leadsCompradores, 
                            e.compradores.etapa2_citasCompradores, 
                            e.compradores.etapa3_exclusivasComprador, 
                            e.compradores.etapa4_casasEnsenadas
                        ],
                        backgroundColor: ['#00c4ff', '#667eea', '#ffd700', '#00ff88'],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        title: {
                            display: true,
                            text: `${e.compradores.conversion_leads_citas}% → ${e.compradores.conversion_citas_exclusivas}% → ${e.compradores.conversion_exclusivas_visitas}%`,
                            color: '#fff',
                            font: { size: 14 }
                        }
                    },
                    scales: {
                        x: { 
                            ticks: { color: '#fff' }, 
                            grid: { color: 'rgba(255,255,255,0.1)' } 
                        },
                        y: { 
                            ticks: { color: '#fff', font: { size: 12, weight: 'bold' } }, 
                            grid: { display: false } 
                        }
                    }
                }
            });
            
            document.getElementById('leyenda-compradores').innerHTML = `
                <strong>📊 Interpretación:</strong><br>
                • <span style="color: ${e.compradores.conversion_leads_citas < 25 ? '#ff4444' : '#00ff88'}">Leads → Citas: ${e.compradores.conversion_leads_citas}%</span> ${e.compradores.conversion_leads_citas < 25 ? '⚠️ Bajo' : '✅ Bueno'}<br>
                • <span style="color: ${e.compradores.conversion_citas_exclusivas < 40 ? '#ff4444' : '#00ff88'}">Citas → Exclusivas: ${e.compradores.conversion_citas_exclusivas}%</span> ${e.compradores.conversion_citas_exclusivas < 40 ? '⚠️ Bajo' : '✅ Bueno'}<br>
                • Benchmark: 30% leads→citas, 50% citas→exclusivas
            `;
            
            // 4. EMBUDO CIERRE
            new Chart(document.getElementById('chart-embudo-cierre'), {
                type: 'bar',
                data: {
                    labels: ['Total Exclusivas', 'Transacciones', 'GCI Total', 'Vol. Negocio (k€)'],
                    datasets: [{
                        label: 'Valor',
                        data: [
                            e.cierre.totalExclusivas, 
                            e.cierre.transacciones, 
                            e.cierre.totalGCI, 
                            e.cierre.volumenNegocio / 1000
                        ],
                        backgroundColor: ['#ffd700', '#00ff88', '#00ff88', '#00c4ff'],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        title: {
                            display: true,
                            text: `Conv. ${e.cierre.conversion_exclusivas_ventas}% | Ticket: ${e.cierre.ticketPromedio}€`,
                            color: '#fff',
                            font: { size: 14 }
                        }
                    },
                    scales: {
                        x: { 
                            ticks: { color: '#fff' }, 
                            grid: { color: 'rgba(255,255,255,0.1)' } 
                        },
                        y: { 
                            ticks: { color: '#fff', font: { size: 12, weight: 'bold' } }, 
                            grid: { display: false } 
                        }
                    }
                }
            });
            
            document.getElementById('leyenda-cierre').innerHTML = `
                <strong>📊 Interpretación:</strong><br>
                • <span style="color: ${e.cierre.conversion_exclusivas_ventas < 30 ? '#ff4444' : '#00ff88'}">Conversión a Venta: ${e.cierre.conversion_exclusivas_ventas}%</span> ${e.cierre.conversion_exclusivas_ventas < 30 ? '⚠️ Bajo (objetivo: 30%+)' : '✅ Excelente'}<br>
                • Ticket Promedio: ${e.cierre.ticketPromedio}€<br>
                • Volumen de Negocio: ${(e.cierre.volumenNegocio / 1000).toFixed(0)}k€
            `;
            
        })
        .withFailureHandler(function(error) {
            document.getElementById('vistaContenido').innerHTML = `<div class="section"><div style="text-align:center; padding:50px; color:#ff6b6b;">❌ Error al cargar embudos: ${error.message}</div></div>`;
        })
        .obtenerDatosEmbudo(filtros);
}

// ============================================
// RENDERIZAR CORRELACIONES
// ============================================
function function renderizarCorrelaciones(datos) {
    const html = `
        <div class="section">
            <div class="section-title">🔬 Laboratorio de Correlaciones (Pearson)</div>
            
            <!-- SELECTOR MÚLTIPLE DE VARIABLES -->
            <div style="background: var(--color-surface); padding: 20px; border-radius: 15px; margin-bottom: 20px;">
                <div style="font-weight: 700; margin-bottom: 15px;">🎯 Análisis Personalizado</div>
                
                <!-- Modo Simple: 2 Variables -->
                <div id="modo-simple" style="margin-bottom: 15px;">
                    <div style="display: grid; grid-template-columns: 1fr 1fr auto; gap: 15px; align-items: end;">
                        <div class="form-grupo">
                            <label class="form-label">Variable X</label>
                            <select id="corr-var-x" class="form-select">
                                <option value="llamadas">Llamadas</option>
                                <option value="citasCaptacion">Citas Captación</option>
                                <option value="exclusivasVenta">Exclusivas Venta</option>
                                <option value="exclusivasComprador">Exclusivas Comprador</option>
                                <option value="captacionesAbierto">Captaciones Abierto</option>
                                <option value="citasCompradores">Citas Compradores</option>
                                <option value="casasEnsenadas">Casas Enseñadas</option>
                                <option value="leadsCompradores">Leads Compradores</option>
                                <option value="gci" selected>GCI</option>
                                <option value="volumenNegocio">Volumen Negocio</option>
                            </select>
                        </div>
                        <div class="form-grupo">
                            <label class="form-label">Variable Y</label>
                            <select id="corr-var-y" class="form-select">
                                <option value="llamadas" selected>Llamadas</option>
                                <option value="citasCaptacion">Citas Captación</option>
                                <option value="exclusivasVenta">Exclusivas Venta</option>
                                <option value="exclusivasComprador">Exclusivas Comprador</option>
                                <option value="captacionesAbierto">Captaciones Abierto</option>
                                <option value="citasCompradores">Citas Compradores</option>
                                <option value="casasEnsenadas">Casas Enseñadas</option>
                                <option value="leadsCompradores">Leads Compradores</option>
                                <option value="gci">GCI</option>
                                <option value="volumenNegocio">Volumen Negocio</option>
                            </select>
                        </div>
                        <button class="btn btn-primary-action" onclick="analizarCorrelacionPersonalizada()">🔍 Analizar</button>
                    </div>
                </div>
                
                <!-- Modo Múltiple: Hasta 5 Variables -->
                <div id="modo-multiple" style="display: none;">
                    <div style="margin-bottom: 10px;">
                        <label class="form-label">Selecciona Variables (máximo 5)</label>
                        <div id="selector-multiple" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 10px;">
                            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                                <input type="checkbox" value="llamadas" class="var-checkbox"> Llamadas
                            </label>
                            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                                <input type="checkbox" value="citasCaptacion" class="var-checkbox"> Citas Captación
                            </label>
                            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                                <input type="checkbox" value="exclusivasVenta" class="var-checkbox"> Exclusivas Venta
                            </label>
                            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                                <input type="checkbox" value="exclusivasComprador" class="var-checkbox"> Exclusivas Comprador
                            </label>
                            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                                <input type="checkbox" value="captacionesAbierto" class="var-checkbox"> Captaciones Abierto
                            </label>
                            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                                <input type="checkbox" value="citasCompradores" class="var-checkbox"> Citas Compradores
                            </label>
                            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                                <input type="checkbox" value="casasEnsenadas" class="var-checkbox"> Casas Enseñadas
                            </label>
                            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                                <input type="checkbox" value="leadsCompradores" class="var-checkbox"> Leads Compradores
                            </label>
                            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                                <input type="checkbox" value="gci" class="var-checkbox"> GCI
                            </label>
                            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                                <input type="checkbox" value="volumenNegocio" class="var-checkbox"> Volumen Negocio
                            </label>
                        </div>
                    </div>
                    <button class="btn btn-primary-action" onclick="analizarCorrelacionMultiple()">📊 Analizar Múltiples</button>
                </div>
                
                <!-- Toggle entre modos -->
                <div style="margin-top: 15px; text-align: center;">
                    <button class="btn" id="btn-toggle-modo" onclick="toggleModoAnalisis()">
                        🔄 Cambiar a Análisis Múltiple
                    </button>
                </div>
            </div>
            
            <!-- GRÁFICO SCATTER PERSONALIZADO -->
            <div id="scatter-personalizado" style="display: none; margin-bottom: 30px;">
                <div class="chart-container" style="height: 400px;">
                    <div class="chart-title" id="scatter-title">Análisis de Correlación</div>
                    <canvas id="chart-scatter-custom"></canvas>
                </div>
                <div id="interpretacion-scatter" style="background: var(--color-surface); padding: 15px; border-radius: 10px; margin-top: 15px;"></div>
            </div>
            
            <!-- GRÁFICOS MÚLTIPLES -->
            <div id="graficos-multiples" style="display: none; margin-bottom: 30px;"></div>
            
            <!-- TOP 10 CORRELACIONES -->
            <div id="correlaciones-top10" style="margin-bottom: 30px;"></div>
            
            <!-- GUÍA DE INTERPRETACIÓN -->
            <div style="background: var(--color-surface); padding: 20px; border-radius: 15px; margin-bottom: 20px; border-left: 4px solid #667eea;">
                <div style="font-weight: 700; margin-bottom: 10px;">📚 Guía de Interpretación</div>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
                    <div>
                        <div style="color: #00ff88; font-weight: 700;">✅ Correlación Alta (0.7 - 1.0)</div>
                        <div style="font-size: 0.9em; margin-top: 5px;">Relación MUY FUERTE. Si aumenta X, aumenta Y casi siempre.</div>
                    </div>
                    <div>
                        <div style="color: #ffd700; font-weight: 700;">⚠️ Correlación Media (0.4 - 0.7)</div>
                        <div style="font-size: 0.9em; margin-top: 5px;">Relación MODERADA. Hay conexión pero otros factores influyen.</div>
                    </div>
                    <div>
                        <div style="color: #ff6b6b; font-weight: 700;">❌ Correlación Baja (0.0 - 0.4)</div>
                        <div style="font-size: 0.9em; margin-top: 5px;">Relación DÉBIL o inexistente. Variables independientes.</div>
                    </div>
                    <div>
                        <div style="color: #667eea; font-weight: 700;">🔄 Correlación Negativa (-0.4 a -1.0)</div>
                        <div style="font-size: 0.9em; margin-top: 5px;">Si X aumenta, Y DISMINUYE (inversa).</div>
                    </div>
                </div>
            </div>
            
            <!-- MAPA DE CALOR -->
            <div class="chart-container" style="height: 600px;">
                <div class="chart-title">🗺️ Mapa de Calor - Matriz Completa</div>
                <canvas id="chart-correlaciones-heatmap"></canvas>
            </div>
        </div>
    `;
    
    document.getElementById('vistaContenido').innerHTML = html;
    
    const filtros = calcularFiltrosPeriodo(periodoActual, 'gerente');
    
    window.datosCorrelacionGlobal = null;
    
    google.script.run
        .withSuccessHandler(function(resultado) {
            if (resultado.success) {
                window.datosCorrelacionGlobal = resultado;
                
                // TOP 10 con clic
                let top10Html = '<div style="font-size: 1.3em; font-weight: 700; margin-bottom: 15px;">🏆 Top 10 Correlaciones (Haz clic para ver gráfico)</div>';
                top10Html += '<div style="display:grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap:15px;">';
                
                resultado.topCorrelaciones.forEach((c, idx) => {
                    let color, badge, interpretacion;
                    const absVal = Math.abs(c.valor);
                    
                    if (absVal >= 0.7) {
                        color = '#00ff88';
                        badge = '✅ MUY FUERTE';
                        interpretacion = c.valor > 0 ? 'Aumentan juntas' : 'Inversa';
                    } else if (absVal >= 0.4) {
                        color = '#ffd700';
                        badge = '⚠️ MODERADA';
                        interpretacion = 'Relación notable';
                    } else {
                        color = '#ff6b6b';
                        badge = '❌ DÉBIL';
                        interpretacion = 'Poca relación';
                    }
                    
                    top10Html += `
                        <div onclick="analizarCorrelacionDirecta('${c.kpi1}', '${c.kpi2}')" 
                             style="background:var(--color-surface); padding:15px; border-radius:10px; border-left:4px solid ${color}; cursor: pointer; transition: all 0.3s;"
                             onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='0 10px 30px rgba(0,0,0,0.3)';"
                             onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none';">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 5px;">
                                <div style="font-size:0.85em; color:#aaa;">#${idx+1}</div>
                                <div style="font-size:0.75em; color:${color}; font-weight: 700;">${badge}</div>
                            </div>
                            <div style="font-weight:700; margin:5px 0; font-size: 0.95em;">${kpiNames[c.kpi1] || c.kpi1} ↔ ${kpiNames[c.kpi2] || c.kpi2}</div>
                            <div style="font-size:1.8em; color:${color}; margin: 5px 0;">${c.valor.toFixed(3)}</div>
                            <div style="font-size:0.8em; color:#aaa;">${interpretacion}</div>
                            <div style="font-size:0.75em; color:#667eea; margin-top: 8px;">👆 Clic para ver gráfico</div>
                        </div>
                    `;
                });
                top10Html += '</div>';
                document.getElementById('correlaciones-top10').innerHTML = top10Html;
                
                // HEATMAP con colores adaptativos
                const colors = getChartColors();
                const dataPoints = [];
                resultado.kpis.forEach((kpi1, i) => {
                    resultado.kpis.forEach((kpi2, j) => {
                        dataPoints.push({ x: j, y: i, v: resultado.matriz[kpi1][kpi2] });
                    });
                });
                
                new Chart(document.getElementById('chart-correlaciones-heatmap'), {
                    type: 'scatter',
                    data: {
                        datasets: [{
                            label: 'Correlación',
                            data: dataPoints.map(p => ({ x: p.x, y: p.y, r: Math.abs(p.v) * 20 })),
                            backgroundColor: dataPoints.map(p => {
                                const val = Math.abs(p.v);
                                if (val >= 0.7) return colors.successAlpha;
                                if (val >= 0.4) return colors.warningAlpha;
                                return 'rgba(150,150,150,0.5)';
                            })
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        const point = dataPoints[context.dataIndex];
                                        return `${kpiNames[resultado.kpis[point.y]] || resultado.kpis[point.y]} ↔ ${kpiNames[resultado.kpis[point.x]] || resultado.kpis[point.x]}: ${point.v.toFixed(3)}`;
                                    }
                                }
                            }
                        },
                        scales: {
                            x: {
                                type: 'linear',
                                position: 'bottom',
                                ticks: {
                                    callback: (val) => kpiNames[resultado.kpis[val]] || resultado.kpis[val] || '',
                                    color: colors.textColor,
                                    maxRotation: 45,
                                    minRotation: 45
                                },
                                grid: { color: colors.gridColor }
                            },
                            y: {
                                type: 'linear',
                                ticks: {
                                    callback: (val) => kpiNames[resultado.kpis[val]] || resultado.kpis[val] || '',
                                    color: colors.textColor
                                },
                                grid: { color: colors.gridColor }
                            }
                        }
                    }
                });
            } else {
                document.getElementById('vistaContenido').innerHTML = `<div class="section"><div style="text-align:center; padding:50px; color:#ff6b6b;">❌ Error: ${resultado.error}</div></div>`;
            }
        })
        .withFailureHandler(function(error) {
            document.getElementById('vistaContenido').innerHTML = `<div class="section"><div style="text-align:center; padding:50px; color:#ff6b6b;">❌ Error: ${error.message}</div></div>`;
        })
        .obtenerDatosCorrelacion(filtros);
}
function toggleModoAnalisis() {
    const modoSimple = document.getElementById('modo-simple');
    const modoMultiple = document.getElementById('modo-multiple');
    const btnToggle = document.getElementById('btn-toggle-modo');
    
    if (modoSimple.style.display === 'none') {
        modoSimple.style.display = 'block';
        modoMultiple.style.display = 'none';
        btnToggle.textContent = '🔄 Cambiar a Análisis Múltiple';
    } else {
        modoSimple.style.display = 'none';
        modoMultiple.style.display = 'block';
        btnToggle.textContent = '🔄 Cambiar a Análisis Simple';
    }
}

// Función auxiliar para análisis directo (clic en Top 10)
function analizarCorrelacionDirecta(varX, varY) {
    // Asegurarse de que estamos en modo simple
    document.getElementById('modo-simple').style.display = 'block';
    document.getElementById('modo-multiple').style.display = 'none';
    document.getElementById('btn-toggle-modo').textContent = '🔄 Cambiar a Análisis Múltiple';
    
    // Establecer valores en los selectores
    document.getElementById('corr-var-x').value = varX;
    document.getElementById('corr-var-y').value = varY;
    
    // Ejecutar análisis
    analizarCorrelacionPersonalizada();
}
function analizarCorrelacionMultiple() {
    const checkboxes = document.querySelectorAll('.var-checkbox:checked');
    const variables = Array.from(checkboxes).map(cb => cb.value);
    
    if (variables.length < 2) {
        mostrarNotificacion('⚠️ Selecciona al menos 2 variables', 'error');
        return;
    }
    
    if (variables.length > 5) {
        mostrarNotificacion('⚠️ Máximo 5 variables', 'error');
        return;
    }
    
    // Ocultar scatter simple, mostrar múltiples
    document.getElementById('scatter-personalizado').style.display = 'none';
    document.getElementById('graficos-multiples').style.display = 'block';
    
    // Generar HTML para múltiples gráficos
    let html = '<div style="font-size: 1.3em; font-weight: 700; margin-bottom: 20px;">📊 Análisis Multivariable</div>';
    html += '<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)); gap: 20px;">';
    
    // Generar todas las combinaciones (2 a 2)
    for (let i = 0; i < variables.length; i++) {
        for (let j = i + 1; j < variables.length; j++) {
            const varX = variables[i];
            const varY = variables[j];
            html += `
                <div class="chart-container" style="height: 350px;">
                    <div class="chart-title">${kpiNames[varX]} vs ${kpiNames[varY]}</div>
                    <canvas id="chart-multi-${i}-${j}"></canvas>
                </div>
            `;
        }
    }
    
    html += '</div>';
    document.getElementById('graficos-multiples').innerHTML = html;
    
    // Generar gráficos
    setTimeout(() => {
        const colors = getChartColors();
        const indexMap = {
            'llamadas': 11, 'citasCaptacion': 4, 'exclusivasVenta': 5,
            'exclusivasComprador': 6, 'captacionesAbierto': 7, 'citasCompradores': 8,
            'casasEnsenadas': 9, 'leadsCompradores': 10, 'gci': 12, 'volumenNegocio': 13
        };
        
        for (let i = 0; i < variables.length; i++) {
            for (let j = i + 1; j < variables.length; j++) {
                const varX = variables[i];
                const varY = variables[j];
                const idxX = indexMap[varX];
                const idxY = indexMap[varY];
                
                // Extraer datos
                const scatterData = [];
                if (window.datosGlobales && Array.isArray(window.datosGlobales)) {
                    window.datosGlobales.forEach(agente => {
                        if (agente.actividadDetallada && Array.isArray(agente.actividadDetallada)) {
                            agente.actividadDetallada.forEach(dia => {
                                if (Array.isArray(dia) && dia.length > Math.max(idxX, idxY)) {
                                    const valX = parseFloat(dia[idxX]) || 0;
                                    const valY = parseFloat(dia[idxY]) || 0;
                                    if (valX >= 0 && valY >= 0) {
                                        scatterData.push({ x: valX, y: valY });
                                    }
                                }
                            });
                        }
                    });
                }
                
                const datosLimitados = scatterData.slice(0, 50); // Menos puntos para múltiples gráficos
                
                // Obtener correlación
                const correlacion = window.datosCorrelacionGlobal.matriz[varX][varY] || 0;
                const absCorr = Math.abs(correlacion);
                
                // Crear gráfico
                new Chart(document.getElementById(`chart-multi-${i}-${j}`), {
                    type: 'scatter',
                    data: {
                        datasets: [{
                            label: `r = ${correlacion.toFixed(3)}`,
                            data: datosLimitados,
                            backgroundColor: absCorr >= 0.7 
                                ? colors.successAlpha
                                : absCorr >= 0.4 
                                    ? colors.warningAlpha
                                    : colors.dangerAlpha,
                            pointRadius: 4,
                            pointHoverRadius: 6,
                            borderColor: colors.textColor,
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: true,
                                labels: { color: colors.textColor, font: { size: 11 } }
                            }
                        },
                        scales: {
                            x: {
                                title: { display: true, text: kpiNames[varX], color: colors.textColor, font: { size: 11 } },
                                ticks: { color: colors.textColor, font: { size: 9 } },
                                grid: { color: colors.gridColor }
                            },
                            y: {
                                title: { display: true, text: kpiNames[varY], color: colors.textColor, font: { size: 11 } },
                                ticks: { color: colors.textColor, font: { size: 9 } },
                                grid: { color: colors.gridColor }
                            }
                        }
                    }
                });
            }
        }
        
        // Scroll
        document.getElementById('graficos-multiples').scrollIntoView({ behavior: 'smooth', block: 'start' });
    }, 100);
}

function analizarCorrelacionPersonalizada() {
    if (!window.datosCorrelacionGlobal) {
        mostrarNotificacion('⚠️ Cargando datos de correlación...', 'error');
        return;
    }
    
    const varX = document.getElementById('corr-var-x').value;
    const varY = document.getElementById('corr-var-y').value;
    
    if (varX === varY) {
        mostrarNotificacion('⚠️ Selecciona variables diferentes', 'error');
        return;
    }
    
    const resultado = window.datosCorrelacionGlobal;
    
    // Verificar que existe la correlación
    if (!resultado.matriz || !resultado.matriz[varX] || resultado.matriz[varX][varY] === undefined) {
        mostrarNotificacion('⚠️ No hay datos para esta correlación', 'error');
        return;
    }
    
    const correlacion = resultado.matriz[varX][varY];
    const absCorr = Math.abs(correlacion);
    
    // Ocultar múltiples, mostrar simple
    document.getElementById('graficos-multiples').style.display = 'none';
    
    // Índices correctos según la estructura de Actividad_Diaria
    const indexMap = {
        'llamadas': 11, 'citasCaptacion': 4, 'exclusivasVenta': 5,
        'exclusivasComprador': 6, 'captacionesAbierto': 7, 'citasCompradores': 8,
        'casasEnsenadas': 9, 'leadsCompradores': 10, 'gci': 12, 'volumenNegocio': 13
    };
    
    const idxX = indexMap[varX];
    const idxY = indexMap[varY];
    
    // Extraer datos de datosGlobales
    const scatterData = [];
    if (window.datosGlobales && Array.isArray(window.datosGlobales)) {
        window.datosGlobales.forEach(agente => {
            if (agente.actividadDetallada && Array.isArray(agente.actividadDetallada)) {
                agente.actividadDetallada.forEach(dia => {
                    if (Array.isArray(dia) && dia.length > Math.max(idxX, idxY)) {
                        const valX = parseFloat(dia[idxX]) || 0;
                        const valY = parseFloat(dia[idxY]) || 0;
                        
                        if (valX >= 0 && valY >= 0) {
                            scatterData.push({ x: valX, y: valY });
                        }
                    }
                });
            }
        });
    }
    
    // Limitar a 100 puntos
    const datosLimitados = scatterData.slice(0, 100);
    
    if (datosLimitados.length === 0) {
        mostrarNotificacion('⚠️ No hay suficientes datos para este análisis', 'error');
        return;
    }
    
    // Mostrar contenedor
    document.getElementById('scatter-personalizado').style.display = 'block';
    document.getElementById('scatter-title').textContent = `${kpiNames[varX]} vs ${kpiNames[varY]}`;
    
    // Destruir gráfico anterior
    if (window.scatterChartInstance) {
        window.scatterChartInstance.destroy();
    }
    
    // Colores adaptativos
    const colors = getChartColors();
    
    // Crear nuevo gráfico
    const ctx = document.getElementById('chart-scatter-custom');
    window.scatterChartInstance = new Chart(ctx, {
        type: 'scatter',
        data: {
            datasets: [{
                label: 'Datos',
                data: datosLimitados,
                backgroundColor: absCorr >= 0.7 
                    ? colors.successAlpha
                    : absCorr >= 0.4 
                        ? colors.warningAlpha
                        : colors.dangerAlpha,
                pointRadius: 6,
                pointHoverRadius: 8,
                borderColor: colors.textColor,
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { 
                legend: { display: false },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return `${kpiNames[varX]}: ${context.parsed.x} | ${kpiNames[varY]}: ${context.parsed.y}`;
                        }
                    }
                }
            },
            scales: {
                x: {
                    title: { 
                        display: true, 
                        text: kpiNames[varX], 
                        color: colors.textColor,
                        font: { size: 14, weight: 'bold' }
                    },
                    ticks: { color: colors.textColor },
                    grid: { color: colors.gridColor }
                },
                y: {
                    title: { 
                        display: true, 
                        text: kpiNames[varY], 
                        color: colors.textColor,
                        font: { size: 14, weight: 'bold' }
                    },
                    ticks: { color: colors.textColor },
                    grid: { color: colors.gridColor }
                }
            }
        }
    });
    
    // Interpretación
    let colorInterp, nivelInterp, analisisTexto, accionInterp;
    
    if (absCorr >= 0.7) {
        colorInterp = colors.success;
        nivelInterp = '✅ CORRELACIÓN MUY FUERTE';
        analisisTexto = correlacion > 0 
            ? `Relación POSITIVA muy fuerte. Cuando ${kpiNames[varX]} aumenta, ${kpiNames[varY]} casi siempre aumenta también.`
            : `Relación NEGATIVA muy fuerte. Cuando ${kpiNames[varX]} aumenta, ${kpiNames[varY]} casi siempre disminuye.`;
        accionInterp = correlacion > 0 
            ? `<strong>💡 Acción:</strong> PRIORIZA ${kpiNames[varX]} ya que impacta directamente en ${kpiNames[varY]}.`
            : `<strong>⚠️ Acción:</strong> Relación inversa fuerte. Evalúa si este comportamiento es deseable.`;
    } else if (absCorr >= 0.4) {
        colorInterp = colors.warning;
        nivelInterp = '⚠️ CORRELACIÓN MODERADA';
        analisisTexto = `Existe una relación ${correlacion > 0 ? 'POSITIVA' : 'NEGATIVA'} moderada. Otros factores también influyen en ${kpiNames[varY]}.`;
        accionInterp = `<strong>💡 Acción:</strong> Combina ${kpiNames[varX]} con otras métricas para mejores resultados.`;
    } else {
        colorInterp = colors.danger;
        nivelInterp = '❌ CORRELACIÓN DÉBIL';
        analisisTexto = `Variables prácticamente independientes. ${kpiNames[varX]} tiene poco o ningún impacto en ${kpiNames[varY]}.`;
        accionInterp = `<strong>💡 Acción:</strong> Trabaja estas variables por separado. No esperes que una afecte a la otra.`;
    }
    
    document.getElementById('interpretacion-scatter').innerHTML = `
        <div style="display: grid; grid-template-columns: auto 1fr; gap: 20px; align-items: center;">
            <div style="text-align: center; padding: 20px; background: rgba(255,255,255,0.05); border-radius: 10px; min-width: 150px;">
                <div style="font-size: 3em; color: ${colorInterp}; font-weight: 900; margin-bottom: 5px;">${correlacion.toFixed(3)}</div>
                <div style="color: ${colorInterp}; font-weight: 700; font-size: 0.9em;">${nivelInterp}</div>
            </div>
            <div>
                <div style="margin-bottom: 15px; padding: 12px; background: rgba(255,255,255,0.03); border-radius: 8px; border-left: 3px solid ${colorInterp};">
                    <strong>📊 Análisis:</strong> ${analisisTexto}
                </div>
                <div style="padding: 12px; background: rgba(255,255,255,0.03); border-radius: 8px; border-left: 3px solid ${colorInterp};">
                    ${accionInterp}
                </div>
                <div style="margin-top: 15px; font-size: 0.9em; color: #aaa; text-align: right;">
                    📈 Análisis basado en ${datosLimitados.length} registros
                </div>
            </div>
        </div>
    `;
    
    // Scroll suave
    setTimeout(() => {
        document.getElementById('scatter-personalizado').scrollIntoView({ 
            behavior: 'smooth', 
            block: 'center' 
        });
    }, 150);
}
// FUNCIÓN AUXILIAR: Análisis personalizado
function analizarCorrelacionPersonalizada() {
    if (!window.datosCorrelacionGlobal) {
        mostrarNotificacion('Carga primero los datos de correlación', 'error');
        return;
    }
    
    const varX = document.getElementById('corr-var-x').value;
    const varY = document.getElementById('corr-var-y').value;
    
    if (varX === varY) {
        mostrarNotificacion('Selecciona variables diferentes', 'error');
        return;
    }
    
    const resultado = window.datosCorrelacionGlobal;
    const correlacion = resultado.matriz[varX][varY];
    const absCorr = Math.abs(correlacion);
    
    // Obtener datos para scatter plot
    const filtros = calcularFiltrosPeriodo(periodoActual, 'gerente');
    
    google.script.run
        .withSuccessHandler(function(res) {
            if (res.success) {
                // Extraer series específicas
                const dataX = [];
                const dataY = [];
                
                res.matriz; // Tenemos acceso a las series originales
                
                // Hacer llamada para obtener datos raw
                google.script.run
                    .withSuccessHandler(function(datosRaw) {
                        const ss = SpreadsheetApp.getActiveSpreadsheet();
                        const hoja = ss.getSheetByName('Actividad_Diaria');
                        const datos = hoja.getDataRange().getValues();
                        
                        // Construir scatter
                        const scatterData = [];
                        for (let i = 1; i < Math.min(datos.length, 100); i++) {
                            const fila = datos[i];
                            const indexMap = {
                                'llamadas': 11, 'citasCaptacion': 4, 'exclusivasVenta': 5,
                                'exclusivasComprador': 6, 'captacionesAbierto': 7, 'citasCompradores': 8,
                                'casasEnsenadas': 9, 'leadsCompradores': 10, 'gci': 12, 'volumenNegocio': 13
                            };
                            
                            scatterData.push({
                                x: parseFloat(fila[indexMap[varX]]) || 0,
                                y: parseFloat(fila[indexMap[varY]]) || 0
                            });
                        }
                        
                        // Mostrar scatter plot
                        document.getElementById('scatter-personalizado').style.display = 'block';
                        document.getElementById('scatter-title').textContent = `${kpiNames[varX]} vs ${kpiNames[varY]}`;
                        
                        // Destruir chart anterior si existe
                        if (window.scatterChartInstance) {
                            window.scatterChartInstance.destroy();
                        }
                        
                        window.scatterChartInstance = new Chart(document.getElementById('chart-scatter-custom'), {
                            type: 'scatter',
                            data: {
                                datasets: [{
                                    label: 'Datos',
                                    data: scatterData,
                                    backgroundColor: absCorr >= 0.7 ? 'rgba(0,255,136,0.6)' : absCorr >= 0.4 ? 'rgba(255,215,0,0.6)' : 'rgba(255,68,68,0.6)'
                                }]
                            },
                            options: {
                                responsive: true,
                                maintainAspectRatio: false,
                                plugins: {
                                    legend: { display: false }
                                },
                                scales: {
                                    x: {
                                        title: { display: true, text: kpiNames[varX], color: '#fff' },
                                        ticks: { color: '#fff' },
                                        grid: { color: 'rgba(255,255,255,0.1)' }
                                    },
                                    y: {
                                        title: { display: true, text: kpiNames[varY], color: '#fff' },
                                        ticks: { color: '#fff' },
                                        grid: { color: 'rgba(255,255,255,0.1)' }
                                    }
                                }
                            }
                        });
                        
                        // Interpretación
                        let colorInterp, nivelInterp, accionInterp;
                        
                        if (absCorr >= 0.7) {
                            colorInterp = '#00ff88';
                            nivelInterp = '✅ CORRELACIÓN MUY FUERTE';
                            accionInterp = correlacion > 0 
                                ? `<strong>Acción:</strong> Incrementar ${kpiNames[varX]} impactará directamente en ${kpiNames[varY]}. Prioriza esta métrica.`
                                : `<strong>Acción:</strong> Relación inversa. Si aumenta ${kpiNames[varX]}, disminuye ${kpiNames[varY]}. Evalúa si es deseable.`;
                        } else if (absCorr >= 0.4) {
                            colorInterp = '#ffd700';
                            nivelInterp = '⚠️ CORRELACIÓN MODERADA';
                            accionInterp = `<strong>Acción:</strong> Hay relación pero otros factores también influyen. Combina con otras métricas.`;
                        } else {
                            colorInterp = '#ff6b6b';
                            nivelInterp = '❌ CORRELACIÓN DÉBIL';
                            accionInterp = `<strong>Acción:</strong> Estas variables son mayormente independientes. Enfoca esfuerzos por separado.`;
                        }
                        
                        document.getElementById('interpretacion-scatter').innerHTML = `
                            <div style="display: grid; grid-template-columns: auto 1fr; gap: 20px; align-items: center;">
                                <div style="text-align: center;">
                                    <div style="font-size: 3em; color: ${colorInterp}; font-weight: 900;">${correlacion.toFixed(3)}</div>
                                    <div style="color: ${colorInterp}; font-weight: 700;">${nivelInterp}</div>
                                </div>
                                <div>
                                    <div style="margin-bottom: 10px;">
                                        <strong>📊 Análisis:</strong> ${correlacion > 0 ? 'Relación POSITIVA' : 'Relación NEGATIVA'}. 
                                        Cuando ${kpiNames[varX]} ${correlacion > 0 ? 'aumenta' : 'aumenta'}, 
                                        ${kpiNames[varY]} tiende a ${correlacion > 0 ? 'aumentar' : 'disminuir'}.
                                    </div>
                                    <div>${accionInterp}</div>
                                    <div style="margin-top: 10px; font-size: 0.9em; color: #aaa;">
                                        📈 Basado en ${scatterData.length} registros del período seleccionado.
                                    </div>
                                </div>
                            </div>
                        `;
                        
                        // Scroll suave al gráfico
                        document.getElementById('scatter-personalizado').scrollIntoView({ behavior: 'smooth', block: 'center' });
                        
                    })
                    .obtenerDatosActividad();
            }
        })
        .obtenerDatosCorrelacion(filtros);
}
// Parsear fecha desde formato dd/MM/yyyy
function parsearFecha(fechaStr) {
    const partes = fechaStr.split('/');
    return new Date(partes[2], partes[1] - 1, partes[0]);
}

// Limpiar filtros
function limpiarFiltrosTransacciones() {
    window.filtroAgenteTx = 'todos';
    window.filtroTipoTx = 'todos';
    window.filtroFechaInicioTx = '';
    window.filtroFechaFinTx = '';
    renderizarRegistroTransacciones();
}

// Abrir modal de edición con TODOS los datos
function editarTransaccionModal(id, gci, comision, pct) {
    // Cargar lista de agentes
    google.script.run
        .withSuccessHandler(function(agentes) {
            let optionsHTML = '<option value="">-- Seleccionar --</option>';
            agentes.forEach(a => {
                optionsHTML += `<option value="${a.id}|${a.nombre}">${a.nombre}</option>`;
            });
            document.getElementById('edit-tx-agente').innerHTML = optionsHTML;
            
            // Buscar la transacción completa
            const tx = window.transaccionesGlobales.find(t => t.id === id);
            if (!tx) {
                mostrarNotificacion('Transacción no encontrada', 'error');
                return;
            }
            
            // Rellenar todos los campos
            document.getElementById('edit-tx-id').value = tx.id;
            document.getElementById('edit-tx-fecha').value = convertirFechaParaInput(tx.fecha);
            
            // Seleccionar agente
            const agenteOption = Array.from(document.getElementById('edit-tx-agente').options)
                .find(opt => opt.text === tx.agente);
            if (agenteOption) agenteOption.selected = true;
            
            document.getElementById('edit-tx-tipo').value = tx.tipo;
            document.getElementById('edit-tx-lado').value = tx.lado;
            document.getElementById('edit-tx-gci').value = tx.gci;
            document.getElementById('edit-tx-volumen').value = tx.volumenNegocio;
            document.getElementById('edit-tx-pct').value = tx.pctComision;
            document.getElementById('edit-tx-comision').value = tx.comision;
            document.getElementById('edit-tx-descripcion').value = tx.descripcion.replace(/TRANSACCIÓN.*\|/g, '').trim();
            
            document.getElementById('modal-editar-tx').classList.add('active');
            document.body.classList.add('modal-open');
        })
        .obtenerListaAgentes();
}

// Convertir fecha de dd/MM/yyyy a yyyy-MM-dd
function convertirFechaParaInput(fechaStr) {
    const partes = fechaStr.split('/');
    return `${partes[2]}-${partes[1].padStart(2, '0')}-${partes[0].padStart(2, '0')}`;
}

// Calcular comisión automáticamente
function calcularComisionEdicion() {
    const gci = parseFloat(document.getElementById('edit-tx-gci').value) || 0;
    const pct = parseFloat(document.getElementById('edit-tx-pct').value) || 0;
    
    // ✅ CORRECCIÓN CRÍTICA: Comisión = (GCI × %) / 100
    const comision = (gci * pct / 100).toFixed(2);
    
    document.getElementById('edit-tx-comision').value = comision;
}

// Guardar edición COMPLETA
function guardarEdicionTransaccionCompleta(event) {
    event.preventDefault();
    
    const agenteSeleccionado = document.getElementById('edit-tx-agente').value.split('|');
    
    const datosActualizados = {
        id: document.getElementById('edit-tx-id').value,
        fecha: document.getElementById('edit-tx-fecha').value,
        idAgente: agenteSeleccionado[0],
        nombreAgente: agenteSeleccionado[1],
        tipo: document.getElementById('edit-tx-tipo').value,
        lado: document.getElementById('edit-tx-lado').value,
        gci: parseFloat(document.getElementById('edit-tx-gci').value),
        volumenNegocio: parseFloat(document.getElementById('edit-tx-volumen').value) || 0,
        pctComision: parseFloat(document.getElementById('edit-tx-pct').value),
        comision: parseFloat(document.getElementById('edit-tx-comision').value),
        descripcion: document.getElementById('edit-tx-descripcion').value
    };
    
    google.script.run
        .withSuccessHandler(function(respuesta) {
            if (respuesta.success) {
                mostrarNotificacion('✅ Transacción actualizada completamente', 'success');
                document.getElementById('modal-editar-tx').classList.remove('active');
                document.body.classList.remove('modal-open');
                renderizarRegistroTransacciones();
            } else {
                mostrarNotificacion('❌ Error: ' + respuesta.error, 'error');
            }
        })
        .withFailureHandler(function(error) {
            mostrarNotificacion('❌ Error: ' + error.message, 'error');
        })
        .editarTransaccionCompleta(datosActualizados);
}

// Anular transacción
function anularTransaccionConfirm(id) {
    // Crear modal de confirmación custom (sin alert)
    const modalConfirm = document.createElement('div');
    modalConfirm.innerHTML = `
        <div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.8); z-index: 10000; display: flex; align-items: center; justify-content: center;">
            <div style="background: var(--color-surface); padding: 30px; border-radius: 15px; max-width: 500px; text-align: center; border: 2px solid #ff4444;">
                <div style="font-size: 3em; margin-bottom: 10px;">⚠️</div>
                <div style="font-size: 1.3em; font-weight: 700; margin-bottom: 15px; color: #ff4444;">Anular Transacción</div>
                <div style="margin-bottom: 20px; line-height: 1.5;">
                    ¿Estás seguro de que quieres anular esta transacción?<br>
                    <strong>Esto pondrá el GCI y comisiones en 0.</strong>
                </div>
                <div style="display: flex; gap: 15px; justify-content: center;">
                    <button onclick="this.closest('div').parentElement.remove()" class="btn" style="background: #555;">❌ Cancelar</button>
                    <button onclick="ejecutarAnulacionTransaccion('${id}'); this.closest('div').parentElement.remove();" class="btn" style="background: #ff4444;">✅ Sí, Anular</button>
                </div>
            </div>
        </div>
    `;
    document.body.appendChild(modalConfirm);
}

function ejecutarAnulacionTransaccion(id) {
    google.script.run
        .withSuccessHandler(function(respuesta) {
            if (respuesta.success) {
                mostrarNotificacion('✅ Transacción anulada', 'success');
                renderizarRegistroTransacciones();
            } else {
                mostrarNotificacion('❌ Error: ' + respuesta.error, 'error');
            }
        })
        .withFailureHandler(function(error) {
            mostrarNotificacion('❌ Error: ' + error.message, 'error');
        })
        .anularTransaccion(id);
}

// Exportar CSV
function exportarTransaccionesCSV() {
    const transacciones = window.transaccionesGlobales || [];
    
    if (transacciones.length === 0) {
        mostrarNotificacion('No hay transacciones para exportar', 'error');
        return;
    }
    
    // Aplicar filtros actuales
    let datos = transacciones;
    
    if (window.filtroAgenteTx && window.filtroAgenteTx !== 'todos') {
        datos = datos.filter(t => t.agente === window.filtroAgenteTx);
    }
    
    if (window.filtroTipoTx && window.filtroTipoTx !== 'todos') {
        datos = datos.filter(t => t.tipo === window.filtroTipoTx);
    }
    
    if (window.filtroFechaInicioTx) {
        const fechaInicio = new Date(window.filtroFechaInicioTx);
        datos = datos.filter(t => parsearFecha(t.fecha) >= fechaInicio);
    }
    
    if (window.filtroFechaFinTx) {
        const fechaFin = new Date(window.filtroFechaFinTx);
        datos = datos.filter(t => parsearFecha(t.fecha) <= fechaFin);
    }
    
    // Construir CSV
    let csv = 'ID;Fecha;Agente;Tipo;Lado;GCI;Volumen_Negocio;Comision;Pct_Comision;Descripcion\n';
    
    datos.forEach(t => {
        csv += `${t.id};${t.fecha};${t.agente};${t.tipo};${t.lado};${t.gci};${t.volumenNegocio};${t.comision};${t.pctComision};${t.descripcion.replace(/;/g, ',')}\n`;
    });
    
    // Descargar archivo
    const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
    const link = document.createElement('a');
    const url = URL.createObjectURL(blob);
    link.setAttribute('href', url);
    link.setAttribute('download', `Transacciones_${new Date().toISOString().split('T')[0]}.csv`);
    link.style.visibility = 'hidden';
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
    
    mostrarNotificacion(`✅ Exportadas ${datos.length} transacciones`, 'success');
}
// Cargar datos de Beneficio Neto
function cargarDatosBeneficio() {
    const filtros = calcularFiltrosPeriodo(periodoActual, 'gerente');
    
    google.script.run
        .withSuccessHandler(function(resultado) {
            if (resultado.success) {
                window.datosBeneficioGlobal = resultado;
                
                const beneficio = resultado.beneficioNeto;
                const pct = resultado.porcentajeBeneficio;
                const color = pct >= 50 ? '#00ff88' : pct >= 30 ? '#ffd700' : '#ff6b6b';
                
                document.getElementById('kpi-beneficio').textContent = beneficio.toLocaleString('es-ES', {maximumFractionDigits: 0}) + '€';
                document.getElementById('kpi-beneficio').style.color = color;
                
                document.getElementById('kpi-beneficio-pct').innerHTML = `Margen: ${pct.toFixed(1)}%`;
                document.getElementById('kpi-beneficio-pct').style.color = color;
            }
        })
        .obtenerBeneficioNeto(filtros);
}

// Cargar datos de Transacciones
function cargarDatosTransacciones() {
    const filtros = calcularFiltrosPeriodo(periodoActual, 'gerente');
    
    google.script.run
        .withSuccessHandler(function(resultado) {
            if (resultado.success) {
                window.datosTransaccionesGlobal = resultado;
                
                const stats = resultado.stats;
                
                document.getElementById('kpi-transacciones-total').textContent = stats.total;
                
                const detalle = `
                    🏠 ${stats.vendedor} Vendedor | 
                    🔑 ${stats.comprador} Comprador | 
                    🤝 ${stats.ambos} Ambos
                `;
                document.getElementById('kpi-transacciones-detalle').innerHTML = detalle;
            }
        })
        .obtenerEstadisticasTransacciones(filtros);
}

// Llamar estas funciones al cargar el dashboard
// Añade estas líneas donde cargas los demás datos del dashboard
cargarDatosBeneficio();
cargarDatosTransacciones();
function mostrarGraficoBeneficio() {
    if (!window.datosBeneficioGlobal) {
        mostrarNotificacion('⚠️ Cargando datos de beneficio...', 'error');
        return;
    }
    
    const resultado = window.datosBeneficioGlobal;
    
    // Crear modal
    const modal = document.createElement('div');
    modal.className = 'modal active';
    modal.innerHTML = `
        <div class="modal-content" style="max-width: 1200px; height: auto; max-height: 90vh; overflow-y: auto;">
            <span class="modal-close" onclick="this.closest('.modal').remove(); document.body.classList.remove('modal-open');">×</span>
            <div class="modal-body">
                <div class="section-title">💰 Evolución de Beneficio Neto</div>
                
                <!-- RESUMEN GLOBAL -->
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; margin-bottom: 25px;">
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center;">
                        <div style="font-size: 0.85em; color: #aaa;">💰 GCI Total</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: #00ff88;">${resultado.gciTotal.toLocaleString('es-ES', {maximumFractionDigits:0})}€</div>
                    </div>
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center;">
                        <div style="font-size: 0.85em; color: #aaa;">💸 Comisiones Pagadas</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: #ff6b6b;">${resultado.comisionesTotal.toLocaleString('es-ES', {maximumFractionDigits:0})}€</div>
                        <div style="font-size: 0.75em; color: #aaa; margin-top: 3px;">
                            ${resultado.gciTotal > 0 ? ((resultado.comisionesTotal / resultado.gciTotal) * 100).toFixed(1) : 0}% del GCI
                        </div>
                    </div>
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center;">
                        <div style="font-size: 0.85em; color: #aaa;">🏢 Gastos Operativos</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: #ffd700;">${resultado.gastosOperativos.toLocaleString('es-ES', {maximumFractionDigits:0})}€</div>
                        <div style="font-size: 0.75em; color: #aaa; margin-top: 3px;">
                            ${resultado.gciTotal > 0 ? ((resultado.gastosOperativos / resultado.gciTotal) * 100).toFixed(1) : 0}% del GCI
                        </div>
                    </div>
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center; border: 2px solid ${resultado.porcentajeBeneficio >= 40 ? '#00ff88' : resultado.porcentajeBeneficio >= 25 ? '#ffd700' : '#ff6b6b'};">
                        <div style="font-size: 0.85em; color: ${resultado.porcentajeBeneficio >= 40 ? '#00ff88' : resultado.porcentajeBeneficio >= 25 ? '#ffd700' : '#ff6b6b'};">✅ Beneficio Neto</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: ${resultado.porcentajeBeneficio >= 40 ? '#00ff88' : resultado.porcentajeBeneficio >= 25 ? '#ffd700' : '#ff6b6b'};">
                            ${resultado.beneficioNeto.toLocaleString('es-ES', {maximumFractionDigits:0})}€
                        </div>
                        <div style="font-size: 0.9em; margin-top: 3px; font-weight: 700; color: ${resultado.porcentajeBeneficio >= 40 ? '#00ff88' : resultado.porcentajeBeneficio >= 25 ? '#ffd700' : '#ff6b6b'};">
                            Margen: ${resultado.porcentajeBeneficio.toFixed(1)}%
                        </div>
                    </div>
                </div>
                
                <!-- GRÁFICO LÍNEAS -->
                <div class="chart-container" style="height: 400px; margin-bottom: 25px;">
                    <canvas id="chart-beneficio-lineas"></canvas>
                </div>
                
                <!-- GRÁFICO BARRAS - BENEFICIO POR MES -->
                <div class="chart-container" style="height: 350px; margin-bottom: 25px;">
                    <canvas id="chart-beneficio-barras"></canvas>
                </div>
                
                <!-- LEYENDA -->
                <div style="background: rgba(255,255,255,0.05); padding: 15px; border-radius: 10px;">
                    <div style="font-weight: 700; margin-bottom: 10px; color: #fff;">📊 Leyenda de Margen de Beneficio</div>
                    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 10px; font-size: 0.9em;">
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 20px; height: 20px; background: #00ff88; border-radius: 3px;"></div>
                            <span><strong>Excelente:</strong> ≥ 40%</span>
                        </div>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 20px; height: 20px; background: #ffd700; border-radius: 3px;"></div>
                            <span><strong>Regular:</strong> 25% - 40%</span>
                        </div>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 20px; height: 20px; background: #ff6b6b; border-radius: 3px;"></div>
                            <span><strong>Bajo:</strong> < 25%</span>
                        </div>
                    </div>
                    <div style="margin-top: 15px; padding: 10px; background: rgba(102,126,234,0.1); border-radius: 5px; border-left: 3px solid #667eea;">
                        <strong>🎯 Objetivo:</strong> Mantener un margen de beneficio neto > 40% del GCI total para asegurar la salud financiera del negocio.
                    </div>
                </div>
            </div>
        </div>
    `;
    
    document.body.appendChild(modal);
    document.body.classList.add('modal-open');
    
    // Preparar datos mensuales
    const meses = ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'];
    const datosGCI = [];
    const datosComisiones = [];
    const datosGastos = [];
    const datosBeneficio = [];
    const datosPorcentaje = [];
    
    for (let mes = 1; mes <= 12; mes++) {
        const d = resultado.datosMensuales[mes];
        datosGCI.push(d.gci);
        datosComisiones.push(d.comisiones);
        datosGastos.push(d.gastos);
        datosBeneficio.push(d.beneficio);
        
        // Calcular porcentaje del mes
        const pct = d.gci > 0 ? ((d.beneficio / d.gci) * 100) : 0;
        datosPorcentaje.push(pct);
    }
    
    // Crear gráficos
    setTimeout(() => {
        // Gráfico 1: Líneas - Evolución
        new Chart(document.getElementById('chart-beneficio-lineas'), {
            type: 'line',
            data: {
                labels: meses,
                datasets: [
                    {
                        label: 'GCI',
                        data: datosGCI,
                        borderColor: '#00ff88',
                        backgroundColor: 'rgba(0,255,136,0.1)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true
                    },
                    {
                        label: 'Comisiones',
                        data: datosComisiones,
                        borderColor: '#ff6b6b',
                        backgroundColor: 'rgba(255,107,107,0.1)',
                        borderWidth: 2,
                        tension: 0.4
                    },
                    {
                        label: 'Gastos',
                        data: datosGastos,
                        borderColor: '#ffd700',
                        backgroundColor: 'rgba(255,215,0,0.1)',
                        borderWidth: 2,
                        tension: 0.4
                    },
                    {
                        label: 'Beneficio Neto',
                        data: datosBeneficio,
                        borderColor: '#667eea',
                        backgroundColor: 'rgba(102,126,234,0.2)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: { color: '#fff', font: { size: 12 } }
                    },
                    title: {
                        display: true,
                        text: 'Evolución Mensual - GCI vs Costes',
                        color: '#fff',
                        font: { size: 16, weight: 'bold' }
                    }
                },
                scales: {
                    x: {
                        ticks: { color: '#fff' },
                        grid: { color: 'rgba(255,255,255,0.1)' }
                    },
                    y: {
                        ticks: { 
                            color: '#fff',
                            callback: function(value) {
                                return value.toLocaleString('es-ES') + '€';
                            }
                        },
                        grid: { color: 'rgba(255,255,255,0.1)' }
                    }
                }
            }
        });
        
        // Gráfico 2: Barras - Beneficio y % por mes
        new Chart(document.getElementById('chart-beneficio-barras'), {
            type: 'bar',
            data: {
                labels: meses,
                datasets: [
                    {
                        label: 'Beneficio (€)',
                        data: datosBeneficio,
                        backgroundColor: datosPorcentaje.map(pct => {
                            if (pct >= 40) return 'rgba(0,255,136,0.8)';
                            if (pct >= 25) return 'rgba(255,215,0,0.8)';
                            return 'rgba(255,107,107,0.8)';
                        }),
                        borderColor: '#fff',
                        borderWidth: 1,
                        yAxisID: 'y'
                    },
                    {
                        label: 'Margen %',
                        data: datosPorcentaje,
                        type: 'line',
                        borderColor: '#667eea',
                        backgroundColor: 'rgba(102,126,234,0.2)',
                        borderWidth: 3,
                        tension: 0.4,
                        yAxisID: 'y1',
                        pointRadius: 5,
                        pointBackgroundColor: '#667eea'
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        labels: { color: '#fff', font: { size: 12 } }
                    },
                    title: {
                        display: true,
                        text: 'Beneficio (€) y Margen (%) por Mes',
                        color: '#fff',
                        font: { size: 16, weight: 'bold' }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) label += ': ';
                                if (context.datasetIndex === 0) {
                                    label += context.parsed.y.toLocaleString('es-ES') + '€';
                                } else {
                                    label += context.parsed.y.toFixed(1) + '%';
                                }
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        ticks: { color: '#fff' },
                        grid: { display: false }
                    },
                    y: {
                        type: 'linear',
                        position: 'left',
                        ticks: { 
                            color: '#fff',
                            callback: function(value) {
                                return value.toLocaleString('es-ES') + '€';
                            }
                        },
                        grid: { color: 'rgba(255,255,255,0.1)' },
                        title: {
                            display: true,
                            text: 'Beneficio (€)',
                            color: '#fff'
                        }
                    },
                    y1: {
                        type: 'linear',
                        position: 'right',
                        ticks: { 
                            color: '#667eea',
                            callback: function(value) {
                                return value.toFixed(0) + '%';
                            }
                        },
                        grid: { display: false },
                        title: {
                            display: true,
                            text: 'Margen %',
                            color: '#667eea'
                        },
                        min: 0,
                        max: 100
                    }
                }
            }
        });
    }, 100);
}
function mostrarGraficoTransacciones() {
    if (!window.datosTransaccionesGlobal) {
        mostrarNotificacion('⚠️ Cargando datos de transacciones...', 'error');
        return;
    }
    
    const resultado = window.datosTransaccionesGlobal;
    const stats = resultado.stats;
    
    // Crear modal
    const modal = document.createElement('div');
    modal.className = 'modal active';
    modal.innerHTML = `
        <div class="modal-content" style="max-width: 1200px; height: auto; max-height: 90vh; overflow-y: auto;">
            <span class="modal-close" onclick="this.closest('.modal').remove(); document.body.classList.remove('modal-open');">×</span>
            <div class="modal-body">
                <div class="section-title">📊 Análisis Completo de Transacciones</div>
                
                <!-- RESUMEN POR LADO -->
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 15px; margin-bottom: 25px;">
                    <div style="background: var(--color-surface); padding: 20px; border-radius: 10px; border-left: 4px solid #667eea;">
                        <div style="font-size: 0.9em; color: #667eea; margin-bottom: 5px;">🏠 VENDEDOR</div>
                        <div style="font-size: 2em; font-weight: 700; margin: 10px 0;">${stats.vendedor}</div>
                        <div style="font-size: 0.85em; color: #aaa;">GCI: ${stats.gciVendedor.toLocaleString('es-ES', {maximumFractionDigits:0})}€</div>
                        <div style="font-size: 0.85em; color: #aaa;">Volumen: ${stats.volumenVendedor.toLocaleString('es-ES', {maximumFractionDigits:0})}€</div>
                        <div style="font-size: 0.85em; color: #aaa;">Ticket: ${stats.vendedor > 0 ? (stats.volumenVendedor / stats.vendedor).toFixed(0) : 0}€</div>
                    </div>
                    
                    <div style="background: var(--color-surface); padding: 20px; border-radius: 10px; border-left: 4px solid #ffd700;">
                        <div style="font-size: 0.9em; color: #ffd700; margin-bottom: 5px;">🔑 COMPRADOR</div>
                        <div style="font-size: 2em; font-weight: 700; margin: 10px 0;">${stats.comprador}</div>
                        <div style="font-size: 0.85em; color: #aaa;">GCI: ${stats.gciComprador.toLocaleString('es-ES', {maximumFractionDigits:0})}€</div>
                        <div style="font-size: 0.85em; color: #aaa;">Volumen: ${stats.volumenComprador.toLocaleString('es-ES', {maximumFractionDigits:0})}€</div>
                        <div style="font-size: 0.85em; color: #aaa;">Ticket: ${stats.comprador > 0 ? (stats.volumenComprador / stats.comprador).toFixed(0) : 0}€</div>
                    </div>
                    
                    <div style="background: var(--color-surface); padding: 20px; border-radius: 10px; border-left: 4px solid #00ff88;">
                        <div style="font-size: 0.9em; color: #00ff88; margin-bottom: 5px;">🤝 AMBOS LADOS</div>
                        <div style="font-size: 2em; font-weight: 700; margin: 10px 0;">${stats.ambos}</div>
                        <div style="font-size: 0.85em; color: #aaa;">GCI: ${stats.gciAmbos.toLocaleString('es-ES', {maximumFractionDigits:0})}€</div>
                        <div style="font-size: 0.85em; color: #aaa;">Volumen: ${stats.volumenAmbos.toLocaleString('es-ES', {maximumFractionDigits:0})}€</div>
                        <div style="font-size: 0.85em; color: #aaa;">Ticket: ${stats.ambos > 0 ? (stats.volumenAmbos / stats.ambos).toFixed(0) : 0}€</div>
                    </div>
                    
                    <div style="background: var(--color-surface); padding: 20px; border-radius: 10px; border: 2px solid #fff;">
                        <div style="font-size: 0.9em; color: #fff; margin-bottom: 5px;">📈 TOTAL</div>
                        <div style="font-size: 2em; font-weight: 700; margin: 10px 0;">${stats.total}</div>
                        <div style="font-size: 0.85em; color: #aaa;">GCI: ${stats.gciTotal.toLocaleString('es-ES', {maximumFractionDigits:0})}€</div>
                        <div style="font-size: 0.85em; color: #aaa;">Volumen: ${stats.volumenTotal.toLocaleString('es-ES', {maximumFractionDigits:0})}€</div>
                        <div style="font-size: 0.85em; color: #aaa;">Ticket: ${stats.total > 0 ? (stats.volumenTotal / stats.total).toFixed(0) : 0}€</div>
                    </div>
                </div>
                
                <!-- GRÁFICOS -->
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 25px;">
                    <div class="chart-container" style="height: 350px;">
                        <div style="font-weight: 700; margin-bottom: 10px; text-align: center;">📊 Transacciones por Mes</div>
                        <canvas id="chart-tx-mensuales"></canvas>
                    </div>
                    <div class="chart-container" style="height: 350px;">
                        <div style="font-weight: 700; margin-bottom: 10px; text-align: center;">💰 GCI por Lado</div>
                        <canvas id="chart-tx-gci"></canvas>
                    </div>
                </div>
                
                <!-- LEYENDA -->
                <div style="background: rgba(255,255,255,0.05); padding: 15px; border-radius: 10px;">
                    <div style="font-weight: 700; margin-bottom: 10px; color: #fff;">📊 Leyenda de Transacciones</div>
                    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 10px; font-size: 0.9em;">
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 20px; height: 20px; background: #00ff88; border-radius: 3px;"></div>
                            <span><strong>Excelente:</strong> ≥ 15 tx</span>
                        </div>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 20px; height: 20px; background: #ffd700; border-radius: 3px;"></div>
                            <span><strong>Regular:</strong> 8 - 15 tx</span>
                        </div>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 20px; height: 20px; background: #ff6b6b; border-radius: 3px;"></div>
                            <span><strong>Bajo:</strong> < 8 tx</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    `;
    
    document.body.appendChild(modal);
    document.body.classList.add('modal-open');
    
    // Preparar datos
    const meses = ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'];
    const datosVendedor = [];
    const datosComprador = [];
    const datosAmbos = [];
    
    for (let mes = 1; mes <= 12; mes++) {
        const d = resultado.mensuales[mes];
        datosVendedor.push(d.vendedor);
        datosComprador.push(d.comprador);
        datosAmbos.push(d.ambos);
    }
    
    setTimeout(() => {
        // Gráfico 1: Transacciones por mes (barras apiladas)
        new Chart(document.getElementById('chart-tx-mensuales'), {
            type: 'bar',
            data: {
                labels: meses,
                datasets: [
                    {
                        label: 'Vendedor',
                        data: datosVendedor,
                        backgroundColor: 'rgba(102,126,234,0.8)',
                        borderColor: '#667eea',
                        borderWidth: 1
                    },
                    {
                        label: 'Comprador',
                        data: datosComprador,
                        backgroundColor: 'rgba(255,215,0,0.8)',
                        borderColor: '#ffd700',
                        borderWidth: 1
                    },
                    {
                        label: 'Ambos',
                        data: datosAmbos,
                        backgroundColor: 'rgba(0,255,136,0.8)',
                        borderColor: '#00ff88',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        labels: { color: '#fff', font: { size: 11 } }
                    }
                },
                scales: {
                    x: {
                        stacked: true,
                        ticks: { color: '#fff', font: { size: 10 } },
                        grid: { display: false }
                    },
                    y: {
                        stacked: true,
                        ticks: { color: '#fff' },
                        grid: { color: 'rgba(255,255,255,0.1)' }
                    }
                }
            }
        });
        
        // Gráfico 2: GCI por lado (doughnut)
        new Chart(document.getElementById('chart-tx-gci'), {
            type: 'doughnut',
            data: {
                labels: ['Vendedor', 'Comprador', 'Ambos'],
                datasets: [{
                    data: [stats.gciVendedor, stats.gciComprador, stats.gciAmbos],
                    backgroundColor: [
                        'rgba(102,126,234,0.8)',
                        'rgba(255,215,0,0.8)',
                        'rgba(0,255,136,0.8)'
                    ],
                    borderColor: ['#667eea', '#ffd700', '#00ff88'],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { color: '#fff', font: { size: 12 } }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const value = context.parsed;
                                const total = stats.gciTotal;
                                const pct = ((value / total) * 100).toFixed(1);
                                return `${context.label}: ${value.toLocaleString('es-ES')}€ (${pct}%)`;
                            }
                        }
                    }
                }
            }
        });
    }, 100);
}
 </script>
 <div id="modal-grafico-secundario" class="modal" style="z-index: 1150;">
    <div class="modal-content" style="max-width: 1100px; height: 80vh;">
        <span class="modal-close" onclick="cerrarModalSuperior('modal-grafico-secundario')">&times;</span>
        
        <div class="modal-body" id="modal-grafico-body" style="position: relative; width: 100%; height: 100%;">
        </div>
    </div>
</div>
