/* --- IMPRESIÓN INTELIGENTE --- */
@media print {
    /* REGLA BASE: Ocultar botones flotantes siempre */
    .header-buttons, .filtros-rapidos, .btn, .scroll-to-top, .no-print {
        display: none !important;
    }

    /* CASO A: IMPRIMIR GPS (Solo si el body tiene la clase 'print-mode-gps') */
    body.print-mode-gps > * { display: none !important; } /* Oculta todo */
    body.print-mode-gps #modal-plantilla-gps {
        display: block !important;
        position: absolute; left: 0; top: 0; width: 100%;
        background: white; z-index: 9999;
    }
    body.print-mode-gps #modal-plantilla-gps .gps-paper {
        visibility: visible !important;
        box-shadow: none; margin: 0; width: 100%;
    }
    body.print-mode-gps .gps-header-input { border: none; border-bottom: 1px solid #000; }

    /* CASO B: IMPRIMIR DASHBOARD (Por defecto) */
    body:not(.print-mode-gps) .view-container.active {
        display: block !important;
    }
    body:not(.print-mode-gps) .header {
        box-shadow: none; border: 1px solid #ddd;
    }
    body:not(.print-mode-gps) .chart-container, 
    body:not(.print-mode-gps) .section {
        break-inside: avoid; /* No cortar gráficos a la mitad */
        page-break-inside: avoid;
        box-shadow: none; border: 1px solid #ddd;
    }
}

