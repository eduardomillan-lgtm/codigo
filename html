}

/* Corrección específica para la cuadrícula de meses en objetivos */
body[data-theme="claro"] .dist-mes,
body[data-theme="kw-claro"] .dist-mes {
    background-color: #fff !important;
    color: #000 !important;
}

/* Títulos y textos en el modal */
body[data-theme="claro"] .section-title,
body[data-theme="kw-claro"] .section-title {
    -webkit-text-fill-color: #b70000 !important; /* Asegurar rojo KW */
    color: #b70000 !important;
}

body[data-theme="claro"] h3, 
body[data-theme="kw-claro"] h3,
body[data-theme="claro"] .distribucion-total,
body[data-theme="kw-claro"] .distribucion-total {
     color: #000 !important; /* Textos secundarios en negro */
}
