    <script>
        // ==================== DASHBOARD KW PRO - JAVASCRIPT COMPLETO (REPARADO v5.3) ====================
        // VERSION: 5.3 (Fix Vista Agente & Transacciones Crash)
        
        // ===== VARIABLES GLOBALES =====
        let datosGlobales = []; // Todos los datos de todos los agentes
        let datosFiltrados = []; // Datos filtrados por el gerente
        let datosAgregadosEquipo = {}; // Datos mensuales agregados del equipo
        let chartInstances = {}; // Almacén de gráficos activos
        let agenteActual = null; // Info del agente en la vista Agente
        let datosAgenteCompletos = null; // Datos completos del agente activo
        
        // Filtros
        let periodoActual = 'ano'; // Filtro de tiempo del gerente
        let periodoAgenteActual = 'ano'; // Filtro de tiempo del agente
        let agenteFechaInicio = null;
        let agenteFechaFin = null;
        let gerenteFechaInicio = null;
        let gerenteFechaFin = null;

        // ⭐ NUEVO: Para el modal de transacciones
        let agentesParaTransaccion = [];    

        let topN = 5;
        let vistaActualGerente = 'tarjetas';
        let seleccionMultiAgente = false; // Para modo selección
        
        // ===== MAPA DE NOMBRES DE KPI (16 KPIs) =====
const kpiNames = {
    // 12 Realizados (añadidos: llamadas, volumenNegocio, beneficioNeto, totalTransacciones)
    gci: 'GCI',
    citasCaptacion: 'Citas Captación',
    exclusivasVenta: 'Exclusivas Venta',
    exclusivasComprador: 'Exclusivas Comprador',
    captacionesAbierto: 'Captaciones en Abierto',
    citasCompradores: 'Citas Compradores',
    casasEnsenadas: 'Casas Enseñadas',
    leadsCompradores: 'Leads Compradores',
    llamadas: 'Llamadas',
    volumenNegocio: 'Volumen de Negocio',
    beneficioNeto: 'Beneficio Neto',           // ← NUEVO
    totalTransacciones: 'Transacciones',       // ← NUEVO
    // 6 Ratios
    cumplimientoGlobal: 'Cumplimiento Global',
    conversionCaptacion: 'Conversión (Cita a Capt.)',
    ratioCierre: 'Ratio de Cierre (GCI/Excl)',
    productividad: 'Productividad (Casas/Cita)',
    ticketPromedio: 'Ticket Promedio',
    actividadTotal: 'Actividad Total'
};
        // 1. SISTEMA DE CAPAS (Para que no se cierren las ventanas de abajo)
function abrirModalEncima(idModal) {
    const modal = document.getElementById(idModal);
    if (modal) {
        modal.style.zIndex = "2000"; // Capa superior
        modal.classList.add('active');
        // No tocamos el body porque ya tiene 'modal-open' del padre
    } else {
        console.error("Error: No existe el modal " + idModal);
    }
}

function cerrarModalSuperior(idModal) {
    const modal = document.getElementById(idModal);
    if (modal) modal.classList.remove('active');
}

// Función "Salir" o reset total
function cerrarModal() {
    document.querySelectorAll('.modal').forEach(m => m.classList.remove('active'));
    document.body.classList.remove('modal-open');
}
        
        // =================================================================
        // ========== INICIO DE LA APLICACIÓN
        // =================================================================
        document.addEventListener('DOMContentLoaded', function() {
            console.log('✅ Dashboard KW Pro 5.3 cargado y listo');
            crearEstrellas();
            cargarTemaGuardado(); // ⭐ NUEVO: Cargar tema

            // Unir botones de forma segura
            document.getElementById('btn-gerente').addEventListener('click', iniciarVistaGerente);
            document.getElementById('btn-agente').addEventListener('click', iniciarVistaAgente);
            document.getElementById('btn-logout-header').addEventListener('click', logout);
            console.log('Listeners de navegación principal asignados.');

            // Configurar lógica de filtros fijos
            setupStickyFilters('manager-filters-container', 'manager-filter-placeholder', 'main-header');
            setupStickyFilters('agent-filters-container', 'agent-filter-placeholder', 'agent-header');
        });
        
        function crearEstrellas() {
            const container = document.getElementById('stars');
            if (!container || container.children.length > 0) return;
            for (let i = 0; i < 100; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                const size = Math.random() * 3 + 1;
                star.style.width = size + 'px';
                star.style.height = size + 'px';
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                star.style.animationDelay = Math.random() * 3 + 's';
                container.appendChild(star);
            }
        }
        
        // ===== NAVEGACIÓN PRINCIPAL =====
        function mostrarVista(vistaId) {
            console.log('📍 Mostrando vista:', vistaId);
            document.querySelectorAll('.view-container').forEach(v => v.classList.remove('active'));
            const vista = document.getElementById(vistaId);
            if (vista) {
                vista.classList.add('active');
            } else {
                console.error('❌ Vista no encontrada:', vistaId);
            }
        }
        
        function iniciarVistaGerente() {
    console.log('👔 Iniciando vista gerente...');
    
    // 1. Intentar poner pantalla completa automáticamente al hacer clic
    toggleFullScreen(); 

    // 2. Resto de la lógica normal
    mostrarVista('view-manager');
    cargarDatosGerente(periodoActual);
}
        
        function iniciarVistaAgente() {
    console.log('🏡 Iniciando vista agente...');
    
    // 1. Intentar poner pantalla completa automáticamente al hacer clic
    toggleFullScreen();

    // 2. Resto de la lógica normal
    mostrarVista('view-agent');
    
    google.script.run
        .withSuccessHandler(poblarSelectorAgentes)
        .withFailureHandler(mostrarError)
        .obtenerListaAgentes();
}
        
        function logout() {
            console.log('👋 Cerrando sesión...');
            mostrarVista('view-login');
            agenteActual = null;
            datosAgenteCompletos = null;
            datosGlobales = [];
            datosFiltrados = [];
        }
        
        // ===== VISTA GERENTE =====
        // --- FUNCIÓN DE CARGA MAESTRA (REPARADA) ---
// --- CARGA DE DATOS SINCRONIZADA Y BLINDADA ---
// Variable global nueva para guardar los históricos individuales
let historialAgentesCache = {}; 

function cargarDatosGerente(periodo) {
    console.log('📊 Cargando ecosistema completo...');
    periodoActual = periodo;
    cerrarModal();
    const content = document.getElementById('content');
    if (!content) return;
    
    content.innerHTML = `<div class="loading"><div class="loader"></div><div>Conectando métricas 2025 vs 2024...</div></div>`;
    const filtros = calcularFiltrosPeriodo(periodo, 'gerente');

    // 1. CARGAR HISTÓRICO GLOBAL
    google.script.run.withSuccessHandler(function(jsonHistorico) {
        if(jsonHistorico) datosHistoricosCache = JSON.parse(jsonHistorico);
        else datosHistoricosCache = { totales: { citas:0, exclusivas:0, ventas:0, gci:0 }, fuentes: {} };

        // 2. CARGAR HISTÓRICO INDIVIDUAL
        const anioPasado = new Date().getFullYear() - 1;
        google.script.run.withSuccessHandler(function(histAgentes) {
            historialAgentesCache = histAgentes || {};
            console.log("✅ Históricos individuales cargados:", Object.keys(historialAgentesCache).length);

            // 3. CARGAR DATOS ACTUALES
            google.script.run.withSuccessHandler(function(datos) {
                if (!datos || !datos.agentes) {
                    mostrarError({ message: "Error de datos." });
                    return;
                }
                datosGlobales = datos.agentes;
                datosAgregadosEquipo = datos.evolucionMensualEquipo;
                datosFiltrados = datosGlobales;
                
                // ✅ Extraer transacciones para la vista
                window.transaccionesGlobales = [];
                datos.agentes.forEach(agente => {
                    const actividad = agente.actividadDetallada || [];
                    actividad.forEach(dia => {
                        if (dia.gci > 0 && dia.notas && dia.notas.includes('TRANSACCIÓN')) {
                            let tipo = 'Venta';
                            let lado = 'Ambos';
                            let descripcion = dia.notas;
                            
                            const match = dia.notas.match(/TRANSACCIÓN:\s*(\w+)\s*\|\s*(\w+)\s*\|\s*([^|]+)/);
                            if (match) {
                                tipo = match[1];
                                lado = match[2];
                                descripcion = match[3].trim();
                            }
                            
                            window.transaccionesGlobales.push({
                                fecha: dia.fecha,
                                agente: agente.nombre,
                                tipo: tipo,
                                lado: lado,
                                descripcion: descripcion,
                                gci: dia.gci,
                                comision: dia.comisionPagada || 0,
                                volumenNegocio: dia.volumenNegocio || 0
                            });
                        }
                    });
                });
                console.log('💰 Transacciones extraídas:', window.transaccionesGlobales.length);
                
                // 4. ✅ CARGAR BENEFICIO NETO
                google.script.run
                    .withSuccessHandler(function(resultadoBeneficio) {
                        if (resultadoBeneficio && resultadoBeneficio.success) {
                            window.datosBeneficioGlobal = resultadoBeneficio;
                            window.beneficioNetoGlobal = resultadoBeneficio.beneficioNeto || 0;
                            console.log('💰 Beneficio Neto:', resultadoBeneficio.beneficioNeto, '€ (' + resultadoBeneficio.porcentajeBeneficio.toFixed(1) + '%)');
                        } else {
                            // Si falla, poner valores por defecto
                            window.datosBeneficioGlobal = null;
                            window.beneficioNetoGlobal = 0;
                            console.warn('⚠️ No se pudo cargar beneficio neto');
                        }
                        
                        // 5. ✅ CARGAR ESTADÍSTICAS DE TRANSACCIONES
                        google.script.run
                            .withSuccessHandler(function(resultadoTx) {
                                if (resultadoTx && resultadoTx.success) {
                                    window.datosTransaccionesGlobal = resultadoTx;
                                    window.totalTransaccionesGlobal = resultadoTx.stats.total || 0;
                                    console.log('📊 Transacciones cargadas:', resultadoTx.stats.total);
                                } else {
                                    // Si falla, poner valores por defecto
                                    window.datosTransaccionesGlobal = null;
                                    window.totalTransaccionesGlobal = 0;
                                    console.warn('⚠️ No se pudo cargar estadísticas de transacciones');
                                }
                                
                                // 6. ✅ AHORA SÍ RENDERIZAR TODO
                                renderizarDashboardGerente();
                            })
                            .withFailureHandler(function(error) {
                                console.error('❌ Error al cargar transacciones:', error);
                                window.datosTransaccionesGlobal = null;
                                window.totalTransaccionesGlobal = 0;
                                // Continuar renderizando aunque falle
                                renderizarDashboardGerente();
                            })
                            .obtenerEstadisticasTransacciones(filtros);
                    })
                    .withFailureHandler(function(error) {
                        console.error('❌ Error al cargar beneficio:', error);
                        window.datosBeneficioGlobal = null;
                        window.beneficioNetoGlobal = 0;
                        // Continuar con transacciones aunque falle beneficio
                        google.script.run
                            .withSuccessHandler(function(resultadoTx) {
                                if (resultadoTx && resultadoTx.success) {
                                    window.datosTransaccionesGlobal = resultadoTx;
                                    window.totalTransaccionesGlobal = resultadoTx.stats.total || 0;
                                }
                                renderizarDashboardGerente();
                            })
                            .withFailureHandler(function() {
                                renderizarDashboardGerente();
                            })
                            .obtenerEstadisticasTransacciones(filtros);
                    })
                    .obtenerBeneficioNeto(filtros);
                
            }).obtenerDatosDashboard(filtros);

        }).obtenerTodosHistoricosAgentes(anioPasado);

    }).obtenerDatosHistoricosJSON();
}
// ===== SISTEMA DE COLORES PARA GRÁFICOS =====
function getChartColors() {
    // Detectar si estamos en modo claro
    const isDarkMode = document.body.classList.contains('dark-theme') || 
                       !document.body.classList.contains('light-theme');
    
    if (isDarkMode) {
        return {
            textColor: '#ffffff',
            gridColor: 'rgba(255,255,255,0.1)',
            backgroundColor: 'rgba(0,0,0,0.8)',
            // Colores de datos (siempre vibrantes)
            primary: '#667eea',
            success: '#00ff88',
            warning: '#ffd700',
            danger: '#ff6b6b',
            info: '#00c4ff',
            // Colores con transparencia
            primaryAlpha: 'rgba(102,126,234,0.8)',
            successAlpha: 'rgba(0,255,136,0.8)',
            warningAlpha: 'rgba(255,215,0,0.8)',
            dangerAlpha: 'rgba(255,107,107,0.8)',
            infoAlpha: 'rgba(0,196,255,0.8)',
        };
    } else {
        // MODO CLARO
        return {
            textColor: '#1a1a1a',
            gridColor: 'rgba(0,0,0,0.1)',
            backgroundColor: 'rgba(255,255,255,0.95)',
            // Colores de datos ajustados para modo claro
            primary: '#4a5fd9',
            success: '#00c466',
            warning: '#e6b800',
            danger: '#e63946',
            info: '#0099cc',
            // Colores con transparencia
            primaryAlpha: 'rgba(74,95,217,0.7)',
            successAlpha: 'rgba(0,196,102,0.7)',
            warningAlpha: 'rgba(230,184,0,0.7)',
            dangerAlpha: 'rgba(230,57,70,0.7)',
            infoAlpha: 'rgba(0,153,204,0.7)',
        };
    }
}

// Función para obtener opciones comunes de Chart.js
function getChartOptions(titulo, mostrarLeyenda = true) {
    const colors = getChartColors();
    
    return {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: mostrarLeyenda,
                position: 'top',
                labels: { 
                    color: colors.textColor, 
                    font: { size: 12 } 
                }
            },
            title: {
                display: !!titulo,
                text: titulo,
                color: colors.textColor,
                font: { size: 16, weight: 'bold' }
            }
        },
        scales: {
            x: {
                ticks: { color: colors.textColor },
                grid: { color: colors.gridColor }
            },
            y: {
                ticks: { color: colors.textColor },
                grid: { color: colors.gridColor }
            }
        }
    };
}
        
        function calcularFiltrosPeriodo(periodo, vista = 'gerente') {
            const hoy = new Date();
            let fechaInicio, fechaFin;
            fechaFin = new Date(hoy);
            
            const inicioEl = document.getElementById(`${vista}-fecha-inicio`);
            const finEl = document.getElementById(`${vista}-fecha-fin`);

            switch(periodo) {
                case 'dia':
                    fechaInicio = new Date(hoy.getFullYear(), hoy.getMonth(), hoy.getDate());
                    break;
                case 'semana':
                    fechaInicio = new Date(hoy.getTime() - 7 * 24 * 60 * 60 * 1000);
                    break;
                case 'mes':
                    fechaInicio = new Date(hoy.getFullYear(), hoy.getMonth(), 1);
                    break;
                case 'trimestre':
                    const mesActual = hoy.getMonth();
                    const inicioTrimestre = Math.floor(mesActual / 3) * 3;
                    fechaInicio = new Date(hoy.getFullYear(), inicioTrimestre, 1);
                    break;
                case 'semestre':
                    const inicioSemestre = hoy.getMonth() < 6 ? 0 : 6;
                    fechaInicio = new Date(hoy.getFullYear(), inicioSemestre, 1);
                    break;
                case 'ano':
                    fechaInicio = new Date(hoy.getFullYear(), 0, 1);
                    break;
                default: // 'custom'
                    const inicio = (vista === 'agente' ? agenteFechaInicio : gerenteFechaInicio) || `${new Date().getFullYear()}-01-01`;
                    const fin = (vista === 'agente' ? agenteFechaFin : gerenteFechaFin) || hoy.toISOString().split('T')[0];
                    fechaInicio = new Date(inicio + "T00:00:00"); // Asegurar zona horaria local
                    fechaFin = new Date(fin + "T23:59:59"); // Asegurar zona horaria local
                    break;
            }
            return {
                fechaInicio: fechaInicio.toISOString().split('T')[0],
                fechaFin: fechaFin.toISOString().split('T')[0]
            };
        }

        function aplicarFiltroGerenteCustom() {
            periodoActual = 'custom';
            gerenteFechaInicio = document.getElementById('gerente-fecha-inicio').value;
            gerenteFechaFin = document.getElementById('gerente-fecha-fin').value;
            document.querySelectorAll('#modal-filtros-body .filtro-btn').forEach(btn => btn.classList.remove('active'));
            cargarDatosGerente('custom');
        }
        
