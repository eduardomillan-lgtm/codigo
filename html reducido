        function mostrarModalTemas() {
            cerrarModal();
            document.getElementById('modal-temas').classList.add('active');
            document.body.classList.add('modal-open');
        }

        function aplicarTema(themeName) {
            console.log('üé® Aplicando tema:', themeName);
            document.body.dataset.theme = themeName;
            localStorage.setItem('dashboardTheme', themeName);
            actualizarChartDefaults();
            cerrarModal();
        }

        function cargarTemaGuardado() {
            const savedTheme = localStorage.getItem('dashboardTheme') || 'kw-dark';
            document.body.dataset.theme = savedTheme;
            actualizarChartDefaults();
        }

        function toggleFullScreen() {
            if (!document.fullscreenElement &&    // Standard
                !document.mozFullScreenElement && // Firefox
                !document.webkitFullscreenElement && // Chrome, Safari y Opera
                !document.msFullscreenElement) {  // IE/Edge
                
                const elem = document.documentElement;    
                if (elem.requestFullscreen) {
                    elem.requestFullscreen();
                } else if (elem.mozRequestFullScreen) { /* Firefox */
                    elem.mozRequestFullScreen();
                } else if (elem.webkitRequestFullscreen) { /* Chrome, Safari y Opera */
                    elem.webkitRequestFullscreen(Element.ALLOW_KEYBOARD_INPUT);
                } else if (elem.msRequestFullscreen) { /* IE/Edge */
                    elem.msRequestFullscreen();
                }
            } else {
                if (document.exitFullscreen) {
                    document.exitFullscreen();
                } else if (document.mozCancelFullScreen) { /* Firefox */
                    document.mozCancelFullScreen();
                } else if (document.webkitExitFullscreen) { /* Chrome, Safari y Opera */
                    document.webkitExitFullscreen();
                } else if (document.msExitFullscreen) { /* IE/Edge */
                    document.msExitFullscreen();
                }
            }
        }

        function tomarCaptura() {
            const loader = document.getElementById('loader-overlay');
            const target = document.querySelector('.view-container.active');
            if (!target) return;

            loader.style.display = 'flex';    

            const stickyFilter = target.querySelector('.filtros-rapidos.is-sticky');
            const scrollTopBtn = document.getElementById('scrollTopButton');
            if (stickyFilter) stickyFilter.style.display = 'none';
            if (scrollTopBtn) scrollTopBtn.style.display = 'none';

            html2canvas(target, {
                backgroundColor: getComputedStyle(document.body).getPropertyValue('--color-bg'),
                useCORS: true,
                logging: false,
                onclone: (doc) => {
                    const bg = doc.querySelector('.animated-bg');
                    const stars = doc.querySelector('.stars');
                    if (bg) bg.style.display = 'none';
                    if (stars) stars.style.display = 'none';
                }
            }).then(canvas => {
                const link = document.createElement('a');
                const timestamp = new Date().toISOString().split('T')[0];
                link.download = `dashboard-kw-${timestamp}.png`;
                link.href = canvas.toDataURL('image/png');
                link.click();
                
                loader.style.display = 'none';
                if (stickyFilter) stickyFilter.style.display = 'flex';    
                if (scrollTopBtn) scrollTopBtn.style.display = 'flex';

            }).catch(err => {
                console.error('Error al generar la captura:', err);
                loader.style.display = 'none';
                if (stickyFilter) stickyFilter.style.display = 'flex';
                if (scrollTopBtn) scrollTopBtn.style.display = 'flex';
                // [REPARACI√ìN C] Cambiado alert a mostrarError
                mostrarError({ message: 'Hubo un error al generar la captura de pantalla.' });
            });
        }

        </script>
        <script>
          // Variable global para rastrear √∫ltimo campo modificado
window.ultimoCampoComisionTx = 'pct';
        /* --- UTIL: evita inyecci√≥n al insertar texto din√°mico --- */
        function escapeHtml(str) {
            if (str === null || str === undefined) return '';
            return String(str)
                .replace(/&/g, '&amp;')
                .replace(/</g, '&lt;')
                .replace(/>/g, '&gt;')
                .replace(/"/g, '&quot;')
                .replace(/'/g, '&#039;');
        }

        /* Lanza la petici√≥n al servidor y maneja errores */
        function loadAgentes() {
            const container = document.getElementById('agentesContainer');
            if (container) container.innerHTML = '<div class="loader">Cargando agentes‚Ä¶</div>';

            google.script.run
                .withSuccessHandler(renderAgentes)
                .withFailureHandler(function(err){
                    console.error('Error obtenerListaAgentes:', err);
                    if (container) {
                        container.innerHTML = '<div class="error">Error al cargar agentes. Revisa permisos/hojas. ' +
                                                (err && err.message ? escapeHtml(err.message) : '') + '</div>';
                    }
                })
                .obtenerListaAgentes(); 
        }

        /* Renderiza la lista de agentes de forma resiliente */
        function renderAgentes(agentes) {
            const container = document.getElementById('agentesContainer');
            if (!container) return;

            if (!Array.isArray(agentes) || agentes.length === 0) {
                container.innerHTML = '<div class="info">No hay agentes disponibles.</div>';
                return;
            }

            // Construcci√≥n responsive: usa flexbox y tarjetas
            container.innerHTML = '';
            agentes.forEach(a => {
                const nombre = a.nombre || a.agente || 'Agente sin nombre';
                const email = a.email ? `<div class="agent-email">${escapeHtml(a.email)}</div>` : '';
                const acum = a.objetivosAcumulados ? 'S√≠' : 'No';

                const card = document.createElement('div');
                card.className = 'agent-card';
                card.innerHTML = `
                    <div class="agent-card-inner">
                        <h3 class="agent-name">${escapeHtml(nombre)}</h3>
                        ${email}
                        <div class="agent-meta">ID: <span class="meta-val">${escapeHtml(a.id||'')}</span> ¬∑ Objetivos acumulados: <span class="meta-val">${escapeHtml(acum)}</span></div>
                        <div class="agent-actions">
                            <button class="btn small" onclick="openAgentDetail('${escapeHtml(a.id||'')}', '${escapeHtml(nombre)}')">Abrir</button>
                        </div>
                    </div>
                `;
                container.appendChild(card);
            });
        }

        /* Ejemplo de funci√≥n que abre detalle (puedes personalizar) */
        function openAgentDetail(id, nombre) {
            // usa esto para mostrar la vista de agente o poner el id en un formulario
            console.log('Abrir detalle agente', id, nombre);
            // ej. fill a form, mostrar modal, llamar obtenerDatosDashboard({agentId: id})
            // Aqu√≠ solo un ejemplo r√°pido:
            const detalle = document.getElementById('agentDetail');
            if (detalle) detalle.innerHTML = `<h4>Detalle: ${escapeHtml(nombre)}</h4><p>ID: ${escapeHtml(id)}</p>`;
        }

        /* Auto carga al cargar la p√°gina */
        document.addEventListener('DOMContentLoaded', loadAgentes);
        function mostrarModalModeloEconomico() {
    document.getElementById('modal-modelo-economico').classList.add('active');
    document.body.classList.add('modal-open');
}


function mostrarModalModeloOrganizativo() {
    
    document.getElementById('modal-modelo-organizativo').classList.add('active');
    document.body.classList.add('modal-open');
    
    // Cargar organigrama actual si existe
    google.script.run
        .withSuccessHandler(function(datos) {
            if (datos) {
                document.getElementById('org-team-leader').value = datos.teamLeader || '';
                document.getElementById('org-lider-ventas').value = datos.liderVentas || '';
                document.getElementById('org-lider-captacion').value = datos.liderCaptacion || '';
                document.getElementById('org-agente-1').value = datos.agentes[0] || '';
                document.getElementById('org-agente-2').value = datos.agentes[1] || '';
                document.getElementById('org-agente-3').value = datos.agentes[2] || '';
                document.getElementById('org-agente-4').value = datos.agentes[3] || '';
            }
        })
        .withFailureHandler(function(err) {
            console.log('No hay organigrama previo:', err);
        })
        .obtenerOrganigrama();
}

// === LOGICA GPS 1-3-5 ===

function mostrarModalPlantillaGPS() {
    
    document.getElementById('modal-plantilla-gps').classList.add('active');
    document.body.classList.add('modal-open');
    
    // Poner nombre del agente en el papel
    const nombre = agenteActual ? agenteActual.nombre : "Agente";
    document.getElementById('gps-display-name').textContent = nombre;

    // Cargar datos guardados
    cargarDatosGPS();
}

function guardarDatosGPS() {
    // 1. Obtener el nombre escrito en el papel
    const nombreEscrito = document.getElementById('gps-display-name').value;
    const anioEscrito = document.getElementById('gps-display-year').value;

    // 2. Definir identidad para guardar
    let idParaGuardar = 'GERENTE'; 
    let nombreParaGuardar = nombreEscrito || 'Gerente';

    // Si hay un agente logueado (Vista Agente), usamos su ID real
    if (typeof agenteActual !== 'undefined' && agenteActual) {
        idParaGuardar = agenteActual.id;
        nombreParaGuardar = agenteActual.nombre; // O respetamos si cambi√≥ el nombre en el input
    } 
    else {
        // MODO GERENTE: Generamos un ID basado en el nombre escrito para diferenciar versiones
        // Ej: Si escribes "Juan Perez", el ID ser√° "GPS_JUAN_PEREZ"
        if (nombreEscrito && nombreEscrito.trim() !== "") {
            idParaGuardar = 'GPS_' + nombreEscrito.trim().replace(/\s+/g, '_').toUpperCase();
        }
    }

    const contenido = {
        meta_nombre: nombreParaGuardar,
        meta_anio: anioEscrito,
        
        oneThing: document.getElementById('gps-onething').value,
        p1: {
            titulo: document.getElementById('gps-p1-title').value,
            s1: document.getElementById('gps-p1-s1').value,
            s2: document.getElementById('gps-p1-s2').value,
            s3: document.getElementById('gps-p1-s3').value,
            s4: document.getElementById('gps-p1-s4').value,
            s5: document.getElementById('gps-p1-s5').value
        },
        p2: {
            titulo: document.getElementById('gps-p2-title').value,
            s1: document.getElementById('gps-p2-s1').value,
            s2: document.getElementById('gps-p2-s2').value,
            s3: document.getElementById('gps-p2-s3').value,
            s4: document.getElementById('gps-p2-s4').value,
            s5: document.getElementById('gps-p2-s5').value
        },
        p3: {
            titulo: document.getElementById('gps-p3-title').value,
            s1: document.getElementById('gps-p3-s1').value,
            s2: document.getElementById('gps-p3-s2').value,
            s3: document.getElementById('gps-p3-s3').value,
            s4: document.getElementById('gps-p3-s4').value,
            s5: document.getElementById('gps-p3-s5').value
        }
    };

    const datos = {
        idAgente: idParaGuardar,
        nombreAgente: nombreParaGuardar,
        contenido: contenido
    };

    mostrarNotificacion(" üíæ  Guardando GPS...");

    google.script.run
        .withSuccessHandler(res => {
             mostrarNotificacion(" ‚úÖ " + res.message);
        })
        .withFailureHandler(err => {
             mostrarNotificacion(" ‚ùå Error: " + err.message, true);
        })
        .guardarGPS135(datos);
}

function cargarDatosGPS() {
    if (!agenteActual) return;

    google.script.run
        .withSuccessHandler(function(res) {
            const data = res.contenido;
            if (data) {
                // Rellenar campos
                document.getElementById('gps-onething').value = data.oneThing || '';
                
                document.getElementById('gps-p1-title').value = data.p1?.titulo || '';
                document.getElementById('gps-p1-s1').value = data.p1?.s1 || '';
                document.getElementById('gps-p1-s2').value = data.p1?.s2 || '';
                document.getElementById('gps-p1-s3').value = data.p1?.s3 || '';
                document.getElementById('gps-p1-s4').value = data.p1?.s4 || '';
                document.getElementById('gps-p1-s5').value = data.p1?.s5 || '';

                document.getElementById('gps-p2-title').value = data.p2?.titulo || '';
                document.getElementById('gps-p2-s1').value = data.p2?.s1 || '';
                document.getElementById('gps-p2-s2').value = data.p2?.s2 || '';
                document.getElementById('gps-p2-s3').value = data.p2?.s3 || '';
                document.getElementById('gps-p2-s4').value = data.p2?.s4 || '';
                document.getElementById('gps-p2-s5').value = data.p2?.s5 || '';

                document.getElementById('gps-p3-title').value = data.p3?.titulo || '';
                document.getElementById('gps-p3-s1').value = data.p3?.s1 || '';
                document.getElementById('gps-p3-s2').value = data.p3?.s2 || '';
                document.getElementById('gps-p3-s3').value = data.p3?.s3 || '';
                document.getElementById('gps-p3-s4').value = data.p3?.s4 || '';
                document.getElementById('gps-p3-s5').value = data.p3?.s5 || '';
            } else {
                // Limpiar si es nuevo
                document.querySelectorAll('.gps-input-line, .gps-input-area').forEach(el => el.value = '');
            }
        })
        .obtenerGPS135(agenteActual.id);
}

function imprimirGPS() {
    document.body.classList.add('print-mode-gps'); // Activa modo GPS
    window.print();
    // Quitar la clase despu√©s de imprimir para que vuelva a la normalidad
    setTimeout(() => {
        document.body.classList.remove('print-mode-gps');
    }, 1000);
}

function mostrarModalRentabilidad() {
    
    document.getElementById('modal-rentabilidad').classList.add('active');
    document.body.classList.add('modal-open');
    
    setTimeout(() => {
        cargarRentabilidadAgentes();
    }, 100);
}

// ============================================
// üîß FUNCIONES DE APOYO PARA LOS NUEVOS MODELOS
// ============================================

function calcularModeloEconomico() {
    const gciObjetivo = parseFloat(document.getElementById('me-gci-objetivo').value);
    const convCapt = parseFloat(document.getElementById('me-conv-capt-excl').value) / 100;
    const convVenta = parseFloat(document.getElementById('me-conv-excl-venta').value) / 100;
    const gciMedio = parseFloat(document.getElementById('me-gci-medio').value);
    const citasSemana = parseFloat(document.getElementById('me-citas-semana').value);
    const semanasAno = parseFloat(document.getElementById('me-semanas-ano').value);

    // C√°lculos
    const ventasNecesarias = Math.ceil(gciObjetivo / gciMedio);
    const exclusivasNecesarias = Math.ceil(ventasNecesarias / convVenta);
    const citasNecesarias = Math.ceil(exclusivasNecesarias / convCapt);
    const citasAnuales = citasSemana * semanasAno;
    const semanasParaCitas = citasNecesarias / citasSemana;

    const html = `
        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 20px;">
            <div style="padding: 20px; background: rgba(0,255,136,0.1); border-radius: 10px; text-align: center;">
                <div style="font-size: 2.5em; font-weight: 900; color: var(--color-accent-good);">${ventasNecesarias}</div>
                <div style="margin-top: 10px; color: var(--color-text-secondary);">Ventas Necesarias</div>
            </div>
            <div style="padding: 20px; background: rgba(255,215,0,0.1); border-radius: 10px; text-align: center;">
                <div style="font-size: 2.5em; font-weight: 900; color: var(--color-accent-warn);">${exclusivasNecesarias}</div>
                <div style="margin-top: 10px; color: var(--color-text-secondary);">Exclusivas Necesarias</div>
            </div>
            <div style="padding: 20px; background: rgba(102,126,234,0.1); border-radius: 10px; text-align: center;">
                <div style="font-size: 2.5em; font-weight: 900; color: var(--color-accent-ia);">${citasNecesarias}</div>
                <div style="margin-top: 10px; color: var(--color-text-secondary);">Citas Captaci√≥n Necesarias</div>
            </div>
            <div style="padding: 20px; background: rgba(255,68,68,0.1); border-radius: 10px; text-align: center;">
                <div style="font-size: 2.5em; font-weight: 900; color: var(--color-accent-bad);">${citasAnuales.toFixed(0)}</div>
                <div style="margin-top: 10px; color: var(--color-text-secondary);">Citas Anuales al Ritmo Actual</div>
            </div>
        </div>
        <div style="margin-top: 30px; padding: 20px; background: var(--color-surface); border-radius: 10px;">
            <h4 style="color: var(--color-secondary); margin-bottom: 15px;">üìä An√°lisis</h4>
            <p><strong>Necesitas:</strong> ${semanasParaCitas.toFixed(1)} semanas de citas a tu ritmo actual de ${citasSemana} citas/semana</p>
            <p><strong>Conversi√≥n Total:</strong> ${(convCapt * convVenta * 100).toFixed(1)}% (de cita a venta)</p>
            <p><strong>Cada venta genera:</strong> ${gciMedio.toLocaleString('es-ES')}‚Ç¨ de GCI</p>
            ${citasAnuales >= citasNecesarias ? 
                '<p style="color: var(--color-accent-good); font-weight: 700;">‚úÖ Tu ritmo de citas es SUFICIENTE para alcanzar el objetivo</p>' :
                '<p style="color: var(--color-accent-bad); font-weight: 700;">‚ö†Ô∏è Necesitas aumentar tu ritmo de citas en ' + ((citasNecesarias - citasAnuales) / semanasAno).toFixed(1) + ' citas/semana</p>'
            }
        </div>
    `;
    
    document.getElementById('resultados-modelo-economico').style.display = 'block';
    document.getElementById('me-resultados-content').innerHTML = html;
}

let datosPresupuestoGlobal = null; // Variable para guardar los datos al hacer clic

function cargarModeloPresupuestario() {
    const ctx = document.getElementById('chart-presupuestario');
    
    // Mostrar "Cargando..." visualmente (opcional, ayuda a saber que est√° pensando)
    if (chartInstances['presupuestario']) {
        chartInstances['presupuestario'].clear(); 
    }

    // LLAMADA AL SERVIDOR (Google Script)
    google.script.run
      .withSuccessHandler(function(datos) {
          console.log("DATOS RECIBIDOS DEL SERVIDOR:", datos); // <--- Mira la consola (F12) para ver esto
          datosPresupuestoGlobal = datos; 
          
          // Calcular Beneficio Neto (GCI - GastosVentas - GastosOperativos)
          const beneficio = datos.gciMensual.map((gci, i) => {
              return gci - datos.gastosVentas[i] - datos.gastosOperativos[i];
          });

          if (chartInstances['presupuestario']) chartInstances['presupuestario'].destroy();

          chartInstances['presupuestario'] = new Chart(ctx, {
              type: 'bar',
              data: {
                  labels: datos.meses,
                  datasets: [
                      {
                          label: 'GCI Real (Ingresos)',
                          data: datos.gciMensual,
                          backgroundColor: 'rgba(0, 255, 136, 0.3)',
                          borderColor: 'rgba(0, 255, 136, 1)',
                          borderWidth: 1,
                          stack: 'Ingresos',
                          order: 1
                      },
                      {
                          label: 'Comisiones (Gastos Ventas)', 
                          data: datos.gastosVentas,
                          backgroundColor: 'rgba(255, 215, 0, 0.8)', // AMARILLO
                          stack: 'Gastos'
                      },
                      {
                          label: 'Gastos Operativos', 
                          data: datos.gastosOperativos,
                          backgroundColor: 'rgba(255, 68, 68, 0.8)', // ROJO
                          stack: 'Gastos'
                      },
                      {
                          label: 'Beneficio Neto',
                          data: beneficio,
                          type: 'line',
                          borderColor: 'rgba(102, 126, 234, 1)', // AZUL
                          borderWidth: 3,
                          pointBackgroundColor: '#fff',
                          pointRadius: 4,
                          order: 0 
                      }
                  ]
              },
              options: {
                  responsive: true,
                  maintainAspectRatio: false,
                  interaction: {
                      mode: 'index',
                      intersect: false,
                  },
                  plugins: {
                      legend: { position: 'top' },
                      tooltip: {
                          callbacks: {
                              footer: () => ' üëá Haz click para ver detalles'
                          }
                      }
                  },
                  onClick: (evt, elements) => {
                      // L√≥gica del click para ver detalles
                      const chart = chartInstances['presupuestario'];
                      const points = chart.getElementsAtEventForMode(evt, 'nearest', { intersect: true }, true);

                      if (points.length) {
                          const firstPoint = points[0];
                          const mesIndex = firstPoint.index;
                          const datasetIndex = firstPoint.datasetIndex;
                          
                          // datasetIndex 1 = Comisiones, datasetIndex 2 = Operativos
                          if (datasetIndex === 1) {
                              mostrarDetalleGastos('VENTAS', mesIndex);
                          } else if (datasetIndex === 2) {
                              mostrarDetalleGastos('OPERATIVOS', mesIndex);
                          }
                      }
                  },
                  scales: {
                      y: { beginAtZero: true, stacked: true }, // Apilado
                      x: { stacked: true } 
                  }
              }
          });
      })
      .withFailureHandler(function(error) {
          console.error("Error:", error);
          alert("Error al cargar datos: " + error.message);
      })
      .obtenerDatosPresupuestarios(new Date().getFullYear());
}

function mostrarDetalleGastos(tipo, mesIndex) {
    if (!datosPresupuestoGlobal) return;
    
    const meses = ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'];
    const nombreMes = meses[mesIndex];
    
    let listaItems = [];
    let titulo = "";
    
    if (tipo === 'VENTAS') {
        titulo = ` üí∞  Comisiones Pagadas - ${nombreMes}`;
        listaItems = datosPresupuestoGlobal.detallesVentas[mesIndex];
    } else {
        titulo = ` üí∏  Gastos Operativos - ${nombreMes}`;
        listaItems = datosPresupuestoGlobal.detallesOperativos[mesIndex];
    }

    document.getElementById('detalle-titulo').innerText = titulo;
    const tbody = document.getElementById('detalle-tabla-body');
    tbody.innerHTML = '';
    
    let total = 0;

    if (listaItems.length === 0) {
        tbody.innerHTML = '<tr><td colspan="4" style="text-align:center;">No hay registros.</td></tr>';
    } else {
        listaItems.forEach(item => {
            total += item.importe;
            tbody.innerHTML += `
                <tr>
                    <td>${item.fecha}</td>
                    <td><strong>${item.concepto}</strong></td>
                    <td>${item.desc}</td>
                    <td style="text-align:right;">${item.importe.toLocaleString('es-ES', {minimumFractionDigits: 2})} ‚Ç¨</td>
                </tr>
            `;
        });
    }
    
    document.getElementById('detalle-total').innerText = total.toLocaleString('es-ES', {style:'currency', currency:'EUR'});
    
    // Mostrar el modal peque√±o sobre el grande
    document.getElementById('modal-detalle-gasto-mes').classList.add('active');
}

function guardarOrganigrama() {
    const organigrama = {
        teamLeader: document.getElementById('org-team-leader').value,
        liderVentas: document.getElementById('org-lider-ventas').value,
        liderCaptacion: document.getElementById('org-lider-captacion').value,
        agentes: [
            document.getElementById('org-agente-1').value,
            document.getElementById('org-agente-2').value,
            document.getElementById('org-agente-3').value,
            document.getElementById('org-agente-4').value
        ]
    };
    
    console.log('üíæ Guardando organigrama:', organigrama);
    
    google.script.run
        .withSuccessHandler(function(respuesta) {
            alert('‚úÖ Organigrama guardado correctamente');
            cerrarModal();
        })
        .withFailureHandler(function(error) {
            alert('‚ùå Error al guardar: ' + error.message);
        })
        .guardarOrganigrama(organigrama);
}

// --- FACTURACI√ìN PASADA ---
function calcularFacturacionPasada() {
    const fuentes = ['ei', 'ref', 'bd', 'pros', 'port'];
    fuentes.forEach(f => {
        const v = parseFloat(document.getElementById(`fp-${f}-hon-v`).value)||0;
        const c = parseFloat(document.getElementById(`fp-${f}-hon-c`).value)||0;
        document.getElementById(`fp-${f}-total`).innerText = (v+c).toLocaleString('es-ES') + "‚Ç¨";
    });
}

// --- FUNCI√ìN DE CARGA DE DATOS (RENTABILIDAD) ---
function cargarRentabilidadAgentes() {
    const container = document.getElementById('rentabilidad-content');
    // Leer estado del interruptor
    const toggle = document.getElementById('rentabilidad-toggle');
    const esProyeccion = toggle ? toggle.checked : false;
    
    container.innerHTML = '<div class="loader"></div><div>Calculando rentabilidad...</div>';

    google.script.run
        .withSuccessHandler(function(res) {
            if (!res || !res.success || !res.datos || res.datos.length === 0) {
                container.innerHTML = '<div style="padding:20px; text-align:center;">No hay datos financieros disponibles.</div>';
                return;
            }

            // 1. CALCULAR TOTALES GENERALES
            const totalFijo = res.datos.reduce((s, d) => s + (d[2] || 0), 0);
            const totalComision = res.datos.reduce((s, d) => s + (d[3] || 0), 0);
            const totalGCI = res.datos.reduce((s, d) => s + (d[6] || 0), 0);
            const totalBeneficio = res.datos.reduce((s, d) => s + (d[9] || 0), 0);
            const roiGlobal = totalGCI > 0 ? ((totalBeneficio / totalGCI) * 100) : 0;
            
            // 2. PREPARAR DATOS PARA GR√ÅFICOS
            const labels = res.datos.map(d => d[1]); // Nombres
            const dataGCI = res.datos.map(d => d[6]); // GCI
            const dataCoste = res.datos.map(d => d[2] + d[3]); // Fijo + Variable
            const dataValorHora = res.datos.map(d => d[8]); // Valor Hora
            
            // 3. GENERAR HTML CON RESUMEN EJECUTIVO
            let html = `
                <div style="text-align:right; font-size:0.9em; color:var(--color-accent-good); margin-bottom:15px; font-weight:700;">
                    üìä VISTA: ${res.modo || 'A LA FECHA'}
                </div>
                
                <!-- RESUMEN EJECUTIVO -->
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 15px; margin-bottom: 25px;">
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center;">
                        <div style="font-size: 0.85em; color: #aaa;">üí∞ GCI Total</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: var(--color-accent-good);">
                            ${totalGCI.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨
                        </div>
                    </div>
                    
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center;">
                        <div style="font-size: 0.85em; color: #aaa;">üí∏ Comisiones</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: #ff6b6b;">
                            ${totalComision.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨
                        </div>
                        <div style="font-size: 0.75em; color: #aaa; margin-top: 3px;">
                            ${totalGCI > 0 ? ((totalComision / totalGCI) * 100).toFixed(1) : 0}% del GCI
                        </div>
                    </div>
                    
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center;">
                        <div style="font-size: 0.85em; color: #aaa;">üè¢ Sueldos Fijos</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: #ffd700;">
                            ${totalFijo.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨
                        </div>
                    </div>
                    
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center; border: 2px solid ${totalBeneficio >= 0 ? '#00ff88' : '#ff6b6b'};">
                        <div style="font-size: 0.85em; color: ${totalBeneficio >= 0 ? '#00ff88' : '#ff6b6b'};">‚úÖ Beneficio Neto</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: ${totalBeneficio >= 0 ? '#00ff88' : '#ff6b6b'};">
                            ${totalBeneficio.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨
                        </div>
                        <div style="font-size: 0.75em; color: ${totalBeneficio >= 0 ? '#00ff88' : '#ff6b6b'}; margin-top: 3px; font-weight: 700;">
                            ROI: ${roiGlobal.toFixed(1)}%
                        </div>
                    </div>
                </div>
                
                <!-- TABLA DETALLADA -->
                <div class="tabla-container">
                    <table class="tabla" style="font-size: 0.9em;">
                        <thead>
                            <tr style="background: rgba(255,255,255,0.05);">
                                <th style="text-align:left;">AGENTE</th>
                                <th>FIJO</th>
                                <th>COMISI√ìN</th>
                                <th>% COMIS.</th>
                                <th style="color:var(--color-accent-bad)">COSTE TOTAL</th>
                                <th style="color:var(--color-accent-good)">GCI</th>
                                <th>BENEFICIO</th>
                                <th>ROI %</th>
                                <th>COSTE/H</th>
                                <th>VALOR/H</th>
                            </tr>
                        </thead>
                        <tbody>
            `;

            res.datos.forEach(fila => {
                const costeTotal = fila[2] + fila[3];
                const pctComision = fila[6] > 0 ? ((fila[3] / fila[6]) * 100) : 0;
                const claseBeneficio = fila[9] >= 0 ? 'ratio-excelente' : 'ratio-bajo';
                const colorROI = fila[7] >= 50 ? '#00ff88' : fila[7] >= 30 ? '#ffd700' : '#ff6b6b';
                
                html += `
                    <tr>
                        <td style="text-align:left; font-weight:bold;">${fila[1]}</td>
                        <td>${(fila[2]||0).toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</td>
                        <td style="color:#ff6b6b; font-weight:700;">${(fila[3]||0).toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</td>
                        <td style="text-align:center; color:#ff6b6b;">${pctComision.toFixed(1)}%</td>
                        <td style="color:#ff6b6b;">${costeTotal.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</td>
                        <td style="color:#00ff88; font-weight:bold;">${(fila[6]||0).toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</td>
                        <td class="${claseBeneficio}" style="font-weight:900; font-size:1.05em;">${(fila[9]||0).toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</td>
                        <td style="color:${colorROI}; font-weight:700; text-align:center;">${(fila[7]||0).toFixed(0)}%</td>
                        <td style="text-align:center;">${(fila[5]||0).toFixed(1)}‚Ç¨</td>
                        <td style="font-weight:bold; text-align:center;">${(fila[8]||0).toFixed(1)}‚Ç¨</td>
                    </tr>
                `;
            });

            html += `
                        </tbody>
                        <tfoot>
                            <tr style="background: var(--color-surface); font-weight: bold; font-size: 1.05em; border-top: 2px solid rgba(255,255,255,0.2);">
                                <td style="text-align:left;">TOTAL</td>
                                <td>${totalFijo.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</td>
                                <td style="color:#ff6b6b; font-weight:900;">${totalComision.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</td>
                                <td style="text-align:center; color:#ff6b6b;">${totalGCI > 0 ? ((totalComision / totalGCI) * 100).toFixed(1) : 0}%</td>
                                <td style="color:#ff6b6b;">${(totalFijo + totalComision).toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</td>
                                <td style="color:#00ff88; font-weight:900;">${totalGCI.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</td>
                                <td style="color:${totalBeneficio >= 0 ? '#00ff88' : '#ff6b6b'}; font-weight:900;">${totalBeneficio.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</td>
                                <td style="color:${roiGlobal >= 50 ? '#00ff88' : roiGlobal >= 30 ? '#ffd700' : '#ff6b6b'}; font-weight:900; text-align:center;">${roiGlobal.toFixed(1)}%</td>
                                <td colspan="2"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                
                <!-- NOTAS EXPLICATIVAS -->
                <div style="background: rgba(255,255,255,0.05); padding: 15px; border-radius: 10px; margin-top: 20px; font-size: 0.85em; line-height: 1.8;">
                    <strong>üìä F√≥rmulas:</strong><br>
                    ‚Ä¢ <strong>Comisi√≥n</strong> = GCI √ó % Comisi√≥n (dato real de cada transacci√≥n)<br>
                    ‚Ä¢ <strong>Coste Total</strong> = Sueldo Fijo + Comisiones<br>
                    ‚Ä¢ <strong>Beneficio Neto</strong> = GCI - Coste Total<br>
                    ‚Ä¢ <strong>ROI</strong> = (Beneficio Neto / GCI) √ó 100<br><br>
                    <strong>üéØ Interpretaci√≥n ROI:</strong><br>
                    <span style="color:#00ff88;">‚â•50%</span>: Excelente | 
                    <span style="color:#ffd700;">30-50%</span>: Aceptable | 
                    <span style="color:#ff6b6b;"><30%</span>: Revisar
                </div>
            `;
            
            container.innerHTML = html;

            // 3. LLAMADA A LA FUNCI√ìN DE DIBUJO (CORREGIDA)
            setTimeout(() => {
                renderizarGraficosRentabilidad(labels, dataGCI, dataCoste, dataValorHora);
            }, 100);
        })
        .withFailureHandler(function(err){
            console.error("Error Rentabilidad:", err);
            container.innerHTML = `<div style="color:red">Error: ${err.message}</div>`;
        })
        .calcularRentabilidadAgentes(new Date().getFullYear(), esProyeccion);
}

// --- FUNCI√ìN DE DIBUJO DE GR√ÅFICOS (PEGA ESTO TAMBI√âN) ---
function renderizarGraficosRentabilidad(labels, dataGCI, dataCoste, dataValorHora) {
    // GR√ÅFICO 1: GCI vs COSTE
    const ctx1 = document.getElementById('chart-rentabilidad-barras');
    if (ctx1) {
        if (chartInstances.rent1) chartInstances.rent1.destroy();
        
        chartInstances.rent1 = new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'GCI Generado',
                        data: dataGCI,
                        backgroundColor: 'rgba(0, 255, 136, 0.6)', // Verde KW
                        borderColor: '#00ff88',
                        borderWidth: 1
                    },
                    {
                        label: 'Coste Total',
                        data: dataCoste,
                        backgroundColor: 'rgba(255, 68, 68, 0.6)', // Rojo Alerta
                        borderColor: '#ff4444',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { position: 'top' } },
                scales: { y: { beginAtZero: true } },
                onClick: () => ampliarGrafico('rent1', 'üí∞ Detalle GCI vs Coste')
            }
        });
    }

    // GR√ÅFICO 2: VALOR POR HORA
    const ctx2 = document.getElementById('chart-rentabilidad-valor');
    if (ctx2) {
        if (chartInstances.rent2) chartInstances.rent2.destroy();

        chartInstances.rent2 = new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Valor Generado / Hora (‚Ç¨)',
                    data: dataValorHora,
                    backgroundColor: 'rgba(102, 126, 234, 0.6)', // Azul IA
                    borderColor: '#667eea',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                indexAxis: 'y', // Gr√°fico horizontal
                plugins: { legend: { display: false } },
                scales: { x: { beginAtZero: true } },
                onClick: () => ampliarGrafico('rent2', '‚ö° Ranking de Eficiencia (‚Ç¨/hora)')
            }
        });
    }
}
function mostrarModalRegistrarGasto() {
    // PRIMERO: Abrir el modal INMEDIATAMENTE (no esperar)
    document.getElementById('modal-registrar-gasto').classList.add('active');
    document.body.classList.add('modal-open');
    document.getElementById('form-gasto').reset();
    document.getElementById('gasto-fecha').valueAsDate = new Date();
    
    // SEGUNDO: Cargar partidas en paralelo (en segundo plano)
    // Solo si el datalist est√° vac√≠o (primera vez)
    const datalist = document.getElementById('partidas-list');
    if (datalist.children.length === 0) {
        google.script.run
            .withSuccessHandler(function(partidas) {
                datalist.innerHTML = '';
                partidas.forEach(partida => {
                    datalist.innerHTML += `<option value="${partida}">`;
                });
            })
            .withFailureHandler(function(error) {
                console.error('Error al cargar partidas:', error);
                // El modal ya est√° abierto, el usuario puede escribir manualmente
            })
            .obtenerPartidasGastos();
    }
}
function guardarGasto(event) {
    event.preventDefault();
    const datos = {
        fecha: document.getElementById('gasto-fecha').value,
        partida: document.getElementById('gasto-partida').value,
        descripcion: document.getElementById('gasto-descripcion').value,
        importe: document.getElementById('gasto-importe').value
    };

    google.script.run
        .withSuccessHandler(function(res) {
            alert(' ‚úÖ ' + res.message);
            mostrarModalRegistrarGasto(); // Limpiar y seguir registrando
        })
        .withFailureHandler(function(err) {
            mostrarError(err);
        })
        .guardarGastoOperativo(datos);
}
// --- ESTA ES LA FUNCI√ìN QUE FALTA ---
function mostrarNotificacion(mensaje, esError = false) {
    const x = document.getElementById("app-notification");
    if (!x) return;
    
    x.textContent = mensaje;
    x.className = "show " + (esError ? "error" : "success");
    
    // Ocultar despu√©s de 3 segundos
    setTimeout(function(){ 
        x.className = x.className.replace("show", ""); 
        // Limpiar clases de color
        setTimeout(() => { x.className = ""; }, 300);
    }, 3000);
}
// --- FUNCI√ìN PARA EXPORTAR A CSV ---
function exportarTransaccionesCSV() {
    const transacciones = window.transaccionesGlobales || [];
    
    // Verificar si hay datos
    if (transacciones.length === 0) {
        mostrarNotificacion("No hay datos para exportar", true);
        return;
    }

    // 1. Aplicar el filtro actual (si hay uno seleccionado)
    let datosExportar = transacciones;
    // Aseguramos que la variable filtroMesTransacciones exista, si no, asumimos 'todos'
    const filtroActual = (typeof filtroMesTransacciones !== 'undefined') ? filtroMesTransacciones : 'todos';

    if (filtroActual !== 'todos') {
        datosExportar = transacciones.filter(t => new Date(t.fecha).getMonth() == filtroActual);
    }

    if (datosExportar.length === 0) {
        mostrarNotificacion("La selecci√≥n actual est√° vac√≠a", true);
        return;
    }

    // 2. Crear cabeceras CSV
    let csvContent = "Fecha,Agente,Tipo,Lado,Descripcion,GCI,Comision\n";

    // 3. Recorrer datos y formatear
    datosExportar.forEach(t => {
        const fechaObj = new Date(t.fecha);
        const fechaStr = !isNaN(fechaObj) ? fechaObj.toLocaleDateString('es-ES') : t.fecha;
        
        // Limpiar descripci√≥n de comas para no romper las columnas del CSV
        const descLimpia = (t.descripcion || "").replace(/,/g, " "); 
        const tipoLimpio = (t.tipo || "").replace(/,/g, " ");

        const fila = [
            fechaStr,
            t.agente,
            tipoLimpio,
            t.lado,
            descLimpia,
            (t.gci || 0).toFixed(2),      // Exportamos n√∫mero limpio
            (t.comision || 0).toFixed(2)
        ].join(",");
        
        csvContent += fila + "\n";
    });

    // 4. Generar descarga con codificaci√≥n correcta para tildes (BOM)
    const blob = new Blob(["\uFEFF" + csvContent], { type: 'text/csv;charset=utf-8;' });
    const link = document.createElement("a");
    const url = URL.createObjectURL(blob);
    
    // Nombre del archivo din√°mico seg√∫n el mes
    const nombresMeses = ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'];
    const sufijo = (filtroActual !== 'todos' && nombresMeses[filtroActual]) ? `_${nombresMeses[filtroActual]}` : '_anual';
    
    link.setAttribute("href", url);
    link.setAttribute("download", `transacciones_kw${sufijo}.csv`);
    
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
    
    mostrarNotificacion(" ‚úÖ  CSV descargado correctamente");
}
// --- LOGICA ORGANIGRAMA 7 NIVELES ---

function mostrarModalModeloOrganizativo() {
    abrirModalEncima('modal-modelo-organizativo');
    
    // Cargamos datos del servidor
    google.script.run.withSuccessHandler(jsonTexto => {
        if (jsonTexto) {
            try {
                const datos = JSON.parse(jsonTexto);
                // Recorremos todos los inputs del modal y si hay dato guardado, lo ponemos
                const inputs = document.querySelectorAll('.org-role-input');
                inputs.forEach(input => {
                    if (datos[input.id]) {
                        input.value = datos[input.id];
                    }
                });
            } catch (e) {
                console.error("Error al parsear organigrama", e);
            }
        }
    }).obtenerOrganigramaJSON();
}

function guardarOrganigramaCompleto() {
    const inputs = document.querySelectorAll('.org-role-input');
    const datos = {};
    
    // Guardamos cada casilla con su ID como clave
    inputs.forEach(input => {
        if(input.value.trim() !== "") {
            datos[input.id] = input.value;
        }
    });

    const jsonTexto = JSON.stringify(datos);
    mostrarNotificacion("üíæ Guardando Organigrama...");

    google.script.run
        .withSuccessHandler(() => {
            mostrarNotificacion("‚úÖ Modelo Organizativo Guardado");
            // Opcional: cerrarModalSuperior('modal-modelo-organizativo');
        })
        .withFailureHandler(err => mostrarNotificacion("‚ùå Error: " + err.message, true))
        .guardarOrganigramaJSON(jsonTexto);
}
// ==========================================
// üß† NUEVAS HERRAMIENTAS DE CONSULTOR√çA
// ==========================================

// --- GESTI√ìN DE DATOS HIST√ìRICOS COMPLETOS ---
let datosHistoricosCache = null;

function mostrarModalFacturacionPasada() {
    abrirModalEncima('modal-facturacion-pasada');
    
    // PRIMERO: Cargar las 18 partidas din√°micas
    google.script.run
        .withSuccessHandler(function(origenes) {
            const tbody = document.getElementById('tabla-origenes-negocio');
            let html = '';
            
            origenes.forEach((origen, idx) => {
                html += `
                    <tr>
                        <td style="text-align:left;">${origen}</td>
                        <td><input type="number" id="fp-origen-${idx}-capt" class="form-input" value="0" min="0"></td>
                        <td><input type="number" id="fp-origen-${idx}-gci" class="form-input" value="0" min="0" step="0.01" oninput="calcularPorcentajesFuentes()"></td>
                        <td id="fp-origen-${idx}-pct" style="font-weight:700;">0%</td>
                    </tr>
                `;
            });
            
            tbody.innerHTML = html;
            
            // SEGUNDO: Cargar datos hist√≥ricos guardados
            cargarDatosHistoricosFacturacion();
        })
        .withFailureHandler(function(error) {
            console.error('Error al cargar or√≠genes:', error);
            mostrarNotificacion('Error al cargar or√≠genes de negocio', 'error');
        })
        .obtenerOrigenesNegocio();
}

// ============================================
// FUNCI√ìN AUXILIAR: Cargar datos hist√≥ricos
// ============================================
// ============================================
// FUNCI√ìN AUXILIAR: Cargar datos hist√≥ricos
// ============================================
function cargarDatosHistoricosFacturacion() {
    google.script.run.withSuccessHandler(json => {
        if(json) {
            const data = JSON.parse(json);
            datosHistoricosCache = data;
            const t = data.totales || {};
            
            // Rellenar campos de totales si existen
            if(document.getElementById('hist-citas')) document.getElementById('hist-citas').value = t.citas || 0;
            if(document.getElementById('hist-exclusivas')) document.getElementById('hist-exclusivas').value = t.exclusivas || 0;
            if(document.getElementById('hist-ventas')) document.getElementById('hist-ventas').value = t.ventas || 0;
            if(document.getElementById('hist-gci')) document.getElementById('hist-gci').value = t.gci || 0;
            
            // ============================================
            // MEJORA 2: Cargar las 19 partidas desde el array
            // ============================================
            if (Array.isArray(data.fuentes)) {
                // Nuevo formato: array de 19 elementos
                data.fuentes.forEach((fuente, idx) => {
                    const captInput = document.getElementById(`fp-origen-${idx}-capt`);
                    const gciInput = document.getElementById(`fp-origen-${idx}-gci`);
                    
                    if (captInput) captInput.value = fuente.capt || 0;
                    if (gciInput) gciInput.value = fuente.gci || 0;
                });
            } else {
                // Formato antiguo: objeto con 5 claves (ei, ref, bd, pros, port)
                // Mapear a las nuevas posiciones
                const mapeoFuentesAntiguas = {
                    'ei': 1,    // Esfera de Influencia
                    'ref': 6,   // Referidos de Clientes Antiguos
                    'bd': 1,    // Base de Datos ‚Üí Esfera de Influencia
                    'pros': 3,  // Prospecci√≥n ‚Üí Farming
                    'port': 16  // Portales ‚Üí Idealistas
                };
                
                ['ei','ref','bd','pros','port'].forEach(f => {
                    const posicion = mapeoFuentesAntiguas[f];
                    const captAntiguo = data.fuentes?.[f]?.capt || 0;
                    const gciAntiguo = data.fuentes?.[f]?.gci || 0;
                    
                    const elCapt = document.getElementById(`fp-origen-${posicion}-capt`);
                    const elGci = document.getElementById(`fp-origen-${posicion}-gci`);
                    
                    if (elCapt && captAntiguo > 0) {
                        elCapt.value = (parseFloat(elCapt.value) || 0) + captAntiguo;
                    }
                    if (elGci && gciAntiguo > 0) {
                        elGci.value = (parseFloat(elGci.value) || 0) + gciAntiguo;
                    }
                });
            }
            
            // Recalcular porcentajes
            if(typeof calcularPorcentajesFuentes === 'function') calcularPorcentajesFuentes();
        }
    }).obtenerDatosHistoricosJSON();
}

function guardarDatosHistoricos() {
    const datos = {
        totales: {
            citas: parseFloat(document.getElementById('hist-citas')?.value)||0,
            exclusivas: parseFloat(document.getElementById('hist-exclusivas')?.value)||0,
            abierto: parseFloat(document.getElementById('hist-abierto')?.value)||0,
            citasComp: parseFloat(document.getElementById('hist-citas-comp')?.value)||0,
            visitas: parseFloat(document.getElementById('hist-visitas')?.value)||0,
            exclusivasComp: parseFloat(document.getElementById('hist-exclusivas-comp')?.value)||0,
            ventas: parseFloat(document.getElementById('hist-ventas')?.value)||0,
            gci: parseFloat(document.getElementById('hist-gci')?.value)||0
        },
        fuentes: []  // ‚Üê CAMBIO: Ahora es un array en lugar de objeto
    };
    
    // ============================================
    // MEJORA 2: Leer las 19 partidas din√°micas (√≠ndices 0-18)
    // ============================================
    for (let i = 0; i < 19; i++) {
        const captInput = document.getElementById(`fp-origen-${i}-capt`);
        const gciInput = document.getElementById(`fp-origen-${i}-gci`);
        
        datos.fuentes.push({
            capt: captInput ? parseFloat(captInput.value) || 0 : 0,
            gci: gciInput ? parseFloat(gciInput.value) || 0 : 0
        });
    }

    google.script.run.withSuccessHandler(() => {
        mostrarNotificacion("‚úÖ Hist√≥rico Guardado");
        datosHistoricosCache = datos; 
        // Si estamos en la pesta√±a gr√°ficos, recargar para ver cambios
        if(vistaActualGerente === 'graficos') renderizarGraficosGenerales();
    }).guardarDatosHistoricosJSON(JSON.stringify(datos));
}

// ============================================
// MEJORA 2: Calcular porcentajes para 19 partidas (√≠ndices 0-18)
// ============================================

function calcularPorcentajesFuentes() {
    let totalGCI = 0;
    let totalCapt = 0;
    
    // Sumar todas las partidas (19 or√≠genes: √≠ndices 0-18)
    for (let i = 0; i < 19; i++) {
        const captInput = document.getElementById(`fp-origen-${i}-capt`);  // ‚úÖ Par√©ntesis a√±adido
        const gciInput = document.getElementById(`fp-origen-${i}-gci`);    // ‚úÖ Par√©ntesis a√±adido
        
        if (captInput) totalCapt += parseFloat(captInput.value) || 0;
        if (gciInput) totalGCI += parseFloat(gciInput.value) || 0;
    }
    
    // Calcular porcentajes individuales
    for (let i = 0; i < 19; i++) {
        const gciInput = document.getElementById(`fp-origen-${i}-gci`);    // ‚úÖ Par√©ntesis a√±adido
        const pctCell = document.getElementById(`fp-origen-${i}-pct`);     // ‚úÖ Par√©ntesis a√±adido
        
        if (gciInput && pctCell) {
            const gci = parseFloat(gciInput.value) || 0;
            const pct = totalGCI > 0 ? ((gci / totalGCI) * 100).toFixed(1) : 0;
            pctCell.textContent = pct + '%';
        }
    }
    
    // Actualizar totales del footer
    const totalCaptCell = document.getElementById('fp-total-capt');
    const totalGCICell = document.getElementById('fp-total-gci');
    
    if (totalCaptCell) totalCaptCell.textContent = totalCapt.toFixed(0);
    if (totalGCICell) totalGCICell.textContent = totalGCI.toFixed(0) + '‚Ç¨';
}

function crearGraficoYoYCompleto(act, meta) {
    const ctx = document.getElementById('chart-yoy-completo');
    if(!ctx) return;
    if(chartInstances.yoy) chartInstances.yoy.destroy();

    // Etiquetas de las 8 m√©tricas
    const labels = ['Citas Capt', 'Excl Venta', 'Abierto', 'Citas Comp', 'Excl Comp', 'Visitas', 'Ventas', 'GCI (‚Ç¨)'];
    
    // Datos Reales 2025
    const dataAct = [
        act.citasCapt, act.exclVenta, act.captAbierto, 
        act.citasComp, act.exclComp, act.visitas, act.ventas, act.gci
    ];
    
    // Datos Esperados 2024 (Ponderados)
    const dataMeta = [
        meta.citasCapt, meta.exclVenta, meta.captAbierto,
        meta.citasComp, meta.exclComp, meta.visitas, meta.ventas, meta.gci
    ];

    chartInstances.yoy = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [
                {
                    label: 'Real 2025',
                    data: dataAct,
                    backgroundColor: (c) => c.dataIndex === 7 ? 'rgba(102, 126, 234, 0.8)' : 'rgba(0, 255, 136, 0.8)', // GCI azul, resto verde
                    yAxisID: 'y'
                },
                {
                    label: 'Meta YTD (2024)',
                    data: dataMeta,
                    backgroundColor: 'rgba(255, 255, 255, 0.2)', // Gris transparente
                    borderColor: '#aaa',
                    borderWidth: 1,
                    yAxisID: 'y'
                }
            ]
        },
        options: {
            responsive: true, maintainAspectRatio: false,
            scales: {
                y: { // Eje Izquierdo: UNIDADES
                    type: 'linear', position: 'left', 
                    beginAtZero: true,
                    title: { display: true, text: 'Volumen (Citas, Exclusivas...)' }
                },
                y1: { // Eje Derecho: DINERO (Solo para GCI)
                    type: 'linear', position: 'right',
                    beginAtZero: true,
                    grid: { drawOnChartArea: false }, // Ocultar rejilla para limpiar
                    ticks: { callback: (v) => v/1000 + 'k‚Ç¨' } // Formato miles
                }
            },
            plugins: {
                tooltip: {
                    callbacks: {
                        label: (c) => {
                            let val = c.raw;
                            if(c.dataIndex === 7) return c.dataset.label + ': ' + val.toLocaleString() + '‚Ç¨'; // Formato euro para GCI
                            return c.dataset.label + ': ' + Math.round(val);
                        }
                    }
                }
            }
        }
    });

    // Truco: Asignar GCI al eje derecho manualmente
    // Chart.js necesita configuraci√≥n espec√≠fica por dataset para ejes m√∫ltiples mixed,
    // pero como usamos 'bar' para todo, lo forzamos visualmente con la escala.
    // (Para simplificar, si los valores de GCI son muy altos, aplastar√°n a los otros.
    //  Mejor separar GCI visualmente o usar logar√≠tmica. He optado por separar GCI al final).
    
    // *MEJORA:* Vamos a sacar GCI a su propio eje en el dataset config:
    chartInstances.yoy.data.datasets[0].yAxisID = 'y'; // Default
    chartInstances.yoy.data.datasets[1].yAxisID = 'y';
    
    // Asignamos el √∫ltimo dato (GCI) al eje y1 en tiempo de ejecuci√≥n? 
    // No, Chart.js no deja mezclar ejes en el mismo array de datos f√°cilmente.
    // SOLUCI√ìN ELEGANTE: Normalizar o separar. 
    // Como GCI es dinero y el resto unidades, visualmente el GCI se ver√° enorme y el resto plano.
    // Vamos a ocultar la barra de GCI en el eje Y normal y crear un dataset SOLO para GCI en Y1.
    
    chartInstances.yoy.data.datasets = [
        {
            label: 'Actividad (Unidades)',
            data: [act.citasCapt, act.exclVenta, act.captAbierto, act.citasComp, act.exclComp, act.visitas, act.ventas, null], // GCI null
            backgroundColor: 'rgba(0, 255, 136, 0.7)',
            yAxisID: 'y'
        },
        {
            label: 'Actividad 2024',
            data: [meta.citasCapt, meta.exclVenta, meta.captAbierto, meta.citasComp, meta.exclComp, meta.visitas, meta.ventas, null],
            backgroundColor: 'rgba(255, 255, 255, 0.1)',
            borderColor: '#aaa', borderWidth: 1,
            yAxisID: 'y'
        },
        {
            label: 'GCI 2025 (‚Ç¨)',
            data: [null, null, null, null, null, null, null, act.gci], // Solo GCI
            backgroundColor: 'rgba(102, 126, 234, 0.8)',
            yAxisID: 'y1'
        },
        {
            label: 'GCI 2024 (‚Ç¨)',
            data: [null, null, null, null, null, null, null, meta.gci],
            backgroundColor: 'rgba(102, 126, 234, 0.2)',
            borderColor: '#667eea', borderWidth: 1,
            yAxisID: 'y1'
        }
    ];
    chartInstances.yoy.update();
}

// 2. MATRIZ SKILL VS WILL (CORREGIDA VISUALIZACI√ìN)
function crearGraficoSkillWill() {
    const ctx = document.getElementById('chart-skill-will');
    if(!ctx) return;
    if(chartInstances.skillWill) chartInstances.skillWill.destroy();

    // Calcular medias para los cuadrantes
    let totalAct = 0, totalConv = 0, count = 0;
    const dataPoints = datosFiltrados.map(d => {
        const act = parseFloat(d.ratios.actividadTotal) || 0;
        // Conversi√≥n Cita->Exclusiva es la m√©trica de habilidad m√°s pura
        const conv = parseFloat(d.ratios.conversionCaptacion) || 0; 
        totalAct += act;
        totalConv += conv;
        count++;
        return { x: act, y: conv, agent: d.agente };
    });

    const avgAct = count > 0 ? totalAct / count : 10;
    const avgConv = count > 0 ? totalConv / count : 10;

    chartInstances.skillWill = new Chart(ctx, {
        type: 'scatter',
        data: {
            datasets: [{
                label: 'Agentes',
                data: dataPoints,
                backgroundColor: (c) => {
                    const v = c.raw;
                    if(!v) return '#ccc';
                    if(v.x >= avgAct && v.y >= avgConv) return '#00ff88'; // Estrella
                    if(v.x >= avgAct && v.y < avgConv) return '#ffd700';  // Trabajador
                    if(v.x < avgAct && v.y >= avgConv) return '#667eea';  // Talento
                    return '#ff4444'; // Alerta
                },
                pointRadius: 15,
                pointHoverRadius: 20,
                pointBorderColor: '#fff',
                pointBorderWidth: 2
            }]
        },
        options: {
            responsive: true, maintainAspectRatio: false,
            plugins: {
                legend: { display: false },
                tooltip: {
                    callbacks: {
                        label: (ctx) => `${ctx.raw.agent}: Actividad ${ctx.raw.x} / Conversi√≥n ${ctx.raw.y}%`
                    }
                },
                annotation: { // L√≠neas de cuadrante
                    annotations: {
                        lineV: { type: 'line', xMin: avgAct, xMax: avgAct, borderColor: 'rgba(255,255,255,0.3)', borderWidth: 2, borderDash: [5,5] },
                        lineH: { type: 'line', yMin: avgConv, yMax: avgConv, borderColor: 'rgba(255,255,255,0.3)', borderWidth: 2, borderDash: [5,5] }
                    }
                }
            },
            scales: {
                x: { title: { display: true, text: 'VOLUNTAD (Actividad Total)', color:'#aaa' }, grid: { color: '#222' }, min: 0 },
                y: { title: { display: true, text: 'HABILIDAD (Conversi√≥n %)', color:'#aaa' }, grid: { color: '#222' }, min: 0 }
            },
            onClick: () => ampliarGrafico('skillWill', 'Matriz Habilidad vs Voluntad')
        }
    });
}
// ==========================================
// üõ†Ô∏è REPARACI√ìN: L√ìGICA HIST√ìRICO (SWITCH)
// ==========================================

// 1. Variable Global de Estado (¬°Importante!)
var modoHist = 'ANUAL'; // Usamos var para asegurar que sea global

// 2. Funci√≥n del Interruptor (Switch)
function setModoHistorico(modo) {
    modoHistorico = modo;
    
    // Actualizar botones
    const btnAnual = document.getElementById('btn-hist-anual');
    const btnMensual = document.getElementById('btn-hist-mensual');
    
    if (modo === 'ANUAL') {
        btnAnual.style.background = 'var(--color-primary)';
        btnAnual.style.opacity = '1';
        btnMensual.style.background = 'transparent';
        btnMensual.style.opacity = '0.6';
        document.getElementById('hist-panel-anual').style.display = 'block';
        document.getElementById('hist-panel-mensual').style.display = 'none';
    } else {
        btnMensual.style.background = 'var(--color-primary)';
        btnMensual.style.opacity = '1';
        btnAnual.style.background = 'transparent';
        btnAnual.style.opacity = '0.6';
        document.getElementById('hist-panel-anual').style.display = 'none';
        document.getElementById('hist-panel-mensual').style.display = 'block';
        generarTablaMensual();
    }
}

// ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
// FUNCI√ìN 2: generarTablaMensual()
// ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

function generarTablaMensual() {
    const tbody = document.getElementById('hist-tabla-body');
    tbody.innerHTML = '';
    
    const meses = ['Ene','Feb','Mar','Abr','May','Jun','Jul','Ago','Sep','Oct','Nov','Dic'];
    
    for (let i = 0; i < 12; i++) {
        const tr = document.createElement('tr');
        tr.innerHTML = `
            <td style="position:sticky; left:0; background:var(--color-bg-alt); font-weight:bold;">${meses[i]}</td>
            <td><input type="number" id="hm-gci-${i}" class="form-input" style="width:80px; padding:5px; text-align:center;" value="0"></td>
            <td><input type="number" id="hm-ventas-${i}" class="form-input" style="width:60px; padding:5px; text-align:center;" value="0"></td>
            <td><input type="number" id="hm-citasCapt-${i}" class="form-input" style="width:60px; padding:5px; text-align:center;" value="0"></td>
            <td><input type="number" id="hm-exclVenta-${i}" class="form-input" style="width:60px; padding:5px; text-align:center;" value="0"></td>
            <td><input type="number" id="hm-captAbierto-${i}" class="form-input" style="width:60px; padding:5px; text-align:center;" value="0"></td>
            <td><input type="number" id="hm-citasComp-${i}" class="form-input" style="width:60px; padding:5px; text-align:center;" value="0"></td>
            <td><input type="number" id="hm-exclComp-${i}" class="form-input" style="width:60px; padding:5px; text-align:center;" value="0"></td>
            <td><input type="number" id="hm-visitas-${i}" class="form-input" style="width:60px; padding:5px; text-align:center;" value="0"></td>
        `;
        tbody.appendChild(tr);
    }
}

// 4. Funci√≥n de Apertura (Asegurando que carga agentes)
function mostrarModalCargaHistorico() {
    abrirModalEncima('modal-carga-historico');
    poblarSelectAgentes('hist-agente-select');
    // Por defecto anual
    setModoHistorico('ANUAL');
    // Intentar cargar datos si ya hay agente seleccionado por defecto
    setTimeout(cargarDatosHistoricosExistentes, 500);
}

function cargarDatosHistoricosExistentes() {
    const idAgente = document.getElementById('hist-agente-select').value;
    const anio = parseInt(document.getElementById('hist-anio').value);
    
    if (!idAgente) return;
    
    mostrarNotificacion('Cargando datos existentes...', 'info');
    
    google.script.run
        .withSuccessHandler(datos => {
            if (datos && datos.length > 0) {
                // Llenar modo MENSUAL
                if (modoHistorico === 'MENSUAL') {
                    datos.forEach(fila => {
                        const mes = parseInt(fila[3]); // Columna Mes
                        if (mes >= 1 && mes <= 12) {
                            const idx = mes - 1;
                            document.getElementById(`hm-gci-${idx}`).value = fila[22] || 0;
                            document.getElementById(`hm-ventas-${idx}`).value = 
                                (fila[14]||0) + (fila[16]||0) + (fila[18]||0) + (fila[20]||0);
                            document.getElementById(`hm-citasCapt-${idx}`).value = fila[4] || 0;
                            document.getElementById(`hm-exclVenta-${idx}`).value = fila[5] || 0;
                            document.getElementById(`hm-captAbierto-${idx}`).value = fila[6] || 0;
                            document.getElementById(`hm-citasComp-${idx}`).value = fila[7] || 0;
                            document.getElementById(`hm-exclComp-${idx}`).value = 0; // No hay columna espec√≠fica
                            document.getElementById(`hm-visitas-${idx}`).value = fila[8] || 0;
                        }
                    });
                } else {
                    // Sumar todo para modo ANUAL
                    let totales = { gci: 0, ventas: 0, citasCapt: 0, exclVenta: 0, captAbierto: 0, citasComp: 0, exclComp: 0, visitas: 0 };
                    datos.forEach(fila => {
                        totales.gci += parseFloat(fila[22]) || 0;
                        totales.ventas += (fila[14]||0) + (fila[16]||0) + (fila[18]||0) + (fila[20]||0);
                        totales.citasCapt += parseFloat(fila[4]) || 0;
                        totales.exclVenta += parseFloat(fila[5]) || 0;
                        totales.captAbierto += parseFloat(fila[6]) || 0;
                        totales.citasComp += parseFloat(fila[7]) || 0;
                        totales.visitas += parseFloat(fila[8]) || 0;
                    });
                    
                    document.getElementById('ha-gci').value = totales.gci.toFixed(2);
                    document.getElementById('ha-ventas').value = totales.ventas;
                    document.getElementById('ha-citasCapt').value = totales.citasCapt;
                    document.getElementById('ha-exclVenta').value = totales.exclVenta;
                    document.getElementById('ha-captAbierto').value = totales.captAbierto;
                    document.getElementById('ha-citasComp').value = totales.citasComp;
                    document.getElementById('ha-exclComp').value = 0;
                    document.getElementById('ha-visitas').value = totales.visitas;
                }
                
                mostrarNotificacion('Datos cargados correctamente', 'success');
            } else {
                mostrarNotificacion('No hay datos hist√≥ricos para este agente/a√±o', 'info');
            }
        })
        .withFailureHandler(err => {
            mostrarNotificacion('Error al cargar datos: ' + err, 'error');
        })
        .obtenerHistoricoExistente(idAgente, anio);
}

function guardarHistoricoAgenteHTML() {
    const idAgente = document.getElementById('hist-agente-select').value;
    const anio = parseInt(document.getElementById('hist-anio').value);
    
    if (!idAgente) {
        mostrarNotificacion('Selecciona un agente', 'error');
        return;
    }
    
    const datos = {
        idAgente: idAgente,
        anio: anio,
        modo: modoHistorico
    };
    
    if (modoHistorico === 'ANUAL') {
        // Recoger datos del formulario anual
        datos.anual = {
            gci: parseFloat(document.getElementById('ha-gci').value) || 0,
            ventas: parseInt(document.getElementById('ha-ventas').value) || 0,
            citasCapt: parseInt(document.getElementById('ha-citasCapt').value) || 0,
            exclVenta: parseInt(document.getElementById('ha-exclVenta').value) || 0,
            captAbierto: parseInt(document.getElementById('ha-captAbierto').value) || 0,
            citasComp: parseInt(document.getElementById('ha-citasComp').value) || 0,
            exclComp: parseInt(document.getElementById('ha-exclComp').value) || 0,
            visitas: parseInt(document.getElementById('ha-visitas').value) || 0
        };
    } else {
        // Recoger datos de la tabla mensual
        datos.mensual = [];
        for (let i = 0; i < 12; i++) {
            datos.mensual.push({
                gci: parseFloat(document.getElementById(`hm-gci-${i}`).value) || 0,
                ventas: parseInt(document.getElementById(`hm-ventas-${i}`).value) || 0,
                citasCapt: parseInt(document.getElementById(`hm-citasCapt-${i}`).value) || 0,
                exclVenta: parseInt(document.getElementById(`hm-exclVenta-${i}`).value) || 0,
                captAbierto: parseInt(document.getElementById(`hm-captAbierto-${i}`).value) || 0,
                citasComp: parseInt(document.getElementById(`hm-citasComp-${i}`).value) || 0,
                exclComp: parseInt(document.getElementById(`hm-exclComp-${i}`).value) || 0,
                visitas: parseInt(document.getElementById(`hm-visitas-${i}`).value) || 0
            });
        }
    }
    
    mostrarNotificacion('Guardando hist√≥rico...', 'info');
    
    google.script.run
        .withSuccessHandler(response => {
            if (response.success) {
                mostrarNotificacion(response.message, 'success');
                // Recargar dashboard si est√° en vista agente
                if (agenteActual) {
                    cargarDashboardAgente(agenteActual.id);
                }
            } else {
                mostrarNotificacion('Error: ' + response.error, 'error');
            }
        })
        .withFailureHandler(err => {
            mostrarNotificacion('Error al guardar: ' + err, 'error');
        })
        .guardarHistoricoAgenteHTML(datos);
}

// ============================================
// RENDERIZAR EMBUDOS
// ============================================
function renderizarEmbudos(datos) {
    const html = `
        <div class="section">
            <div class="section-title">üéØ An√°lisis de Embudos de Conversi√≥n</div>
            
            <div id="analisis-embudos" style="background: var(--color-surface); padding: 20px; border-radius: 15px; margin-bottom: 20px; border-left: 4px solid #667eea;">
                <div style="font-size: 1.2em; font-weight: 700; margin-bottom: 10px;">üîç Cargando an√°lisis...</div>
            </div>
            
            <div class="charts-grid" style="grid-template-columns: repeat(auto-fit, minmax(450px, 1fr)); gap: 25px;">
                
                <!-- EMBUDO CAPTACI√ìN -->
                <div class="chart-container" style="height: 500px;">
                    <div class="chart-title">üìû Embudo de Captaci√≥n</div>
                    <canvas id="chart-embudo-captacion"></canvas>
                    <div id="leyenda-captacion" style="margin-top: 15px; font-size: 0.9em; line-height: 1.6;"></div>
                </div>
                
                <!-- EMBUDO VISUAL COMPLETO -->
                <div class="chart-container" style="height: 500px;">
                    <div class="chart-title">üéØ Embudo Visual Completo</div>
                    <canvas id="chart-embudo-visual"></canvas>
                    <div id="leyenda-visual" style="margin-top: 15px; font-size: 0.9em; line-height: 1.6; text-align: center; color: #aaa;"></div>
                </div>
                
                <!-- EMBUDO COMPRADORES -->
                <div class="chart-container" style="height: 500px;">
                    <div class="chart-title">üè° Embudo de Compradores</div>
                    <canvas id="chart-embudo-compradores"></canvas>
                    <div id="leyenda-compradores" style="margin-top: 15px; font-size: 0.9em; line-height: 1.6;"></div>
                </div>
                
                <!-- EMBUDO CIERRE -->
                <div class="chart-container" style="height: 500px;">
                    <div class="chart-title">üí∞ Embudo de Cierre</div>
                    <canvas id="chart-embudo-cierre"></canvas>
                    <div id="leyenda-cierre" style="margin-top: 15px; font-size: 0.9em; line-height: 1.6;"></div>
                </div>
            </div>
        </div>
    `;
    
    document.getElementById('vistaContenido').innerHTML = html;
    
    const filtros = calcularFiltrosPeriodo(periodoActual, 'gerente');
    
    google.script.run
        .withSuccessHandler(function(resultado) {
            if (!resultado.success) {
                document.getElementById('vistaContenido').innerHTML = `<div class="section"><div style="text-align:center; padding:50px; color:#ff6b6b;">‚ùå Error: ${resultado.error}</div></div>`;
                return;
            }
            
            const e = resultado.embudos;
            
            // üìä AN√ÅLISIS GLOBAL
            let analisisHTML = '<div style="font-size: 1.2em; font-weight: 700; margin-bottom: 10px;">üîç Diagn√≥stico de Embudos</div>';
            
            // Identificar cuellos de botella
            const conversiones = [
                { nombre: 'Llamadas ‚Üí Citas Captaci√≥n', valor: parseFloat(e.captacion.conversion_llamadas_citas), tipo: 'captacion' },
                { nombre: 'Citas ‚Üí Exclusivas Venta', valor: parseFloat(e.captacion.conversion_citas_exclusivas), tipo: 'captacion' },
                { nombre: 'Exclusivas ‚Üí Captaciones', valor: parseFloat(e.captacion.conversion_exclusivas_captaciones), tipo: 'captacion' },
                { nombre: 'Leads ‚Üí Citas Compradores', valor: parseFloat(e.compradores.conversion_leads_citas), tipo: 'compradores' },
                { nombre: 'Citas ‚Üí Exclusivas Comprador', valor: parseFloat(e.compradores.conversion_citas_exclusivas), tipo: 'compradores' },
                { nombre: 'Exclusivas ‚Üí Visitas', valor: parseFloat(e.compradores.conversion_exclusivas_visitas), tipo: 'compradores' },
                { nombre: 'Exclusivas ‚Üí Ventas', valor: parseFloat(e.cierre.conversion_exclusivas_ventas), tipo: 'cierre' }
            ];
            
            const minConversion = conversiones.reduce((min, c) => c.valor < min.valor ? c : min);
            const maxConversion = conversiones.reduce((max, c) => c.valor > max.valor ? c : max);
            
            analisisHTML += `
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; margin-top: 15px;">
                    <div style="background: rgba(255, 68, 68, 0.1); padding: 15px; border-radius: 10px; border-left: 4px solid #ff4444;">
                        <div style="font-size: 0.9em; color: #ff6b6b; margin-bottom: 5px;">üö® CUELLO DE BOTELLA</div>
                        <div style="font-weight: 700;">${minConversion.nombre}</div>
                        <div style="font-size: 1.5em; color: #ff4444;">${minConversion.valor}%</div>
                        <div style="font-size: 0.85em; margin-top: 5px;">Esta es tu conversi√≥n m√°s baja. Enfoca aqu√≠ tus esfuerzos.</div>
                    </div>
                    
                    <div style="background: rgba(0, 255, 136, 0.1); padding: 15px; border-radius: 10px; border-left: 4px solid #00ff88;">
                        <div style="font-size: 0.9em; color: #00c060; margin-bottom: 5px;">‚úÖ FORTALEZA</div>
                        <div style="font-weight: 700;">${maxConversion.nombre}</div>
                        <div style="font-size: 1.5em; color: #00ff88;">${maxConversion.valor}%</div>
                        <div style="font-size: 0.85em; margin-top: 5px;">Tu mejor conversi√≥n. Replica este √©xito.</div>
                    </div>
                    
                    <div style="background: rgba(255, 215, 0, 0.1); padding: 15px; border-radius: 10px; border-left: 4px solid #ffd700;">
                        <div style="font-size: 0.9em; color: #ffd700; margin-bottom: 5px;">üí∞ EFICIENCIA</div>
                        <div style="font-weight: 700;">GCI por Exclusiva</div>
                        <div style="font-size: 1.5em; color: #ffd700;">${e.cierre.totalExclusivas > 0 ? (e.cierre.totalGCI / e.cierre.totalExclusivas).toFixed(0) : 0}‚Ç¨</div>
                        <div style="font-size: 0.85em; margin-top: 5px;">Ticket medio: ${e.cierre.ticketPromedio}‚Ç¨</div>
                    </div>
                </div>
            `;
            
            document.getElementById('analisis-embudos').innerHTML = analisisHTML;
            
            // 1. EMBUDO CAPTACI√ìN
            new Chart(document.getElementById('chart-embudo-captacion'), {
                type: 'bar',
                data: {
                    labels: ['Llamadas', 'Citas Capt.', 'Exclusivas V.', 'Capt. Abierto'],
                    datasets: [{
                        label: 'Volumen',
                        data: [
                            e.captacion.etapa1_llamadas, 
                            e.captacion.etapa2_citasCaptacion, 
                            e.captacion.etapa3_exclusivasVenta, 
                            e.captacion.etapa4_captacionesAbierto
                        ],
                        backgroundColor: ['#667eea', '#ff6b6b', '#ffd700', '#00ff88'],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        title: {
                            display: true,
                            text: `${e.captacion.conversion_llamadas_citas}% ‚Üí ${e.captacion.conversion_citas_exclusivas}% ‚Üí ${e.captacion.conversion_exclusivas_captaciones}%`,
                            color: '#fff',
                            font: { size: 14 }
                        }
                    },
                    scales: {
                        x: { 
                            ticks: { color: '#fff' }, 
                            grid: { color: 'rgba(255,255,255,0.1)' } 
                        },
                        y: { 
                            ticks: { color: '#fff', font: { size: 12, weight: 'bold' } }, 
                            grid: { display: false } 
                        }
                    }
                }
            });
            
            document.getElementById('leyenda-captacion').innerHTML = `
                <strong>üìä Interpretaci√≥n:</strong><br>
                ‚Ä¢ <span style="color: ${e.captacion.conversion_llamadas_citas < 30 ? '#ff4444' : '#00ff88'}">Llamadas ‚Üí Citas: ${e.captacion.conversion_llamadas_citas}%</span> ${e.captacion.conversion_llamadas_citas < 30 ? '‚ö†Ô∏è Bajo' : '‚úÖ Bueno'}<br>
                ‚Ä¢ <span style="color: ${e.captacion.conversion_citas_exclusivas < 50 ? '#ff4444' : '#00ff88'}">Citas ‚Üí Exclusivas: ${e.captacion.conversion_citas_exclusivas}%</span> ${e.captacion.conversion_citas_exclusivas < 50 ? '‚ö†Ô∏è Bajo' : '‚úÖ Bueno'}<br>
                ‚Ä¢ Benchmark: 30% llamadas‚Üícitas, 60% citas‚Üíexclusivas
            `;
            
            // 2. EMBUDO VISUAL COMPLETO
            const totalExclusivas = e.captacion.etapa3_exclusivasVenta + e.compradores.etapa3_exclusivasComprador;
            
            new Chart(document.getElementById('chart-embudo-visual'), {
                type: 'bar',
                data: {
                    labels: ['1. Llamadas', '2. Citas', '3. Exclusivas', '4. Cierres'],
                    datasets: [{
                        label: 'Embudo Global',
                        data: [
                            e.captacion.etapa1_llamadas,
                            e.captacion.etapa2_citasCaptacion,
                            totalExclusivas,
                            e.cierre.transacciones
                        ],
                        backgroundColor: [
                            'rgba(102, 126, 234, 0.8)',
                            'rgba(255, 107, 107, 0.8)',
                            'rgba(255, 215, 0, 0.8)',
                            'rgba(0, 255, 136, 0.8)'
                        ],
                        borderWidth: 3,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        title: {
                            display: true,
                            text: 'Visi√≥n Global del Proceso Completo',
                            color: '#fff',
                            font: { size: 16, weight: 'bold' }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const val = context.parsed.x;
                                    const labels = ['Llamadas', 'Citas', 'Exclusivas', 'Cierres'];
                                    return `${labels[context.dataIndex]}: ${val}`;
                                }
                            }
                        }
                    },
                    scales: {
                        x: { 
                            ticks: { color: '#fff', font: { size: 12 } }, 
                            grid: { color: 'rgba(255,255,255,0.1)' }
                        },
                        y: { 
                            ticks: { color: '#fff', font: { size: 14, weight: 'bold' } }, 
                            grid: { display: false }
                        }
                    }
                }
            });
            
            document.getElementById('leyenda-visual').innerHTML = `
                üìå De ${e.captacion.etapa1_llamadas} llamadas iniciales a ${e.cierre.transacciones} transacciones cerradas<br>
                üéØ Tasa de cierre global: ${e.captacion.etapa1_llamadas > 0 ? ((e.cierre.transacciones / e.captacion.etapa1_llamadas) * 100).toFixed(2) : 0}%
            `;
            
            // 3. EMBUDO COMPRADORES
            new Chart(document.getElementById('chart-embudo-compradores'), {
                type: 'bar',
                data: {
                    labels: ['Leads', 'Citas Comp.', 'Exclusivas C.', 'Casas Ense√±.'],
                    datasets: [{
                        label: 'Volumen',
                        data: [
                            e.compradores.etapa1_leadsCompradores, 
                            e.compradores.etapa2_citasCompradores, 
                            e.compradores.etapa3_exclusivasComprador, 
                            e.compradores.etapa4_casasEnsenadas
                        ],
                        backgroundColor: ['#00c4ff', '#667eea', '#ffd700', '#00ff88'],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        title: {
                            display: true,
                            text: `${e.compradores.conversion_leads_citas}% ‚Üí ${e.compradores.conversion_citas_exclusivas}% ‚Üí ${e.compradores.conversion_exclusivas_visitas}%`,
                            color: '#fff',
                            font: { size: 14 }
                        }
                    },
                    scales: {
                        x: { 
                            ticks: { color: '#fff' }, 
                            grid: { color: 'rgba(255,255,255,0.1)' } 
                        },
                        y: { 
                            ticks: { color: '#fff', font: { size: 12, weight: 'bold' } }, 
                            grid: { display: false } 
                        }
                    }
                }
            });
            
            document.getElementById('leyenda-compradores').innerHTML = `
                <strong>üìä Interpretaci√≥n:</strong><br>
                ‚Ä¢ <span style="color: ${e.compradores.conversion_leads_citas < 25 ? '#ff4444' : '#00ff88'}">Leads ‚Üí Citas: ${e.compradores.conversion_leads_citas}%</span> ${e.compradores.conversion_leads_citas < 25 ? '‚ö†Ô∏è Bajo' : '‚úÖ Bueno'}<br>
                ‚Ä¢ <span style="color: ${e.compradores.conversion_citas_exclusivas < 40 ? '#ff4444' : '#00ff88'}">Citas ‚Üí Exclusivas: ${e.compradores.conversion_citas_exclusivas}%</span> ${e.compradores.conversion_citas_exclusivas < 40 ? '‚ö†Ô∏è Bajo' : '‚úÖ Bueno'}<br>
                ‚Ä¢ Benchmark: 30% leads‚Üícitas, 50% citas‚Üíexclusivas
            `;
            
            // 4. EMBUDO CIERRE
            new Chart(document.getElementById('chart-embudo-cierre'), {
                type: 'bar',
                data: {
                    labels: ['Total Exclusivas', 'Transacciones', 'GCI Total', 'Vol. Negocio (k‚Ç¨)'],
                    datasets: [{
                        label: 'Valor',
                        data: [
                            e.cierre.totalExclusivas, 
                            e.cierre.transacciones, 
                            e.cierre.totalGCI, 
                            e.cierre.volumenNegocio / 1000
                        ],
                        backgroundColor: ['#ffd700', '#00ff88', '#00ff88', '#00c4ff'],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        title: {
                            display: true,
                            text: `Conv. ${e.cierre.conversion_exclusivas_ventas}% | Ticket: ${e.cierre.ticketPromedio}‚Ç¨`,
                            color: '#fff',
                            font: { size: 14 }
                        }
                    },
                    scales: {
                        x: { 
                            ticks: { color: '#fff' }, 
                            grid: { color: 'rgba(255,255,255,0.1)' } 
                        },
                        y: { 
                            ticks: { color: '#fff', font: { size: 12, weight: 'bold' } }, 
                            grid: { display: false } 
                        }
                    }
                }
            });
            
            document.getElementById('leyenda-cierre').innerHTML = `
                <strong>üìä Interpretaci√≥n:</strong><br>
                ‚Ä¢ <span style="color: ${e.cierre.conversion_exclusivas_ventas < 30 ? '#ff4444' : '#00ff88'}">Conversi√≥n a Venta: ${e.cierre.conversion_exclusivas_ventas}%</span> ${e.cierre.conversion_exclusivas_ventas < 30 ? '‚ö†Ô∏è Bajo (objetivo: 30%+)' : '‚úÖ Excelente'}<br>
                ‚Ä¢ Ticket Promedio: ${e.cierre.ticketPromedio}‚Ç¨<br>
                ‚Ä¢ Volumen de Negocio: ${(e.cierre.volumenNegocio / 1000).toFixed(0)}k‚Ç¨
            `;
            
        })
        .withFailureHandler(function(error) {
            document.getElementById('vistaContenido').innerHTML = `<div class="section"><div style="text-align:center; padding:50px; color:#ff6b6b;">‚ùå Error al cargar embudos: ${error.message}</div></div>`;
        })
        .obtenerDatosEmbudo(filtros);
}

// ============================================
// RENDERIZAR CORRELACIONES
// ============================================
function renderizarCorrelaciones(datos) {
    const html = `
        <div class="section">
            <div class="section-title">üî¨ Laboratorio de Correlaciones (Pearson)</div>
            
            <!-- SELECTOR DE VARIABLES -->
            <div style="background: var(--color-surface); padding: 20px; border-radius: 15px; margin-bottom: 20px;">
                <div style="font-weight: 700; margin-bottom: 15px;">üéØ An√°lisis Personalizado</div>
                <div style="display: grid; grid-template-columns: 1fr 1fr auto; gap: 15px; align-items: end;">
                    <div class="form-grupo">
                        <label class="form-label">Variable X</label>
                        <select id="corr-var-x" class="form-select">
                            <option value="llamadas">Llamadas</option>
                            <option value="citasCaptacion">Citas Captaci√≥n</option>
                            <option value="exclusivasVenta">Exclusivas Venta</option>
                            <option value="exclusivasComprador">Exclusivas Comprador</option>
                            <option value="captacionesAbierto">Captaciones Abierto</option>
                            <option value="citasCompradores">Citas Compradores</option>
                            <option value="casasEnsenadas">Casas Ense√±adas</option>
                            <option value="leadsCompradores">Leads Compradores</option>
                            <option value="gci" selected>GCI</option>
                            <option value="volumenNegocio">Volumen Negocio</option>
                        </select>
                    </div>
                    <div class="form-grupo">
                        <label class="form-label">Variable Y</label>
                        <select id="corr-var-y" class="form-select">
                            <option value="llamadas" selected>Llamadas</option>
                            <option value="citasCaptacion">Citas Captaci√≥n</option>
                            <option value="exclusivasVenta">Exclusivas Venta</option>
                            <option value="exclusivasComprador">Exclusivas Comprador</option>
                            <option value="captacionesAbierto">Captaciones Abierto</option>
                            <option value="citasCompradores">Citas Compradores</option>
                            <option value="casasEnsenadas">Casas Ense√±adas</option>
                            <option value="leadsCompradores">Leads Compradores</option>
                            <option value="gci">GCI</option>
                            <option value="volumenNegocio">Volumen Negocio</option>
                        </select>
                    </div>
                    <button class="btn btn-primary-action" onclick="analizarCorrelacionPersonalizada()">üîç Analizar</button>
                </div>
            </div>
            
            <!-- GR√ÅFICO SCATTER PERSONALIZADO -->
            <div id="scatter-personalizado" style="display: none; margin-bottom: 30px;">
                <div class="chart-container" style="height: 400px;">
                    <div class="chart-title" id="scatter-title">An√°lisis de Correlaci√≥n</div>
                    <canvas id="chart-scatter-custom"></canvas>
                </div>
                <div id="interpretacion-scatter" style="background: var(--color-surface); padding: 15px; border-radius: 10px; margin-top: 15px;"></div>
            </div>
            
            <!-- TOP 10 CORRELACIONES -->
            <div id="correlaciones-top10" style="margin-bottom: 30px;"></div>
            
            <!-- GU√çA DE INTERPRETACI√ìN -->
            <div style="background: var(--color-surface); padding: 20px; border-radius: 15px; margin-bottom: 20px; border-left: 4px solid #667eea;">
                <div style="font-weight: 700; margin-bottom: 10px;">üìö Gu√≠a de Interpretaci√≥n</div>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
                    <div>
                        <div style="color: #00ff88; font-weight: 700;">‚úÖ Correlaci√≥n Alta (0.7 - 1.0)</div>
                        <div style="font-size: 0.9em; margin-top: 5px;">Relaci√≥n MUY FUERTE. Si aumenta X, aumenta Y casi siempre.</div>
                    </div>
                    <div>
                        <div style="color: #ffd700; font-weight: 700;">‚ö†Ô∏è Correlaci√≥n Media (0.4 - 0.7)</div>
                        <div style="font-size: 0.9em; margin-top: 5px;">Relaci√≥n MODERADA. Hay conexi√≥n pero otros factores influyen.</div>
                    </div>
                    <div>
                        <div style="color: #ff6b6b; font-weight: 700;">‚ùå Correlaci√≥n Baja (0.0 - 0.4)</div>
                        <div style="font-size: 0.9em; margin-top: 5px;">Relaci√≥n D√âBIL o inexistente. Variables independientes.</div>
                    </div>
                    <div>
                        <div style="color: #667eea; font-weight: 700;">üîÑ Correlaci√≥n Negativa (-0.4 a -1.0)</div>
                        <div style="font-size: 0.9em; margin-top: 5px;">Si X aumenta, Y DISMINUYE (inversa).</div>
                    </div>
                </div>
            </div>
            
            <!-- MAPA DE CALOR -->
            <div class="chart-container" style="height: 600px;">
                <div class="chart-title">üó∫Ô∏è Mapa de Calor - Matriz Completa</div>
                <canvas id="chart-correlaciones-heatmap"></canvas>
            </div>
        </div>
    `;
    
    document.getElementById('vistaContenido').innerHTML = html;
    
    const filtros = calcularFiltrosPeriodo(periodoActual, 'gerente');
    
    window.datosCorrelacionGlobal = null;
    
    google.script.run
        .withSuccessHandler(function(resultado) {
            if (resultado.success) {
                window.datosCorrelacionGlobal = resultado;
                
                // TOP 10 con clic
                let top10Html = '<div style="font-size: 1.3em; font-weight: 700; margin-bottom: 15px;">üèÜ Top 10 Correlaciones (Haz clic para ver gr√°fico)</div>';
                top10Html += '<div style="display:grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap:15px;">';
                
                resultado.topCorrelaciones.forEach((c, idx) => {
                    let color, badge, interpretacion;
                    const absVal = Math.abs(c.valor);
                    
                    if (absVal >= 0.7) {
                        color = '#00ff88';
                        badge = '‚úÖ MUY FUERTE';
                        interpretacion = c.valor > 0 ? 'Aumentan juntas' : 'Inversa';
                    } else if (absVal >= 0.4) {
                        color = '#ffd700';
                        badge = '‚ö†Ô∏è MODERADA';
                        interpretacion = 'Relaci√≥n notable';
                    } else {
                        color = '#ff6b6b';
                        badge = '‚ùå D√âBIL';
                        interpretacion = 'Poca relaci√≥n';
                    }
                    
                    top10Html += `
                        <div onclick="analizarCorrelacionDirecta('${c.kpi1}', '${c.kpi2}')" 
                             style="background:var(--color-surface); padding:15px; border-radius:10px; border-left:4px solid ${color}; cursor: pointer; transition: all 0.3s;"
                             onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='0 10px 30px rgba(0,0,0,0.3)';"
                             onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none';">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 5px;">
                                <div style="font-size:0.85em; color:#aaa;">#${idx+1}</div>
                                <div style="font-size:0.75em; color:${color}; font-weight: 700;">${badge}</div>
                            </div>
                            <div style="font-weight:700; margin:5px 0; font-size: 0.95em;">${kpiNames[c.kpi1] || c.kpi1} ‚Üî ${kpiNames[c.kpi2] || c.kpi2}</div>
                            <div style="font-size:1.8em; color:${color}; margin: 5px 0;">${c.valor.toFixed(3)}</div>
                            <div style="font-size:0.8em; color:#aaa;">${interpretacion}</div>
                            <div style="font-size:0.75em; color:#667eea; margin-top: 8px;">üëÜ Clic para ver gr√°fico</div>
                        </div>
                    `;
                });
                top10Html += '</div>';
                document.getElementById('correlaciones-top10').innerHTML = top10Html;
                
                // HEATMAP
                const dataPoints = [];
                resultado.kpis.forEach((kpi1, i) => {
                    resultado.kpis.forEach((kpi2, j) => {
                        dataPoints.push({ x: j, y: i, v: resultado.matriz[kpi1][kpi2] });
                    });
                });
                
                new Chart(document.getElementById('chart-correlaciones-heatmap'), {
                    type: 'scatter',
                    data: {
                        datasets: [{
                            label: 'Correlaci√≥n',
                            data: dataPoints.map(p => ({ x: p.x, y: p.y, r: Math.abs(p.v) * 20 })),
                            backgroundColor: dataPoints.map(p => {
                                const val = Math.abs(p.v);
                                if (val >= 0.7) return 'rgba(0,255,136,0.8)';
                                if (val >= 0.4) return 'rgba(255,215,0,0.8)';
                                return 'rgba(150,150,150,0.5)';
                            })
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        const point = dataPoints[context.dataIndex];
                                        return `${kpiNames[resultado.kpis[point.y]] || resultado.kpis[point.y]} ‚Üî ${kpiNames[resultado.kpis[point.x]] || resultado.kpis[point.x]}: ${point.v.toFixed(3)}`;
                                    }
                                }
                            }
                        },
                        scales: {
                            x: {
                                type: 'linear',
                                position: 'bottom',
                                ticks: {
                                    callback: (val) => kpiNames[resultado.kpis[val]] || resultado.kpis[val] || '',
                                    color: '#fff',
                                    maxRotation: 45,
                                    minRotation: 45
                                },
                                grid: { color: 'rgba(255,255,255,0.1)' }
                            },
                            y: {
                                type: 'linear',
                                ticks: {
                                    callback: (val) => kpiNames[resultado.kpis[val]] || resultado.kpis[val] || '',
                                    color: '#fff'
                                },
                                grid: { color: 'rgba(255,255,255,0.1)' }
                            }
                        }
                    }
                });
            } else {
                document.getElementById('vistaContenido').innerHTML = `<div class="section"><div style="text-align:center; padding:50px; color:#ff6b6b;">‚ùå Error: ${resultado.error}</div></div>`;
            }
        })
        .withFailureHandler(function(error) {
            document.getElementById('vistaContenido').innerHTML = `<div class="section"><div style="text-align:center; padding:50px; color:#ff6b6b;">‚ùå Error: ${error.message}</div></div>`;
        })
        .obtenerDatosCorrelacion(filtros);
}

// Funci√≥n auxiliar para an√°lisis directo (clic en Top 10)
function analizarCorrelacionDirecta(varX, varY) {
    document.getElementById('corr-var-x').value = varX;
    document.getElementById('corr-var-y').value = varY;
    analizarCorrelacionPersonalizada();
}

function analizarCorrelacionPersonalizada() {
    if (!window.datosCorrelacionGlobal) {
        mostrarNotificacion('‚ö†Ô∏è Cargando datos de correlaci√≥n...', 'error');
        return;
    }
    
    const varX = document.getElementById('corr-var-x').value;
    const varY = document.getElementById('corr-var-y').value;
    
    if (varX === varY) {
        mostrarNotificacion('‚ö†Ô∏è Selecciona variables diferentes', 'error');
        return;
    }
    
    const resultado = window.datosCorrelacionGlobal;
    
    // Verificar que existe la correlaci√≥n
    if (!resultado.matriz || !resultado.matriz[varX] || resultado.matriz[varX][varY] === undefined) {
        mostrarNotificacion('‚ö†Ô∏è No hay datos para esta correlaci√≥n', 'error');
        return;
    }
    
    const correlacion = resultado.matriz[varX][varY];
    const absCorr = Math.abs(correlacion);
    
    // Construir datos del scatter desde datosGlobales
    const scatterData = [];
    
    // Usar datos de la respuesta del backend
    const filtros = calcularFiltrosPeriodo(periodoActual, 'gerente');
    
    google.script.run
        .withSuccessHandler(function(datosActividad) {
            if (!datosActividad || !datosActividad.success) {
                mostrarNotificacion('‚ö†Ô∏è Error al cargar datos de actividad', 'error');
                return;
            }
            
            // √çndices correctos seg√∫n la estructura de Actividad_Diaria
            const indexMap = {
                'llamadas': 11,
                'citasCaptacion': 4,
                'exclusivasVenta': 5,
                'exclusivasComprador': 6,
                'captacionesAbierto': 7,
                'citasCompradores': 8,
                'casasEnsenadas': 9,
                'leadsCompradores': 10,
                'gci': 12,
                'volumenNegocio': 13
            };
            
            const idxX = indexMap[varX];
            const idxY = indexMap[varY];
            
            // Extraer datos de datosGlobales
            if (window.datosGlobales && Array.isArray(window.datosGlobales)) {
                window.datosGlobales.forEach(agente => {
                    if (agente.actividadDetallada && Array.isArray(agente.actividadDetallada)) {
                        agente.actividadDetallada.forEach(dia => {
                            if (Array.isArray(dia) && dia.length > Math.max(idxX, idxY)) {
                                const valX = parseFloat(dia[idxX]) || 0;
                                const valY = parseFloat(dia[idxY]) || 0;
                                
                                // Agregar punto si ambos valores existen
                                if (valX >= 0 && valY >= 0) {
                                    scatterData.push({ x: valX, y: valY });
                                }
                            }
                        });
                    }
                });
            }
            
            // Limitar a 100 puntos
            const datosLimitados = scatterData.slice(0, 100);
            
            if (datosLimitados.length === 0) {
                mostrarNotificacion('‚ö†Ô∏è No hay suficientes datos para este an√°lisis', 'error');
                return;
            }
            
            // Mostrar contenedor
            document.getElementById('scatter-personalizado').style.display = 'block';
            document.getElementById('scatter-title').textContent = `${kpiNames[varX]} vs ${kpiNames[varY]}`;
            
            // Destruir gr√°fico anterior
            if (window.scatterChartInstance) {
                window.scatterChartInstance.destroy();
            }
            
            // Crear nuevo gr√°fico
            const ctx = document.getElementById('chart-scatter-custom');
            window.scatterChartInstance = new Chart(ctx, {
                type: 'scatter',
                data: {
                    datasets: [{
                        label: 'Datos',
                        data: datosLimitados,
                        backgroundColor: absCorr >= 0.7 
                            ? 'rgba(0,255,136,0.6)' 
                            : absCorr >= 0.4 
                                ? 'rgba(255,215,0,0.6)' 
                                : 'rgba(255,68,68,0.6)',
                        pointRadius: 6,
                        pointHoverRadius: 8,
                        borderColor: '#fff',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { 
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${kpiNames[varX]}: ${context.parsed.x} | ${kpiNames[varY]}: ${context.parsed.y}`;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            title: { 
                                display: true, 
                                text: kpiNames[varX], 
                                color: '#fff',
                                font: { size: 14, weight: 'bold' }
                            },
                            ticks: { color: '#fff' },
                            grid: { color: 'rgba(255,255,255,0.1)' }
                        },
                        y: {
                            title: { 
                                display: true, 
                                text: kpiNames[varY], 
                                color: '#fff',
                                font: { size: 14, weight: 'bold' }
                            },
                            ticks: { color: '#fff' },
                            grid: { color: 'rgba(255,255,255,0.1)' }
                        }
                    }
                }
            });
            
            // Interpretaci√≥n
            let colorInterp, nivelInterp, analisisTexto, accionInterp;
            
            if (absCorr >= 0.7) {
                colorInterp = '#00ff88';
                nivelInterp = '‚úÖ CORRELACI√ìN MUY FUERTE';
                analisisTexto = correlacion > 0 
                    ? `Relaci√≥n POSITIVA muy fuerte. Cuando ${kpiNames[varX]} aumenta, ${kpiNames[varY]} casi siempre aumenta tambi√©n.`
                    : `Relaci√≥n NEGATIVA muy fuerte. Cuando ${kpiNames[varX]} aumenta, ${kpiNames[varY]} casi siempre disminuye.`;
                accionInterp = correlacion > 0 
                    ? `<strong>üí° Acci√≥n:</strong> PRIORIZA ${kpiNames[varX]} ya que impacta directamente en ${kpiNames[varY]}.`
                    : `<strong>‚ö†Ô∏è Acci√≥n:</strong> Relaci√≥n inversa fuerte. Eval√∫a si este comportamiento es deseable.`;
            } else if (absCorr >= 0.4) {
                colorInterp = '#ffd700';
                nivelInterp = '‚ö†Ô∏è CORRELACI√ìN MODERADA';
                analisisTexto = `Existe una relaci√≥n ${correlacion > 0 ? 'POSITIVA' : 'NEGATIVA'} moderada. Otros factores tambi√©n influyen en ${kpiNames[varY]}.`;
                accionInterp = `<strong>üí° Acci√≥n:</strong> Combina ${kpiNames[varX]} con otras m√©tricas para mejores resultados.`;
            } else {
                colorInterp = '#ff6b6b';
                nivelInterp = '‚ùå CORRELACI√ìN D√âBIL';
                analisisTexto = `Variables pr√°cticamente independientes. ${kpiNames[varX]} tiene poco o ning√∫n impacto en ${kpiNames[varY]}.`;
                accionInterp = `<strong>üí° Acci√≥n:</strong> Trabaja estas variables por separado. No esperes que una afecte a la otra.`;
            }
            
            document.getElementById('interpretacion-scatter').innerHTML = `
                <div style="display: grid; grid-template-columns: auto 1fr; gap: 20px; align-items: center;">
                    <div style="text-align: center; padding: 20px; background: rgba(255,255,255,0.05); border-radius: 10px; min-width: 150px;">
                        <div style="font-size: 3em; color: ${colorInterp}; font-weight: 900; margin-bottom: 5px;">${correlacion.toFixed(3)}</div>
                        <div style="color: ${colorInterp}; font-weight: 700; font-size: 0.9em;">${nivelInterp}</div>
                    </div>
                    <div>
                        <div style="margin-bottom: 15px; padding: 12px; background: rgba(255,255,255,0.03); border-radius: 8px; border-left: 3px solid ${colorInterp};">
                            <strong>üìä An√°lisis:</strong> ${analisisTexto}
                        </div>
                        <div style="padding: 12px; background: rgba(255,255,255,0.03); border-radius: 8px; border-left: 3px solid ${colorInterp};">
                            ${accionInterp}
                        </div>
                        <div style="margin-top: 15px; font-size: 0.9em; color: #aaa; text-align: right;">
                            üìà An√°lisis basado en ${datosLimitados.length} registros
                        </div>
                    </div>
                </div>
            `;
            
            // Scroll suave
            setTimeout(() => {
                document.getElementById('scatter-personalizado').scrollIntoView({ 
                    behavior: 'smooth', 
                    block: 'center' 
                });
            }, 150);
        })
        .withFailureHandler(function(error) {
            mostrarNotificacion('‚ùå Error: ' + error.message, 'error');
        })
        .obtenerDatosCorrelacion(filtros);
}
// FUNCI√ìN AUXILIAR: An√°lisis personalizado
function analizarCorrelacionPersonalizada() {
    if (!window.datosCorrelacionGlobal) {
        mostrarNotificacion('Carga primero los datos de correlaci√≥n', 'error');
        return;
    }
    
    const varX = document.getElementById('corr-var-x').value;
    const varY = document.getElementById('corr-var-y').value;
    
    if (varX === varY) {
        mostrarNotificacion('Selecciona variables diferentes', 'error');
        return;
    }
    
    const resultado = window.datosCorrelacionGlobal;
    const correlacion = resultado.matriz[varX][varY];
    const absCorr = Math.abs(correlacion);
    
    // Obtener datos para scatter plot
    const filtros = calcularFiltrosPeriodo(periodoActual, 'gerente');
    
    google.script.run
        .withSuccessHandler(function(res) {
            if (res.success) {
                // Extraer series espec√≠ficas
                const dataX = [];
                const dataY = [];
                
                res.matriz; // Tenemos acceso a las series originales
                
                // Hacer llamada para obtener datos raw
                google.script.run
                    .withSuccessHandler(function(datosRaw) {
                        const ss = SpreadsheetApp.getActiveSpreadsheet();
                        const hoja = ss.getSheetByName('Actividad_Diaria');
                        const datos = hoja.getDataRange().getValues();
                        
                        // Construir scatter
                        const scatterData = [];
                        for (let i = 1; i < Math.min(datos.length, 100); i++) {
                            const fila = datos[i];
                            const indexMap = {
                                'llamadas': 11, 'citasCaptacion': 4, 'exclusivasVenta': 5,
                                'exclusivasComprador': 6, 'captacionesAbierto': 7, 'citasCompradores': 8,
                                'casasEnsenadas': 9, 'leadsCompradores': 10, 'gci': 12, 'volumenNegocio': 13
                            };
                            
                            scatterData.push({
                                x: parseFloat(fila[indexMap[varX]]) || 0,
                                y: parseFloat(fila[indexMap[varY]]) || 0
                            });
                        }
                        
                        // Mostrar scatter plot
                        document.getElementById('scatter-personalizado').style.display = 'block';
                        document.getElementById('scatter-title').textContent = `${kpiNames[varX]} vs ${kpiNames[varY]}`;
                        
                        // Destruir chart anterior si existe
                        if (window.scatterChartInstance) {
                            window.scatterChartInstance.destroy();
                        }
                        
                        window.scatterChartInstance = new Chart(document.getElementById('chart-scatter-custom'), {
                            type: 'scatter',
                            data: {
                                datasets: [{
                                    label: 'Datos',
                                    data: scatterData,
                                    backgroundColor: absCorr >= 0.7 ? 'rgba(0,255,136,0.6)' : absCorr >= 0.4 ? 'rgba(255,215,0,0.6)' : 'rgba(255,68,68,0.6)'
                                }]
                            },
                            options: {
                                responsive: true,
                                maintainAspectRatio: false,
                                plugins: {
                                    legend: { display: false }
                                },
                                scales: {
                                    x: {
                                        title: { display: true, text: kpiNames[varX], color: '#fff' },
                                        ticks: { color: '#fff' },
                                        grid: { color: 'rgba(255,255,255,0.1)' }
                                    },
                                    y: {
                                        title: { display: true, text: kpiNames[varY], color: '#fff' },
                                        ticks: { color: '#fff' },
                                        grid: { color: 'rgba(255,255,255,0.1)' }
                                    }
                                }
                            }
                        });
                        
                        // Interpretaci√≥n
                        let colorInterp, nivelInterp, accionInterp;
                        
                        if (absCorr >= 0.7) {
                            colorInterp = '#00ff88';
                            nivelInterp = '‚úÖ CORRELACI√ìN MUY FUERTE';
                            accionInterp = correlacion > 0 
                                ? `<strong>Acci√≥n:</strong> Incrementar ${kpiNames[varX]} impactar√° directamente en ${kpiNames[varY]}. Prioriza esta m√©trica.`
                                : `<strong>Acci√≥n:</strong> Relaci√≥n inversa. Si aumenta ${kpiNames[varX]}, disminuye ${kpiNames[varY]}. Eval√∫a si es deseable.`;
                        } else if (absCorr >= 0.4) {
                            colorInterp = '#ffd700';
                            nivelInterp = '‚ö†Ô∏è CORRELACI√ìN MODERADA';
                            accionInterp = `<strong>Acci√≥n:</strong> Hay relaci√≥n pero otros factores tambi√©n influyen. Combina con otras m√©tricas.`;
                        } else {
                            colorInterp = '#ff6b6b';
                            nivelInterp = '‚ùå CORRELACI√ìN D√âBIL';
                            accionInterp = `<strong>Acci√≥n:</strong> Estas variables son mayormente independientes. Enfoca esfuerzos por separado.`;
                        }
                        
                        document.getElementById('interpretacion-scatter').innerHTML = `
                            <div style="display: grid; grid-template-columns: auto 1fr; gap: 20px; align-items: center;">
                                <div style="text-align: center;">
                                    <div style="font-size: 3em; color: ${colorInterp}; font-weight: 900;">${correlacion.toFixed(3)}</div>
                                    <div style="color: ${colorInterp}; font-weight: 700;">${nivelInterp}</div>
                                </div>
                                <div>
                                    <div style="margin-bottom: 10px;">
                                        <strong>üìä An√°lisis:</strong> ${correlacion > 0 ? 'Relaci√≥n POSITIVA' : 'Relaci√≥n NEGATIVA'}. 
                                        Cuando ${kpiNames[varX]} ${correlacion > 0 ? 'aumenta' : 'aumenta'}, 
                                        ${kpiNames[varY]} tiende a ${correlacion > 0 ? 'aumentar' : 'disminuir'}.
                                    </div>
                                    <div>${accionInterp}</div>
                                    <div style="margin-top: 10px; font-size: 0.9em; color: #aaa;">
                                        üìà Basado en ${scatterData.length} registros del per√≠odo seleccionado.
                                    </div>
                                </div>
                            </div>
                        `;
                        
                        // Scroll suave al gr√°fico
                        document.getElementById('scatter-personalizado').scrollIntoView({ behavior: 'smooth', block: 'center' });
                        
                    })
                    .obtenerDatosActividad();
            }
        })
        .obtenerDatosCorrelacion(filtros);
}
// Parsear fecha desde formato dd/MM/yyyy
function parsearFecha(fechaStr) {
    const partes = fechaStr.split('/');
    return new Date(partes[2], partes[1] - 1, partes[0]);
}

// Limpiar filtros
function limpiarFiltrosTransacciones() {
    window.filtroAgenteTx = 'todos';
    window.filtroTipoTx = 'todos';
    window.filtroFechaInicioTx = '';
    window.filtroFechaFinTx = '';
    renderizarRegistroTransacciones();
}

// Abrir modal de edici√≥n con TODOS los datos
function editarTransaccionModal(id, gci, comision, pct) {
    // Cargar lista de agentes
    google.script.run
        .withSuccessHandler(function(agentes) {
            let optionsHTML = '<option value="">-- Seleccionar --</option>';
            agentes.forEach(a => {
                optionsHTML += `<option value="${a.id}|${a.nombre}">${a.nombre}</option>`;
            });
            document.getElementById('edit-tx-agente').innerHTML = optionsHTML;
            
            // Buscar la transacci√≥n completa
            const tx = window.transaccionesGlobales.find(t => t.id === id);
            if (!tx) {
                mostrarNotificacion('Transacci√≥n no encontrada', 'error');
                return;
            }
            
            // Rellenar todos los campos
            document.getElementById('edit-tx-id').value = tx.id;
            document.getElementById('edit-tx-fecha').value = convertirFechaParaInput(tx.fecha);
            
            // Seleccionar agente
            const agenteOption = Array.from(document.getElementById('edit-tx-agente').options)
                .find(opt => opt.text === tx.agente);
            if (agenteOption) agenteOption.selected = true;
            
            document.getElementById('edit-tx-tipo').value = tx.tipo;
            document.getElementById('edit-tx-lado').value = tx.lado;
            document.getElementById('edit-tx-gci').value = tx.gci;
            document.getElementById('edit-tx-volumen').value = tx.volumenNegocio;
            document.getElementById('edit-tx-pct').value = tx.pctComision;
            document.getElementById('edit-tx-comision').value = tx.comision;
            document.getElementById('edit-tx-descripcion').value = tx.descripcion.replace(/TRANSACCI√ìN.*\|/g, '').trim();
            
            document.getElementById('modal-editar-tx').classList.add('active');
            document.body.classList.add('modal-open');
        })
        .obtenerListaAgentes();
}

// Convertir fecha de dd/MM/yyyy a yyyy-MM-dd
function convertirFechaParaInput(fechaStr) {
    const partes = fechaStr.split('/');
    return `${partes[2]}-${partes[1].padStart(2, '0')}-${partes[0].padStart(2, '0')}`;
}

// Calcular comisi√≥n autom√°ticamente
function calcularComisionEdicion() {
    const gci = parseFloat(document.getElementById('edit-tx-gci').value) || 0;
    const pct = parseFloat(document.getElementById('edit-tx-pct').value) || 0;
    
    // ‚úÖ CORRECCI√ìN CR√çTICA: Comisi√≥n = (GCI √ó %) / 100
    const comision = (gci * pct / 100).toFixed(2);
    
    document.getElementById('edit-tx-comision').value = comision;
}

// Guardar edici√≥n COMPLETA
function guardarEdicionTransaccionCompleta(event) {
    event.preventDefault();
    
    const agenteSeleccionado = document.getElementById('edit-tx-agente').value.split('|');
    
    const datosActualizados = {
        id: document.getElementById('edit-tx-id').value,
        fecha: document.getElementById('edit-tx-fecha').value,
        idAgente: agenteSeleccionado[0],
        nombreAgente: agenteSeleccionado[1],
        tipo: document.getElementById('edit-tx-tipo').value,
        lado: document.getElementById('edit-tx-lado').value,
        gci: parseFloat(document.getElementById('edit-tx-gci').value),
        volumenNegocio: parseFloat(document.getElementById('edit-tx-volumen').value) || 0,
        pctComision: parseFloat(document.getElementById('edit-tx-pct').value),
        comision: parseFloat(document.getElementById('edit-tx-comision').value),
        descripcion: document.getElementById('edit-tx-descripcion').value
    };
    
    google.script.run
        .withSuccessHandler(function(respuesta) {
            if (respuesta.success) {
                mostrarNotificacion('‚úÖ Transacci√≥n actualizada completamente', 'success');
                document.getElementById('modal-editar-tx').classList.remove('active');
                document.body.classList.remove('modal-open');
                renderizarRegistroTransacciones();
            } else {
                mostrarNotificacion('‚ùå Error: ' + respuesta.error, 'error');
            }
        })
        .withFailureHandler(function(error) {
            mostrarNotificacion('‚ùå Error: ' + error.message, 'error');
        })
        .editarTransaccionCompleta(datosActualizados);
}

// Anular transacci√≥n
function anularTransaccionConfirm(id) {
    // Crear modal de confirmaci√≥n custom (sin alert)
    const modalConfirm = document.createElement('div');
    modalConfirm.innerHTML = `
        <div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.8); z-index: 10000; display: flex; align-items: center; justify-content: center;">
            <div style="background: var(--color-surface); padding: 30px; border-radius: 15px; max-width: 500px; text-align: center; border: 2px solid #ff4444;">
                <div style="font-size: 3em; margin-bottom: 10px;">‚ö†Ô∏è</div>
                <div style="font-size: 1.3em; font-weight: 700; margin-bottom: 15px; color: #ff4444;">Anular Transacci√≥n</div>
                <div style="margin-bottom: 20px; line-height: 1.5;">
                    ¬øEst√°s seguro de que quieres anular esta transacci√≥n?<br>
                    <strong>Esto pondr√° el GCI y comisiones en 0.</strong>
                </div>
                <div style="display: flex; gap: 15px; justify-content: center;">
                    <button onclick="this.closest('div').parentElement.remove()" class="btn" style="background: #555;">‚ùå Cancelar</button>
                    <button onclick="ejecutarAnulacionTransaccion('${id}'); this.closest('div').parentElement.remove();" class="btn" style="background: #ff4444;">‚úÖ S√≠, Anular</button>
                </div>
            </div>
        </div>
    `;
    document.body.appendChild(modalConfirm);
}

function ejecutarAnulacionTransaccion(id) {
    google.script.run
        .withSuccessHandler(function(respuesta) {
            if (respuesta.success) {
                mostrarNotificacion('‚úÖ Transacci√≥n anulada', 'success');
                renderizarRegistroTransacciones();
            } else {
                mostrarNotificacion('‚ùå Error: ' + respuesta.error, 'error');
            }
        })
        .withFailureHandler(function(error) {
            mostrarNotificacion('‚ùå Error: ' + error.message, 'error');
        })
        .anularTransaccion(id);
}

// Exportar CSV
function exportarTransaccionesCSV() {
    const transacciones = window.transaccionesGlobales || [];
    
    if (transacciones.length === 0) {
        mostrarNotificacion('No hay transacciones para exportar', 'error');
        return;
    }
    
    // Aplicar filtros actuales
    let datos = transacciones;
    
    if (window.filtroAgenteTx && window.filtroAgenteTx !== 'todos') {
        datos = datos.filter(t => t.agente === window.filtroAgenteTx);
    }
    
    if (window.filtroTipoTx && window.filtroTipoTx !== 'todos') {
        datos = datos.filter(t => t.tipo === window.filtroTipoTx);
    }
    
    if (window.filtroFechaInicioTx) {
        const fechaInicio = new Date(window.filtroFechaInicioTx);
        datos = datos.filter(t => parsearFecha(t.fecha) >= fechaInicio);
    }
    
    if (window.filtroFechaFinTx) {
        const fechaFin = new Date(window.filtroFechaFinTx);
        datos = datos.filter(t => parsearFecha(t.fecha) <= fechaFin);
    }
    
    // Construir CSV
    let csv = 'ID;Fecha;Agente;Tipo;Lado;GCI;Volumen_Negocio;Comision;Pct_Comision;Descripcion\n';
    
    datos.forEach(t => {
        csv += `${t.id};${t.fecha};${t.agente};${t.tipo};${t.lado};${t.gci};${t.volumenNegocio};${t.comision};${t.pctComision};${t.descripcion.replace(/;/g, ',')}\n`;
    });
    
    // Descargar archivo
    const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
    const link = document.createElement('a');
    const url = URL.createObjectURL(blob);
    link.setAttribute('href', url);
    link.setAttribute('download', `Transacciones_${new Date().toISOString().split('T')[0]}.csv`);
    link.style.visibility = 'hidden';
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
    
    mostrarNotificacion(`‚úÖ Exportadas ${datos.length} transacciones`, 'success');
}
// Cargar datos de Beneficio Neto
function cargarDatosBeneficio() {
    const filtros = calcularFiltrosPeriodo(periodoActual, 'gerente');
    
    google.script.run
        .withSuccessHandler(function(resultado) {
            if (resultado.success) {
                window.datosBeneficioGlobal = resultado;
                
                const beneficio = resultado.beneficioNeto;
                const pct = resultado.porcentajeBeneficio;
                const color = pct >= 50 ? '#00ff88' : pct >= 30 ? '#ffd700' : '#ff6b6b';
                
                document.getElementById('kpi-beneficio').textContent = beneficio.toLocaleString('es-ES', {maximumFractionDigits: 0}) + '‚Ç¨';
                document.getElementById('kpi-beneficio').style.color = color;
                
                document.getElementById('kpi-beneficio-pct').innerHTML = `Margen: ${pct.toFixed(1)}%`;
                document.getElementById('kpi-beneficio-pct').style.color = color;
            }
        })
        .obtenerBeneficioNeto(filtros);
}

// Cargar datos de Transacciones
function cargarDatosTransacciones() {
    const filtros = calcularFiltrosPeriodo(periodoActual, 'gerente');
    
    google.script.run
        .withSuccessHandler(function(resultado) {
            if (resultado.success) {
                window.datosTransaccionesGlobal = resultado;
                
                const stats = resultado.stats;
                
                document.getElementById('kpi-transacciones-total').textContent = stats.total;
                
                const detalle = `
                    üè† ${stats.vendedor} Vendedor | 
                    üîë ${stats.comprador} Comprador | 
                    ü§ù ${stats.ambos} Ambos
                `;
                document.getElementById('kpi-transacciones-detalle').innerHTML = detalle;
            }
        })
        .obtenerEstadisticasTransacciones(filtros);
}

// Llamar estas funciones al cargar el dashboard
// A√±ade estas l√≠neas donde cargas los dem√°s datos del dashboard
cargarDatosBeneficio();
cargarDatosTransacciones();
function mostrarGraficoBeneficio() {
    if (!window.datosBeneficioGlobal) {
        mostrarNotificacion('‚ö†Ô∏è Cargando datos de beneficio...', 'error');
        return;
    }
    
    const resultado = window.datosBeneficioGlobal;
    
    // Crear modal
    const modal = document.createElement('div');
    modal.className = 'modal active';
    modal.innerHTML = `
        <div class="modal-content" style="max-width: 1200px; height: auto; max-height: 90vh; overflow-y: auto;">
            <span class="modal-close" onclick="this.closest('.modal').remove(); document.body.classList.remove('modal-open');">√ó</span>
            <div class="modal-body">
                <div class="section-title">üí∞ Evoluci√≥n de Beneficio Neto</div>
                
                <!-- RESUMEN GLOBAL -->
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; margin-bottom: 25px;">
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center;">
                        <div style="font-size: 0.85em; color: #aaa;">üí∞ GCI Total</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: #00ff88;">${resultado.gciTotal.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</div>
                    </div>
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center;">
                        <div style="font-size: 0.85em; color: #aaa;">üí∏ Comisiones Pagadas</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: #ff6b6b;">${resultado.comisionesTotal.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</div>
                        <div style="font-size: 0.75em; color: #aaa; margin-top: 3px;">
                            ${resultado.gciTotal > 0 ? ((resultado.comisionesTotal / resultado.gciTotal) * 100).toFixed(1) : 0}% del GCI
                        </div>
                    </div>
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center;">
                        <div style="font-size: 0.85em; color: #aaa;">üè¢ Gastos Operativos</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: #ffd700;">${resultado.gastosOperativos.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</div>
                        <div style="font-size: 0.75em; color: #aaa; margin-top: 3px;">
                            ${resultado.gciTotal > 0 ? ((resultado.gastosOperativos / resultado.gciTotal) * 100).toFixed(1) : 0}% del GCI
                        </div>
                    </div>
                    <div style="background: var(--color-surface); padding: 15px; border-radius: 10px; text-align: center; border: 2px solid ${resultado.porcentajeBeneficio >= 40 ? '#00ff88' : resultado.porcentajeBeneficio >= 25 ? '#ffd700' : '#ff6b6b'};">
                        <div style="font-size: 0.85em; color: ${resultado.porcentajeBeneficio >= 40 ? '#00ff88' : resultado.porcentajeBeneficio >= 25 ? '#ffd700' : '#ff6b6b'};">‚úÖ Beneficio Neto</div>
                        <div style="font-size: 1.8em; font-weight: 700; color: ${resultado.porcentajeBeneficio >= 40 ? '#00ff88' : resultado.porcentajeBeneficio >= 25 ? '#ffd700' : '#ff6b6b'};">
                            ${resultado.beneficioNeto.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨
                        </div>
                        <div style="font-size: 0.9em; margin-top: 3px; font-weight: 700; color: ${resultado.porcentajeBeneficio >= 40 ? '#00ff88' : resultado.porcentajeBeneficio >= 25 ? '#ffd700' : '#ff6b6b'};">
                            Margen: ${resultado.porcentajeBeneficio.toFixed(1)}%
                        </div>
                    </div>
                </div>
                
                <!-- GR√ÅFICO L√çNEAS -->
                <div class="chart-container" style="height: 400px; margin-bottom: 25px;">
                    <canvas id="chart-beneficio-lineas"></canvas>
                </div>
                
                <!-- GR√ÅFICO BARRAS - BENEFICIO POR MES -->
                <div class="chart-container" style="height: 350px; margin-bottom: 25px;">
                    <canvas id="chart-beneficio-barras"></canvas>
                </div>
                
                <!-- LEYENDA -->
                <div style="background: rgba(255,255,255,0.05); padding: 15px; border-radius: 10px;">
                    <div style="font-weight: 700; margin-bottom: 10px; color: #fff;">üìä Leyenda de Margen de Beneficio</div>
                    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 10px; font-size: 0.9em;">
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 20px; height: 20px; background: #00ff88; border-radius: 3px;"></div>
                            <span><strong>Excelente:</strong> ‚â• 40%</span>
                        </div>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 20px; height: 20px; background: #ffd700; border-radius: 3px;"></div>
                            <span><strong>Regular:</strong> 25% - 40%</span>
                        </div>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 20px; height: 20px; background: #ff6b6b; border-radius: 3px;"></div>
                            <span><strong>Bajo:</strong> < 25%</span>
                        </div>
                    </div>
                    <div style="margin-top: 15px; padding: 10px; background: rgba(102,126,234,0.1); border-radius: 5px; border-left: 3px solid #667eea;">
                        <strong>üéØ Objetivo:</strong> Mantener un margen de beneficio neto > 40% del GCI total para asegurar la salud financiera del negocio.
                    </div>
                </div>
            </div>
        </div>
    `;
    
    document.body.appendChild(modal);
    document.body.classList.add('modal-open');
    
    // Preparar datos mensuales
    const meses = ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'];
    const datosGCI = [];
    const datosComisiones = [];
    const datosGastos = [];
    const datosBeneficio = [];
    const datosPorcentaje = [];
    
    for (let mes = 1; mes <= 12; mes++) {
        const d = resultado.datosMensuales[mes];
        datosGCI.push(d.gci);
        datosComisiones.push(d.comisiones);
        datosGastos.push(d.gastos);
        datosBeneficio.push(d.beneficio);
        
        // Calcular porcentaje del mes
        const pct = d.gci > 0 ? ((d.beneficio / d.gci) * 100) : 0;
        datosPorcentaje.push(pct);
    }
    
    // Crear gr√°ficos
    setTimeout(() => {
        // Gr√°fico 1: L√≠neas - Evoluci√≥n
        new Chart(document.getElementById('chart-beneficio-lineas'), {
            type: 'line',
            data: {
                labels: meses,
                datasets: [
                    {
                        label: 'GCI',
                        data: datosGCI,
                        borderColor: '#00ff88',
                        backgroundColor: 'rgba(0,255,136,0.1)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true
                    },
                    {
                        label: 'Comisiones',
                        data: datosComisiones,
                        borderColor: '#ff6b6b',
                        backgroundColor: 'rgba(255,107,107,0.1)',
                        borderWidth: 2,
                        tension: 0.4
                    },
                    {
                        label: 'Gastos',
                        data: datosGastos,
                        borderColor: '#ffd700',
                        backgroundColor: 'rgba(255,215,0,0.1)',
                        borderWidth: 2,
                        tension: 0.4
                    },
                    {
                        label: 'Beneficio Neto',
                        data: datosBeneficio,
                        borderColor: '#667eea',
                        backgroundColor: 'rgba(102,126,234,0.2)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: { color: '#fff', font: { size: 12 } }
                    },
                    title: {
                        display: true,
                        text: 'Evoluci√≥n Mensual - GCI vs Costes',
                        color: '#fff',
                        font: { size: 16, weight: 'bold' }
                    }
                },
                scales: {
                    x: {
                        ticks: { color: '#fff' },
                        grid: { color: 'rgba(255,255,255,0.1)' }
                    },
                    y: {
                        ticks: { 
                            color: '#fff',
                            callback: function(value) {
                                return value.toLocaleString('es-ES') + '‚Ç¨';
                            }
                        },
                        grid: { color: 'rgba(255,255,255,0.1)' }
                    }
                }
            }
        });
        
        // Gr√°fico 2: Barras - Beneficio y % por mes
        new Chart(document.getElementById('chart-beneficio-barras'), {
            type: 'bar',
            data: {
                labels: meses,
                datasets: [
                    {
                        label: 'Beneficio (‚Ç¨)',
                        data: datosBeneficio,
                        backgroundColor: datosPorcentaje.map(pct => {
                            if (pct >= 40) return 'rgba(0,255,136,0.8)';
                            if (pct >= 25) return 'rgba(255,215,0,0.8)';
                            return 'rgba(255,107,107,0.8)';
                        }),
                        borderColor: '#fff',
                        borderWidth: 1,
                        yAxisID: 'y'
                    },
                    {
                        label: 'Margen %',
                        data: datosPorcentaje,
                        type: 'line',
                        borderColor: '#667eea',
                        backgroundColor: 'rgba(102,126,234,0.2)',
                        borderWidth: 3,
                        tension: 0.4,
                        yAxisID: 'y1',
                        pointRadius: 5,
                        pointBackgroundColor: '#667eea'
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        labels: { color: '#fff', font: { size: 12 } }
                    },
                    title: {
                        display: true,
                        text: 'Beneficio (‚Ç¨) y Margen (%) por Mes',
                        color: '#fff',
                        font: { size: 16, weight: 'bold' }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) label += ': ';
                                if (context.datasetIndex === 0) {
                                    label += context.parsed.y.toLocaleString('es-ES') + '‚Ç¨';
                                } else {
                                    label += context.parsed.y.toFixed(1) + '%';
                                }
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        ticks: { color: '#fff' },
                        grid: { display: false }
                    },
                    y: {
                        type: 'linear',
                        position: 'left',
                        ticks: { 
                            color: '#fff',
                            callback: function(value) {
                                return value.toLocaleString('es-ES') + '‚Ç¨';
                            }
                        },
                        grid: { color: 'rgba(255,255,255,0.1)' },
                        title: {
                            display: true,
                            text: 'Beneficio (‚Ç¨)',
                            color: '#fff'
                        }
                    },
                    y1: {
                        type: 'linear',
                        position: 'right',
                        ticks: { 
                            color: '#667eea',
                            callback: function(value) {
                                return value.toFixed(0) + '%';
                            }
                        },
                        grid: { display: false },
                        title: {
                            display: true,
                            text: 'Margen %',
                            color: '#667eea'
                        },
                        min: 0,
                        max: 100
                    }
                }
            }
        });
    }, 100);
}
function mostrarGraficoTransacciones() {
    if (!window.datosTransaccionesGlobal) {
        mostrarNotificacion('‚ö†Ô∏è Cargando datos de transacciones...', 'error');
        return;
    }
    
    const resultado = window.datosTransaccionesGlobal;
    const stats = resultado.stats;
    
    // Crear modal
    const modal = document.createElement('div');
    modal.className = 'modal active';
    modal.innerHTML = `
        <div class="modal-content" style="max-width: 1200px; height: auto; max-height: 90vh; overflow-y: auto;">
            <span class="modal-close" onclick="this.closest('.modal').remove(); document.body.classList.remove('modal-open');">√ó</span>
            <div class="modal-body">
                <div class="section-title">üìä An√°lisis Completo de Transacciones</div>
                
                <!-- RESUMEN POR LADO -->
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 15px; margin-bottom: 25px;">
                    <div style="background: var(--color-surface); padding: 20px; border-radius: 10px; border-left: 4px solid #667eea;">
                        <div style="font-size: 0.9em; color: #667eea; margin-bottom: 5px;">üè† VENDEDOR</div>
                        <div style="font-size: 2em; font-weight: 700; margin: 10px 0;">${stats.vendedor}</div>
                        <div style="font-size: 0.85em; color: #aaa;">GCI: ${stats.gciVendedor.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</div>
                        <div style="font-size: 0.85em; color: #aaa;">Volumen: ${stats.volumenVendedor.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</div>
                        <div style="font-size: 0.85em; color: #aaa;">Ticket: ${stats.vendedor > 0 ? (stats.volumenVendedor / stats.vendedor).toFixed(0) : 0}‚Ç¨</div>
                    </div>
                    
                    <div style="background: var(--color-surface); padding: 20px; border-radius: 10px; border-left: 4px solid #ffd700;">
                        <div style="font-size: 0.9em; color: #ffd700; margin-bottom: 5px;">üîë COMPRADOR</div>
                        <div style="font-size: 2em; font-weight: 700; margin: 10px 0;">${stats.comprador}</div>
                        <div style="font-size: 0.85em; color: #aaa;">GCI: ${stats.gciComprador.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</div>
                        <div style="font-size: 0.85em; color: #aaa;">Volumen: ${stats.volumenComprador.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</div>
                        <div style="font-size: 0.85em; color: #aaa;">Ticket: ${stats.comprador > 0 ? (stats.volumenComprador / stats.comprador).toFixed(0) : 0}‚Ç¨</div>
                    </div>
                    
                    <div style="background: var(--color-surface); padding: 20px; border-radius: 10px; border-left: 4px solid #00ff88;">
                        <div style="font-size: 0.9em; color: #00ff88; margin-bottom: 5px;">ü§ù AMBOS LADOS</div>
                        <div style="font-size: 2em; font-weight: 700; margin: 10px 0;">${stats.ambos}</div>
                        <div style="font-size: 0.85em; color: #aaa;">GCI: ${stats.gciAmbos.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</div>
                        <div style="font-size: 0.85em; color: #aaa;">Volumen: ${stats.volumenAmbos.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</div>
                        <div style="font-size: 0.85em; color: #aaa;">Ticket: ${stats.ambos > 0 ? (stats.volumenAmbos / stats.ambos).toFixed(0) : 0}‚Ç¨</div>
                    </div>
                    
                    <div style="background: var(--color-surface); padding: 20px; border-radius: 10px; border: 2px solid #fff;">
                        <div style="font-size: 0.9em; color: #fff; margin-bottom: 5px;">üìà TOTAL</div>
                        <div style="font-size: 2em; font-weight: 700; margin: 10px 0;">${stats.total}</div>
                        <div style="font-size: 0.85em; color: #aaa;">GCI: ${stats.gciTotal.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</div>
                        <div style="font-size: 0.85em; color: #aaa;">Volumen: ${stats.volumenTotal.toLocaleString('es-ES', {maximumFractionDigits:0})}‚Ç¨</div>
                        <div style="font-size: 0.85em; color: #aaa;">Ticket: ${stats.total > 0 ? (stats.volumenTotal / stats.total).toFixed(0) : 0}‚Ç¨</div>
                    </div>
                </div>
                
                <!-- GR√ÅFICOS -->
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 25px;">
                    <div class="chart-container" style="height: 350px;">
                        <div style="font-weight: 700; margin-bottom: 10px; text-align: center;">üìä Transacciones por Mes</div>
                        <canvas id="chart-tx-mensuales"></canvas>
                    </div>
                    <div class="chart-container" style="height: 350px;">
                        <div style="font-weight: 700; margin-bottom: 10px; text-align: center;">üí∞ GCI por Lado</div>
                        <canvas id="chart-tx-gci"></canvas>
                    </div>
                </div>
                
                <!-- LEYENDA -->
                <div style="background: rgba(255,255,255,0.05); padding: 15px; border-radius: 10px;">
                    <div style="font-weight: 700; margin-bottom: 10px; color: #fff;">üìä Leyenda de Transacciones</div>
                    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 10px; font-size: 0.9em;">
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 20px; height: 20px; background: #00ff88; border-radius: 3px;"></div>
                            <span><strong>Excelente:</strong> ‚â• 15 tx</span>
                        </div>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 20px; height: 20px; background: #ffd700; border-radius: 3px;"></div>
                            <span><strong>Regular:</strong> 8 - 15 tx</span>
                        </div>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 20px; height: 20px; background: #ff6b6b; border-radius: 3px;"></div>
                            <span><strong>Bajo:</strong> < 8 tx</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    `;
    
    document.body.appendChild(modal);
    document.body.classList.add('modal-open');
    
    // Preparar datos
    const meses = ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'];
    const datosVendedor = [];
    const datosComprador = [];
    const datosAmbos = [];
    
    for (let mes = 1; mes <= 12; mes++) {
        const d = resultado.mensuales[mes];
        datosVendedor.push(d.vendedor);
        datosComprador.push(d.comprador);
        datosAmbos.push(d.ambos);
    }
    
    setTimeout(() => {
        // Gr√°fico 1: Transacciones por mes (barras apiladas)
        new Chart(document.getElementById('chart-tx-mensuales'), {
            type: 'bar',
            data: {
                labels: meses,
                datasets: [
                    {
                        label: 'Vendedor',
                        data: datosVendedor,
                        backgroundColor: 'rgba(102,126,234,0.8)',
                        borderColor: '#667eea',
                        borderWidth: 1
                    },
                    {
                        label: 'Comprador',
                        data: datosComprador,
                        backgroundColor: 'rgba(255,215,0,0.8)',
                        borderColor: '#ffd700',
                        borderWidth: 1
                    },
                    {
                        label: 'Ambos',
                        data: datosAmbos,
                        backgroundColor: 'rgba(0,255,136,0.8)',
                        borderColor: '#00ff88',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        labels: { color: '#fff', font: { size: 11 } }
                    }
                },
                scales: {
                    x: {
                        stacked: true,
                        ticks: { color: '#fff', font: { size: 10 } },
                        grid: { display: false }
                    },
                    y: {
                        stacked: true,
                        ticks: { color: '#fff' },
                        grid: { color: 'rgba(255,255,255,0.1)' }
                    }
                }
            }
        });
        
        // Gr√°fico 2: GCI por lado (doughnut)
        new Chart(document.getElementById('chart-tx-gci'), {
            type: 'doughnut',
            data: {
                labels: ['Vendedor', 'Comprador', 'Ambos'],
                datasets: [{
                    data: [stats.gciVendedor, stats.gciComprador, stats.gciAmbos],
                    backgroundColor: [
                        'rgba(102,126,234,0.8)',
                        'rgba(255,215,0,0.8)',
                        'rgba(0,255,136,0.8)'
                    ],
                    borderColor: ['#667eea', '#ffd700', '#00ff88'],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { color: '#fff', font: { size: 12 } }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const value = context.parsed;
                                const total = stats.gciTotal;
                                const pct = ((value / total) * 100).toFixed(1);
                                return `${context.label}: ${value.toLocaleString('es-ES')}‚Ç¨ (${pct}%)`;
                            }
                        }
                    }
                }
            }
        });
    }, 100);
}
function crearGraficoDetalleComparativo(canvasId, labels, dataRealizado, dataObjetivo, dataHistorico, titulo) {
    const ctx = document.getElementById(canvasId);
    if (!ctx) return;
    
    // Destruir gr√°fico previo si existe para evitar superposiciones
    if (chartInstances[canvasId]) {
        chartInstances[canvasId].destroy();
    }

    chartInstances[canvasId] = new Chart(ctx, {
        type: 'bar', // Tipo base bar para permitir mezcla
        data: {
            labels: labels,
            datasets: [
                {
                    type: 'bar',
                    label: 'A√±o Anterior',
                    data: dataHistorico,
                    backgroundColor: 'rgba(255, 255, 255, 0.1)', // Gris muy sutil
                    borderColor: 'rgba(255, 255, 255, 0.3)',
                    borderWidth: 1,
                    barPercentage: 0.6,
                    order: 3 // Al fondo
                },
                {
                    type: 'line',
                    label: 'Objetivo 2025',
                    data: dataObjetivo,
                    borderColor: '#ffd700', // Amarillo
                    borderWidth: 2,
                    borderDash: [5, 5], // L√≠nea discontinua
                    pointRadius: 0, // Sin puntos para limpiar
                    fill: false,
                    tension: 0.4,
                    order: 1
                },
                {
                    type: 'line',
                    label: 'Realizado 2025',
                    data: dataRealizado,
                    borderColor: '#00ff88', // Verde KW
                    backgroundColor: 'rgba(0, 255, 136, 0.15)', // Relleno verde suave
                    borderWidth: 3,
                    pointBackgroundColor: '#00ff88',
                    pointRadius: 4,
                    fill: true,
                    tension: 0.4,
                    order: 0 // Al frente
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            interaction: {
                mode: 'index',
                intersect: false,
            },
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: { color: '#ccc', font: { size: 11 } }
                },
                title: {
                    display: false // Ya tenemos t√≠tulo en HTML
                },
                tooltip: {
                    backgroundColor: 'rgba(0,0,0,0.9)',
                    titleColor: '#fff',
                    bodyFont: { size: 13 },
                    callbacks: {
                        label: function(context) {
                            let label = context.dataset.label || '';
                            if (label) {
                                label += ': ';
                            }
                            if (context.parsed.y !== null) {
                                // Formato moneda si el t√≠tulo incluye 'GCI' o 'Ticket'
                                if(titulo.includes('GCI') || titulo.includes('Ticket')) {
                                    label += context.parsed.y.toLocaleString('es-ES') + ' ‚Ç¨';
                                } else {
                                    label += Math.round(context.parsed.y);
                                }
                            }
                            return label;
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: { color: 'rgba(255,255,255,0.05)' },
                    ticks: { color: '#aaa' }
                },
                x: {
                    grid: { display: false },
                    ticks: { color: '#aaa' }
                }
            }
        }
    });
}
